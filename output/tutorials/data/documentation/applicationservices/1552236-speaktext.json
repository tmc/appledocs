        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The speech channel through which speech is to be spoken.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "chan"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A pointer to the first byte of text to spoken. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "textBuf"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of bytes of text to spoken. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "textBytes"
        }
      ]
    },
    {
      "content": [
        {
