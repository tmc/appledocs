{
  "abstract": [
    {
      "text": "Lay out vertical text horizontally in your app when people turn on the Prefer Horizontal",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "Text setting.",
      "type": "text"
    }
  ],
