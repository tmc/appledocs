{
  "abstract": [
    {
      "text": "Create an app extension to maintain your app’s indexes and regenerate",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "them as needed.",
      "type": "text"
    }
  ],
