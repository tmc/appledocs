  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Choice objects are properties of the ",
              "type": "text"
            },
            {
              "code": "choices",
              "type": "codeVoice"
            },
            {
              "text": " global variable and represent the installation choices defined in a distribution package.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The name of each property of the ",
              "type": "text"
            },
            {
              "code": "choices",
              "type": "codeVoice"
            },
            {
              "text": " array corresponds to the ",
              "type": "text"
            },
            {
              "code": "choice-id",
              "type": "codeVoice"
            },
            {
              "text": " attribute of each of the distribution’s installation choices (see ",
              "type": "text"
            },
            {
              "identifier": "devLink-1733778",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " for more information). Therefore, a specific choice is accessed this way:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "choices.<choice-id>"
          ],
          "metadata": {
            "anchor": "2556490",
            "title": "Listing 1"
          },
          "syntax": "javascript",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "code": "<choice-id>",
              "type": "codeVoice"
            },
            {
              "text": " represents the identifier of the desired choice in the installation definition. For example, to access the ",
              "type": "text"
            },
            {
              "code": "selected",
              "type": "codeVoice"
            },
            {
              "text": " property of a choice with ",
              "type": "text"
            },
            {
              "code": "'choice_a'",
              "type": "codeVoice"
            },
            {
              "text": " as its identifier, you would use the following expression:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "choices.['choice_a'].selected"
          ],
          "metadata": {
            "anchor": "2556492",
            "title": "Listing 2"
          },
          "syntax": "javascript",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
