          "content": [
            {
              "inlineContent": [
                {
                  "text": "An array of options for customizing your tipâ€™s datastore location and default frequency control interval.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "configuration"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "This function must be called before tips display in your app.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "inlineContent": [
            {
              "text": "Call this function during app initialization. By default, all tips persist to a default location",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with a display frequency of ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/ConfigurationOption/DisplayFrequency/immediate",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@main",
            "struct SampleApp: App {",
            "    init() {",
            "        do {",
            "            // Configure tips in the app.",
            "            try Tips.configure()",
            "        }",
            "        catch {",
            "            // Handle TipKit errors",
            "            print(\"Error initializing TipKit \\(error.localizedDescription)\")",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "To change the default location of where your tips persist use the convenience method ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/ConfigurationOption/datastoreLocation(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "To change the display frequency use the convenience method ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/ConfigurationOption/displayFrequency(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "do {",
            "    // Configure tips in the app.",
            "    try Tips.configure([",
            "        .datastoreLocation(.groupContainer(identifier: \"MyGroupContainer\")),",
            "        .displayFrequency(.hourly)",
            "    ])",
            "}",
            "catch {",
            "    // Handle TipKit errors",
            "    print(\"Error initializing TipKit \\(error.localizedDescription)\")",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
