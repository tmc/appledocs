    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You create a tip view by providing a tip along with an optional arrow edge and action handler.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The tip is a type that conforms to the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tip",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " protocol.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The arrow edge is a directional arrow pointing away from the tip.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The action is a closure that executes when the user triggers a tip’s button.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, display a tip view, above an image, with an arrow edge along the bottom:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Define your tip’s content as a structure conforming to the ",
                      "type": "text"
                    },
                    {
                      "code": "Tip",
                      "type": "codeVoice"
                    },
                    {
                      "text": " protocol.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create an instance your tip as a variable in the view containing the feature you want to highlight.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create an instance of a ",
                      "type": "text"
                    },
                    {
                      "code": "TipView",
                      "type": "codeVoice"
                    },
                    {
                      "text": ", near the feature you want to highlight, passing in the instance your tip’s content, along with an optional arrow edge.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Then configure and load the tips for your app by calling ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/configure(_:)",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Use ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.TipKit/documentation/TipKit/TipUIView",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " and ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.TipKit/documentation/TipKit/TipNSView",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " when adding tips to UIView and NSView hierarchies.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Important",
          "style": "important",
          "type": "aside"
        },
        {
          "code": [
            "import SwiftUI",
            "import TipKit",
            "",
            "// Define your tip's content.",
            "struct SampleTip: Tip {",
            "    var title: Text {",
            "        Text(\"Save as a Favorite\")",
            "    }",
            "",
            "    var message: Text? {",
            "        Text(\"Your favorite backyards always appear at the top of the list.\")",
            "    }",
            "",
            "    var image: Image? {",
            "        Image(systemName: \"star\")",
            "    }",
            "}",
            "",
            "struct SampleView: View {",
            "    // Create an instance of your tip.",
            "    var tip = SampleTip()",
            "",
            "    var body: some View {",
            "        VStack {",
            "            // Place the tip view near the feature you want to highlight.",
            "            // Tips.configure(options:) must be called before your tip will be eligible for display.",
            "            TipView(tip, arrowEdge: .bottom)",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
