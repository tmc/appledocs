    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "To configure the current style for tips in a view hierarchy, use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/SwiftUI/View/tipViewStyle(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " modifier and specify a type that conforms to ",
              "type": "text"
            },
            {
              "code": "TipViewStyle",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "tipviewstyle_headline-style",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Customize the layout and style of your tips by creating a custom ",
              "type": "text"
            },
            {
              "code": "TipViewStyle",
              "type": "codeVoice"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct HeadlineTipViewStyle: TipViewStyle {",
            "    func makeBody(configuration: TipViewStyle.Configuration) -> some View {",
            "        VStack(alignment: .leading) {",
            "            HStack {",
            "                Text(\"TIP\").font(.system(.headline).smallCaps())",
            "                Spacer()",
            "                Button(action: { configuration.tip.invalidate(reason: .tipClosed) }) {",
            "                    Image(systemName: \"xmark\").scaledToFit()",
            "                }",
            "            }",
            "",
            "            Divider().frame(height: 1.0)",
            "",
            "            HStack(alignment: .top) {",
            "                configuration.image?",
            "                    .resizable()",
            "                    .aspectRatio(contentMode: .fit)",
            "                    .frame(width: 48.0, height: 48.0)",
            "",
            "                VStack(alignment: .leading, spacing: 8.0) {",
            "                    configuration.title?.font(.headline)",
            "                    configuration.message?.font(.subheadline)",
            "",
            "                    ForEach(configuration.actions) { action in",
            "                        Button(action: action.handler) {",
            "                            action.label().foregroundStyle(.blue)",
            "                        }",
            "                    }",
            "                }",
            "            }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/SwiftUI/View/tipViewStyle(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " modifier to apply your style to all tips within a view hierarchy:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct AddWorkoutView: View {",
            "    var body: some View {",
            "        VStack {",
            "            TipView(AddWorkoutTip())",
            "                .tipViewStyle(HeadlineTipViewStyle())",
            "",
            "            Text(\"Workout Samples\")",
            "            WorkoutSampleList()",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "For UIKit and AppKit apps, the ",
              "type": "text"
            },
            {
              "code": "viewStyle",
              "type": "codeVoice"
            },
            {
              "text": " property can be used for specifying a custom ",
              "type": "text"
            },
            {
              "code": "TipViewStyle",
              "type": "codeVoice"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "let addWorkoutTipView = TipUIView(AddWorkoutTip())",
            "addWorkoutTipView.viewStyle = HeadlineTipViewStyle()",
            "addSubview(addWorkoutTipView)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
