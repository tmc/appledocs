    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this option to automatically invalidate a tip after it has been displayed for a specified time interval.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This is a cumulative value; if a tip specifies a 2 minute maximum display duration and is displayed for 1 minute on Monday",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and 1 minute on Tuesday it will be automatically invalidated and no longer appear.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Tip views have a minimum display duration of 60 seconds before they can be automatically",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "invalidated by ",
              "type": "text"
            },
            {
              "code": "MaxDisplayDuration",
              "type": "codeVoice"
            },
            {
              "text": " in order to avoid appearing and disappearing too quickly.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "By default tips have no maximum display duration.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct FavoriteBackyardTip: Tip {",
            "    var options: [any Option] {",
            "        // Tip will automatically be invalidated ",
            "        // after it has been displayed for 5 minutes.",
            "        MaxDisplayDuration(300.0)",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
