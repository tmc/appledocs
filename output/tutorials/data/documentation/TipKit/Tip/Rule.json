    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use rules to control when your tips display.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Parameter-Rules",
          "level": 3,
          "text": "Parameter Rules",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/Parameter",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " based rules track app state. For example, to display a tip when someone logs in:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Define the app state you want to track using the ",
                      "type": "text"
                    },
                    {
                      "code": "@Parameter",
                      "type": "codeVoice"
                    },
                    {
                      "text": " macro.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Define a rule based on that app state using the ",
                      "type": "text"
                    },
                    {
                      "code": "#Rule",
                      "type": "codeVoice"
                    },
                    {
                      "text": " macro.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Set the conditions for when the tip displays in the macro closure.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "code": [
            "struct FavoriteLandmarkTip: Tip {",
            "    // Define the app state you want to track.",
            "    @Parameter",
            "    static var userIsLoggedIn: Bool = false",
            "",
            "    var rules: [Rule] {",
            "        // Define a rule based on the app state.",
            "        #Rule(Self.$userIsLoggedIn) {",
            "            // Set the conditions for when the tip displays.",
            "            $0 == true",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "anchor": "Event-Rules",
          "level": 3,
          "text": "Event Rules",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Event based rules track user interactions. For example, to display a tip only when a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/Event",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " occurs three or more times:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Define the user interaction you want to track as a ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.TipKit/documentation/TipKit/Tips/Event",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " with a unique ",
                      "type": "text"
                    },
                    {
                      "code": "id",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Define a rule based on that interaction using a ",
                      "type": "text"
                    },
                    {
                      "code": "#Rule",
                      "type": "codeVoice"
                    },
                    {
                      "text": " macro.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Set the conditions for when the tip displays in the macro closure.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "code": [
            "struct FavoriteLandmarkTip: Tip {",
            "    // Define the user interaction you want to track.",
            "    static let didViewLandmark: Event = Event(id: \"didViewLandmark\")",
            "",
            "    var rules: [Rule] {",
            "        // Define a rule based on the interaction.",
            "        #Rule(Self.didViewLandmark) {",
            "            // Set the conditions for when the tip displays.",
            "            $0.donations.count > 3",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "If no rules are defined within a tip content structure, the tip displays until dismissed or they exceed the threshold of their display frequency.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
  ],
