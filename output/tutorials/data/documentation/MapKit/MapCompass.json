      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You can use ",
              "type": "text"
            },
            {
              "code": "MapCompass",
              "type": "codeVoice"
            },
            {
              "text": " with a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.mapkit/documentation/MapKit/Map",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " as a stand alone view, as shown in the following example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "    struct CompassButtonTestView: View {",
            "        @Namespace var mapScope",
            "        var body: some View {",
            "        VStack {",
            "                Map(scope: mapScope)",
            "                MapCompass(scope: mapScope)",
            "            }",
            "            .mapScope(mapScope)",
            "        }",
            "    }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can also use ",
              "type": "text"
            },
            {
              "code": "MapCompass",
              "type": "codeVoice"
            },
            {
              "text": " with the ",
              "type": "text"
            },
            {
              "code": "Map/mapControls(_:)",
              "type": "codeVoice"
            },
            {
              "text": ", modifier, as shown below:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "    Map()",
            "        .mapControls {",
            "            MapCompass()",
            "        }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Tapping the compass reorients the map so that North is at the top of the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.mapkit/documentation/MapKit/Map",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " view.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
