{
  "abstract": [
    {
      "text": "Add support for browser apps to install alternative distribution apps from websites.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
        "doc://com.apple.ManagedAppDistribution/documentation/MarketplaceKit"
      ]
    ]
  },
  "identifier": {
    "interfaceLanguage": "swift",
    "url": "doc://com.apple.ManagedAppDistribution/documentation/appdistribution/enabling-alternative-distribution-app-installation-in-a-browser"
  },
  "kind": "article",
