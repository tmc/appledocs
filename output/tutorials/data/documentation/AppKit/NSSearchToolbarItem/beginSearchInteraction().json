        {
          "inlineContent": [
            {
              "text": "If the system displays a compressed search field, starting the search interaction expands the field to the width stored in the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.appkit/documentation/AppKit/NSSearchToolbarItem/preferredWidthForSearchField",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " property and moves the keyboard focus into the search field. Use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.appkit/documentation/AppKit/NSSearchToolbarItem/beginSearchInteraction()",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.appkit/documentation/AppKit/NSSearchToolbarItem/endSearchInteraction()",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to programmatically control a search.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
