      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The components to search for when aligning after the user finishes scrolling.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "components"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The behavior for aligning to major values. When the user swipes on the chart, the chart will snap to the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "next or previous major unit depending on the swipe direction. When enabled, the default major unit is a page.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "majorAlignment"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The scroll limit behavior.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "limitBehavior"
        }
      ]
