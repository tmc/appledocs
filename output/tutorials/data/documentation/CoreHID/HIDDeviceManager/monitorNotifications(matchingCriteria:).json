    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A set of ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.CoreHID/documentation/CoreHID/HIDDeviceManager/DeviceMatchingCriteria",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " for matching devices connected to the system. Criteria are considered separately, if one set is specified that matches one device, with a second set that matches five other devices, all six devices are matched. Matched devices result in a ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.CoreHID/documentation/CoreHID/HIDDeviceManager/Notification/deviceMatched(_:)",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " notification. Matched devices are ready for connections using ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.CoreHID/documentation/CoreHID/HIDDeviceClient",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " until a ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.CoreHID/documentation/CoreHID/HIDDeviceManager/Notification/deviceRemoved(_:)",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " notification is received for the device.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "matchingCriteria"
        }
      ]
    },
    {
      "content": [
