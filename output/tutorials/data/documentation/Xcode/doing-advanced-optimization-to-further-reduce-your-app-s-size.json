    {
      "text": "Optimize your app’s asset files, adopt on-demand resources, and reduce the size of",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "app updates.",
      "type": "text"
    }
  ],
