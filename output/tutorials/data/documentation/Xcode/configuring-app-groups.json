{
  "abstract": [
    {
      "text": "Enable communication and data sharing between multiple installed apps created",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "by the same developer.",
      "type": "text"
    }
  ],
