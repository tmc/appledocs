{
  "abstract": [
    {
      "text": "Segment your video stream and create media playlists for successful transmission",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "with Apple’s provided tools.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
        "doc://com.apple.HTTP-Live-Streaming/documentation/HTTP-Live-Streaming"
      ]
    ]
  },
