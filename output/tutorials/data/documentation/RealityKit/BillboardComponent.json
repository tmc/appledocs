    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "BillboardComponent",
              "type": "codeVoice"
            },
            {
              "text": " automatically adjusts an entity’s orientation so",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "that its z-axis keeps pointing in the direction of the main camera in a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "RealityKit scene.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Add a ",
              "type": "text"
            },
            {
              "code": "BillboardComponent",
              "type": "codeVoice"
            },
            {
              "text": " to any entity by passing it to an entity’s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/Entity/ComponentSet/set(_:)-8sii2",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " method.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "entity.components.set(BillboardComponent())"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The entity immediately reorients itself so that it faces the scene’s active",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "camera.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "alignments": [
            "center",
            "center"
          ],
          "header": "row",
          "rows": [
            [
              [
                {
                  "inlineContent": [
                    {
                      "text": "Without ",
                      "type": "text"
                    },
                    {
                      "code": "BillboardComponent",
                      "type": "codeVoice"
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              [
                {
                  "inlineContent": [
                    {
                      "text": "With ",
                      "type": "text"
                    },
                    {
                      "code": "BillboardComponent",
                      "type": "codeVoice"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            ],
            [
              [
                {
                  "inlineContent": [
                    {
                      "identifier": "billboardcomponent-robot-side-above-without",
                      "type": "image"
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              [
                {
                  "inlineContent": [
                    {
                      "identifier": "billboardcomponent-robot-side-above-with",
                      "type": "image"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            ]
          ],
          "type": "table"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An entity with ",
                  "type": "text"
                },
                {
                  "code": "BillboardComponent",
                  "type": "codeVoice"
                },
                {
                  "text": " doesn’t provide access to its end orientation.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "Requesting the entity’s orientation through its transform returns only the unaltered orientation.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Important",
          "style": "important",
          "type": "aside"
        },
        {
          "inlineContent": [
            {
              "text": "For an example of how to animate ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/BillboardComponent/blendFactor",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/BillboardAction",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
