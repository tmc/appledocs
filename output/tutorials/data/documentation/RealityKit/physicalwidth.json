  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This property informs the runtime how wide the image is in the physical environment. The runtime calculates the height based on the image’s aspect ratio.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Because this property describes a real-world width, the prim’s transform hierarchy doesn’t modify this property’s value.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Declaration",
          "level": 3,
          "text": "Declaration",
          "type": "heading"
        },
        {
          "code": [
            "uniform double physicalWidth"
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "anchor": "Define-a-reference-images-width",
          "level": 3,
          "text": "Define a reference image’s width",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "To recognize an image in the real world, the runtime requires a prim to specify how wide the image is in the physical environment.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "def Preliminary_ReferenceImage \"ImageReference\"",
            "{",
            "    uniform double physicalWidth = 12",
            "    ...",
            "}"
          ],
          "syntax": "other",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
