      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The visibility to use for the background.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "visibility"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following example hides the standard system background of the List.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "List {",
            "    Text(\"One\")",
            "    Text(\"Two\")",
            "    Text(\"Three\")",
            "}",
            ".scrollContentBackground(.hidden)"
          ],
          "syntax": null,
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "On macOS 15.0 and later, the visibility of the scroll background helps",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "achieve the seamless window/titlebar appearance for scroll views that",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "fill the window’s content view, or a pane’s full width and height.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "List",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "Form",
              "type": "codeVoice"
            },
            {
              "text": " have the seamless appearance by default, configurable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "by hiding the scroll background. ",
              "type": "text"
            },
            {
              "code": "ScrollView",
              "type": "codeVoice"
            },
            {
              "text": " can become seamless by",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "making the background visible.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
