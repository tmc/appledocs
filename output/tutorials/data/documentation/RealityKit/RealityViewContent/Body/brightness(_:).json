        {
          "inlineContent": [
            {
              "text": "A view that brightens this view by the specified amount.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "code": "brightness(_:)",
              "type": "codeVoice"
            },
            {
              "text": " to brighten the intensity of the colors in a view.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The example below shows a series of red squares, with their brightness",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "increasing from 0 (fully red) to 100% (white) in 20% increments.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct Brightness: View {",
            "    var body: some View {",
            "        HStack {",
            "            ForEach(0..<6) {",
            "                Color.red.frame(width: 60, height: 60, alignment: .center)",
            "                    .brightness(Double($0) * 0.2)",
            "                    .overlay(Text(\"\\(Double($0) * 0.2 * 100, specifier: \"%.0f\")%\"),",
            "                             alignment: .bottom)",
            "                    .border(Color.gray)",
            "            }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": null,
          "type": "codeListing"
        },
        {
          "inlineContent": [],
          "type": "paragraph"
        }
      ],
      "kind": "content"
