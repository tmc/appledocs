    "doc://com.apple.RealityKit/documentation/RealityKit/OrbitEntityAction/isOrientedToPath": {
      "abstract": [
        {
          "text": "A Boolean value that indicates whether the orbiting",
          "type": "text"
        },
        {
          "text": " ",
          "type": "text"
        },
        {
          "text": "object updates its orientation during the animation to orient itself",
          "type": "text"
        },
        {
          "text": " ",
          "type": "text"
        },
        {
          "text": "along the rotation path.",
          "type": "text"
        }
      ],
      "fragments": [
        {
          "kind": "keyword",
          "text": "var"
