    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "code": "DynamicLightShadowComponent",
              "type": "codeVoice"
            },
            {
              "text": " to control whether an entity casts shadows from",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "dynamic (virtual) lights.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Dynamic lights cast shadows on other virtual objects, but not on physical objects.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can add a dynamic light shadow component to any entity",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "that has a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ModelComponent",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " in its component set by adding a dynamic light shadow",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "component to the entity’s ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/Entity/components",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " property.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if let model = try? await ModelEntity(named: \"tv_retro\") {",
            "    let shadowComponent = DynamicLightShadowComponent(castsShadow: false)",
            "    model.components.set(shadowComponent)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You need to add the dynamic lights shadow component to each entity you want to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "apply the effect to because the dynamic light shadow component doesn’t apply to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "hierarchies.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "By default, without a dynamic light shadow component, entities cast",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "shadows from dynamic lights.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
