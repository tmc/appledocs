  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The default value is blank. Each instance of ",
              "type": "text"
            },
            {
              "code": "AudioAction",
              "type": "codeVoice"
            },
            {
              "text": " must specify an ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/auralmode",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Aural-Modes",
          "level": 3,
          "text": "Aural Modes",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Plays the audio in 3D space at the position of the affected object. If the device doesn’t support spatial audio, it falls back to mono. For best results in ",
                        "type": "text"
                      },
                      {
                        "code": "spatial",
                        "type": "codeVoice"
                      },
                      {
                        "text": " mode, supply audio files in mono.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "spatial",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Plays the audio without regard to the affected object’s 3D position. If the audio media contains any form of stereo or other multichannel sound, the runtime attempts to match this to the device’s output capabilities. Use this mode when an audio action doesn’t use the listener’s position to affect the music’s playback.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "nonSpatial",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Plays the audio in a spatial configuration that tracks rotation, but does not attenuate with distance.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "ambient",
                    "type": "codeVoice"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Declaration",
          "level": 3,
          "text": "Declaration",
          "type": "heading"
        },
        {
          "code": [
            "uniform token auralMode"
          ],
          "syntax": "other",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
