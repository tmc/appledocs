    },
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You can use a ",
              "type": "text"
            },
            {
              "code": "ReferenceComponent",
              "type": "codeVoice"
            },
            {
              "text": " to load other entities from files in your appâ€™s main bundle.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "This allows you to load complex scenes incrementally, resulting in more responsive apps.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "It also enables collaborative workflows so you can split a complex scene into separate pieces that",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "different teams own.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Use a ",
              "type": "text"
            },
            {
              "code": "ReferenceComponent",
              "type": "codeVoice"
            },
            {
              "text": " by adding it to an entity when building up a scene programmatically.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Then call ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/Entity/write(to:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to save the scene to a ",
              "type": "text"
            },
            {
              "code": ".reality",
              "type": "codeVoice"
            },
            {
              "text": " file.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "// Create the root entity.",
            "let root = Entity()",
            "",
            "// Create an entity that references another entity file.",
            "let earth = Entity()",
            "earth.setParent(root)",
            "",
            "// Add a reference to another entity that loads immediately",
            "// when the root entity loads.",
            "earth.components.set(ReferenceComponent(",
            "    named: \"Earth\",",
            "    loadingPolicy: .immediate))",
            "",
            "// Add a reference to another entity that loads on demand.",
            "let mars = Entity()",
            "mars.name = \"mars\"",
            "mars.components.set(ReferenceComponent(",
            "    named: \"Mars\",",
            "    loadingPolicy: .onDemand))",
            "",
            "// Write the root entity to a `.reality` file.",
            "try await root.write(to: fileURL)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "When your app loads the ",
              "type": "text"
            },
            {
              "code": ".reality",
              "type": "codeVoice"
            },
            {
              "text": " file, it can dynamically load referenced entities from files.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "For references that have a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ReferenceComponent/LoadingPolicy-swift.enum",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ReferenceComponent/LoadingPolicy-swift.enum/onDemand",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", you can use",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ReferenceComponent/loadReference(at:)-1en8b",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to load content on demand.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if let entity = root.findEntity(named: \"mars\") {",
            "    try ReferenceComponent.loadReference(at: entity)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Conversely, use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ReferenceComponent/releaseReference(at:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to unload content",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and free up memory.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
