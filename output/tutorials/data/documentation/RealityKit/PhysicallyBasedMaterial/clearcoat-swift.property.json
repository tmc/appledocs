    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "An entity in RealityKit can display a clearcoat, which is a separate",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "layer of transparent specular highlights used to simulate a clear",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "transparent coating, like the paint on a car, or the surface of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "lacquered objects. By default, materials don’t have clearcoat enabled.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Use this property to enable clearcoat rendering. Specifying any value",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "greater than ",
              "type": "text"
            },
            {
              "code": "0.0",
              "type": "codeVoice"
            },
            {
              "text": " turns clearcoat rendering on. A value of ",
              "type": "text"
            },
            {
              "code": "1.0",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "indicates a full clearcoat. RealityKit treats values above ",
              "type": "text"
            },
            {
              "code": "1.0",
              "type": "codeVoice"
            },
            {
              "text": " as if",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "they’re ",
              "type": "text"
            },
            {
              "code": "1.0",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can specify ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/PhysicallyBasedMaterial/clearcoat-swift.property",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "using a single ",
              "type": "text"
            },
            {
              "code": "Float",
              "type": "codeVoice"
            },
            {
              "text": " that applies to the entire material, or a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "UV-mapped grayscale image to provide different values for different",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "parts of an entity.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example specifies ",
              "type": "text"
            },
            {
              "code": "clearcoat",
              "type": "codeVoice"
            },
            {
              "text": " using a single value:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "material.clearcoat = .init(floatLiteral: 0.8)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "And this example shows how to specify ",
              "type": "text"
            },
            {
              "code": "clearcoat",
              "type": "codeVoice"
            },
            {
              "text": " using a UV-mapped",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "image texture:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if let clearcoatResource = try? TextureResource.load(named:\"entity_clearcoat\") {",
            "    let clearcoatMap = MaterialParameters.Texture(clearcoatResource)",
            "    material.clearcoat = .init(texture: clearcoatMap)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
