    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "When you enable clearcoat rendering for a material, RealityKit renders",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the clearcoat as a separate layer just above the surface of the entity.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can specify a clearcoat roughness value for the clearcoat to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "indicate how much the clearcoat scatters light that bounces off of it,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "which softens and spreads out the highlights.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can specify a single value that applies to the entire material, or",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "you can supply a UV-mapped image texture containing different roughness",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "values for different parts of the entity.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example sets the ",
              "type": "text"
            },
            {
              "code": "clearcoatRoughness",
              "type": "codeVoice"
            },
            {
              "text": " using a single",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "value:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "material.clearcoatRoughness = .init(floatLiteral: 0.5)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example shows how to set the ",
              "type": "text"
            },
            {
              "code": "clearcoatRoughness",
              "type": "codeVoice"
            },
            {
              "text": " using a UV-mapped",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "image:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if let clearcoatRoughnessResource = try?",
            "TextureResource.load(named: \"entity_cc_roughness\") {",
            "    let ccRoughnessMap = MaterialParameters.Texture(clearcoatRoughnessResource)",
            "    material.clearcoat = .init(texture: ccRoughnessMap)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
