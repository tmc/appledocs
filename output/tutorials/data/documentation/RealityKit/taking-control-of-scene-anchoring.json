{
  "abstract": [
    {
      "text": "Create a more interactive user experience by choosing exactly where to anchor Reality",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "Composer scenes.",
      "type": "text"
    }
  ],
