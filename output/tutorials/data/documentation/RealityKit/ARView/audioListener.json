      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Set the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.RealityKit/documentation/RealityKit/ARView/audioListener",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to the entity in the scene from whose",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "point of view RealityKit should render spatial audio.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "By default, the property is set to ",
              "type": "text"
            },
            {
              "code": "nil",
              "type": "codeVoice"
            },
            {
              "text": ", in which case the active",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "camera acts as the audio listener. This is usually what you want,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "because the camera typically mirrors the user’s point of view.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
