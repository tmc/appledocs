          "content": [
            {
              "inlineContent": [
                {
                  "text": "An entity in whose space the location is computed.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "A ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": " entity will result in world space.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "entity"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The 3D position identifying the location of the gesture in the space specified.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The location is typically the result of a centroid of touches for a gesture, unprojected onto the associated ",
              "type": "text"
            },
            {
              "code": "entity",
              "type": "codeVoice"
            },
            {
              "text": ", and then",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "converted into the space of the entity passed in, or world space if ",
              "type": "text"
            },
            {
              "code": "nil",
              "type": "codeVoice"
            },
            {
              "text": " is passed in.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
