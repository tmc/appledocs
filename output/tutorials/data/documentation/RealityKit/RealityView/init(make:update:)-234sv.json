      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An asynchronous closure that configures the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "initial content of the new ",
                  "type": "text"
                },
                {
                  "code": "RealityView",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "This closure is asynchronous to keep your app’s UI responsive while",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "you load content to populate this view.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "make"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An optional closure that updates the ",
                  "type": "text"
                },
                {
                  "code": "RealityView",
                  "type": "codeVoice"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "instance’s content as the view’s state changes.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "update"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "update",
              "type": "codeVoice"
            },
            {
              "text": " closure to modify entities in the scene",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "based on a Boolean state property, like in the following example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "RealityView { content in",
            "    content.add(boxEntity)",
            "} update: { content in",
            "    boxEntity.scale = isEnlarged ? .one * 2 : .one",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
