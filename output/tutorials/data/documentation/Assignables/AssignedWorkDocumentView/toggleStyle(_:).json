            {
              "inlineContent": [
                {
                  "text": "The toggle style to set. Use one of the built-in",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "values, like ",
                  "type": "text"
                },
                {
                  "code": "ToggleStyle/switch",
                  "type": "codeVoice"
                },
                {
                  "text": " or ",
                  "type": "text"
                },
                {
                  "code": "ToggleStyle/button",
                  "type": "codeVoice"
                },
                {
                  "text": ",",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "or a custom style that you define by creating a type that conforms",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "to the ",
                  "type": "text"
                },
                {
                  "code": "ToggleStyle",
                  "type": "codeVoice"
                },
                {
                  "text": " protocol.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "style"
        }
      ]
    },
    {
      "content": [
