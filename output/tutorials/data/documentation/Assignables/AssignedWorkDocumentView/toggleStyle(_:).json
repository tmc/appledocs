                }
              ]
            ],
            [
              [
                {
                  "inlineContent": [
                    {
                      "text": "iOS, iPadOS",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              [
                {
                  "inlineContent": [],
                  "type": "paragraph"
                }
              ]
            ],
            [
              [
                {
                  "inlineContent": [
                    {
                      "text": "macOS",
