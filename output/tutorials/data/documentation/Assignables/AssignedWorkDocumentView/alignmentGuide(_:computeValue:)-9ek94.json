      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A ",
                  "type": "text"
                },
                {
                  "code": "VerticalAlignment",
                  "type": "codeVoice"
                },
                {
                  "text": " value at which to base the offset.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "g"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A closure that returns the offset value to apply to",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "this view.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "computeValue"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A view modified with respect to its vertical alignment",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "according to the computation performed in the method’s closure.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "code": "alignmentGuide(_:computeValue:)",
              "type": "codeVoice"
            },
            {
              "text": " to calculate specific offsets",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to reposition views in relationship to one another. You can return a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "constant or can use the ",
              "type": "text"
            },
            {
              "code": "ViewDimensions",
              "type": "codeVoice"
            },
            {
              "text": " argument to the closure to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "calculate a return value.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "In the example below, the weather emoji are offset 20 points from the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "vertical center of the ",
              "type": "text"
            },
            {
              "code": "HStack",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "VStack {",
            "    Text(\"Today's Weather\")",
            "        .font(.title)",
            "        .border(.gray)",
            "",
            "    HStack {",
            "        Text(\"🌧\")",
            "            .alignmentGuide(VerticalAlignment.center) { _ in -20 }",
            "            .border(.gray)",
            "        Text(\"Rain & Thunderstorms\")",
            "            .border(.gray)",
            "        Text(\"⛈\")",
            "            .alignmentGuide(VerticalAlignment.center) { _ in 20 }",
            "            .border(.gray)",
            "    }",
            "}"
          ],
          "syntax": null,
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Changing the alignment of one view may have effects on surrounding",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "views. Here the offset values inside a stack and its contained views is",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the difference of their absolute offsets.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
