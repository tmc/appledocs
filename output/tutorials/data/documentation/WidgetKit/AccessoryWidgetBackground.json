      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this view to provide a standardized background for your accessory",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "widgets. Place the view in",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/SwiftUI/ZStack",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " behind your",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "widget’s content.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ZStack {",
            "    AccessoryWidgetBackground()",
            "    VStack {",
            "        Text(\"MON\")",
            "            .font(.caption)",
            "            .widgetAccented()",
            "        Text(\"6\")",
            "            .font(.title)",
            "    }",
            "}"
          ],
          "syntax": "Swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The system only displays this view inside a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.WidgetKit/documentation/WidgetKit/WidgetFamily/accessoryCircular",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ",",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.WidgetKit/documentation/WidgetKit/WidgetFamily/accessoryCorner",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", or",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.WidgetKit/documentation/WidgetKit/WidgetFamily/accessoryRectangular",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " widget. In any other",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "context, the system displays an empty view instead.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
