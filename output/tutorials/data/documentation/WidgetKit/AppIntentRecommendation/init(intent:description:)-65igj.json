              "inlineContent": [
                {
                  "text": "On platforms that offer a dedicated user interface for configuring",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "widgets — for example, iOS or macOS — ",
                  "type": "text"
                },
                {
                  "code": "AppIntentRecommendation",
                  "type": "codeVoice"
                },
                {
                  "text": " is",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "inactive.",
                  "type": "text"
                }
