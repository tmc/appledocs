    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The key to a localized string to display as the title of",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "the button.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "titleKey"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The action your button performs when pressed.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "action"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A view that is rendered when the button’s action is performed.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "actionLabel"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the action label to additionally customize the appearance of this",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "control button while its action is performed",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ControlWidgetButton(",
            "    \"Open Trunk\",",
            "    action: OpenTrunkIntent()",
            ") { isActive in",
            "    Image(systemName: \"car.side.rear.open.crop\")",
            "    if isActive {",
            "        Text(\"Opening...\")",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The example above produces a control button that in control center will",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "display “Open Trunk” as its title and the provided SF symbol.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "While the control is performing its action it will show the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "“Opening…” subtitle.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
