            {
              "identifier": "doc://com.apple.applesearchads/documentation/apple_search_ads/Ad",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " using your ",
              "type": "text"
            },
            {
              "code": "creativeId",
              "type": "codeVoice"
            },
            {
              "text": ". See ",
              "type": "text"
