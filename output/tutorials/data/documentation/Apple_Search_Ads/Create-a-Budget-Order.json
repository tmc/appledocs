                    "    \"startDate\": \"2024-03-04T21:55:14.312Z\",",
                    "    \"endDate\": \"2024-03-04T21:55:14.312Z\",",
                    "    \"budget\": {",
                    "      \"amount\": \"300\",",
                    "      \"currency\": \"USD\"",
                    "    },",
                    "    \"orderNumber\": \"34562211\",",
                    "    \"clientName\": \"Trip Trek\",",
