      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.metal/documentation/Metal/MTLCounterSampleBuffer",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " instance that stores the GPU hardware data.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "sampleBuffer"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An index within ",
                  "type": "text"
                },
                {
                  "code": "sampleBuffer",
                  "type": "codeVoice"
                },
                {
                  "text": " the command stores the data to.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "sampleIndex"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A Boolean value that indicates whether the command inserts a barrier before sampling the counter’s data.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "A barrier ensures that the commands you encode before this one complete before the GPU samples the hardware counters, but can negatively impact runtime performance.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Running this command without a barrier means the GPU can sample counters concurrently with other commands from the encoder.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Either way, the ",
                  "type": "text"
                },
                {
                  "code": "barrier",
                  "type": "codeVoice"
                },
                {
                  "text": " parameter for the command has no impact on sampling commands from other passes.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "barrier"
        }
      ]
    },
