            {
              "inlineContent": [
                {
                  "text": "A range of commands within ",
                  "type": "text"
                },
                {
                  "code": "indirectCommandBuffer",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
