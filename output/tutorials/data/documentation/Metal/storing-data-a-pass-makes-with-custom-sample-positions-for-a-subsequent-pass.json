{
  "abstract": [
    {
      "text": "Inform Metal when your app uses programmable sample positions for its depth render targets or copies MSAA depth data.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
