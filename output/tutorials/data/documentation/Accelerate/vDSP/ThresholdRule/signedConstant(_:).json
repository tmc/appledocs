        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.accelerate/documentation/Accelerate/vDSP/ThresholdRule/signedConstant(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to calculate a new vector where the threshold operation sets all source values below the threshold to the negated constant.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "let source: [Float] = [12, 13, 14, 15, 16, 17, 18]",
            "",
            "let destination = vDSP.threshold(source,",
            "                                 to: 15,",
            "                                 with: .signedConstant(99))",
            "",
            "// Prints \"[-99.0, -99.0, -99.0, 99.0, 99.0, 99.0, 99.0]\".",
            "print(destination)"
          ],
          "syntax": "swift",
          "type": "codeListing"
