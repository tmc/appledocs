        {
          "inlineContent": [
            {
              "text": "The function uses the following calculation to perform the conversion:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "alpha = 20;",
            "",
            "for (n = 0; n < N; ++n)",
            "    C[n] = alpha * log10(A[n] / B[0]);"
          ],
