    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This function calculates the maximum value and its corresponding index of the first ",
              "type": "text"
            },
            {
              "code": "N",
              "type": "codeVoice"
            },
            {
              "text": " elements of the input vector and writes the results to the output scalar parameters, ",
              "type": "text"
            },
            {
              "code": "C",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "I",
              "type": "codeVoice"
            },
            {
              "text": ", respectively.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "media-4465880",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following code shows an example of using this function:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "    let stride = vDSP_Stride(1)",
            "    ",
            "    let a: [Float] = [-1.5, 2.25, 3.6,",
            "                       0.2, -0.1, -4.3]",
            "    let n = vDSP_Length(a.count)",
            "    ",
            "    var c: Float = .nan",
            "    var i: vDSP_Length = 0",
            "    ",
            "    vDSP_maxvi(a,",
            "               stride,",
            "               &c,",
            "               &i,",
            "               n)",
            "    ",
            "    print(\"max\", c,",
            "          \"index\", i) // Prints \"max 3.6 index 2\"."
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
