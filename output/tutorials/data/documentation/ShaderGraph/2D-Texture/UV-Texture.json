        {
          "anchor": "Parameter-descriptions",
          "level": 2,
          "text": "Parameter descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The bias the node applys to all components of the texture. The node adds this parameter to the texture after it is multipled by the scale.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Bias",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The value to use if the texture cannot be read from the file.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Fallback",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The image file to use for the texture.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "File",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The scale the node applys to all components of the texture. The node multiplies the texture value by this parameter.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Scale",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The 2D coordinate at which the data is read in order to map the texture onto a surface. This node maps from st to uv image space. The ",
                        "type": "text"
                      },
                      {
                        "code": "(0,0)",
                        "type": "codeVoice"
                      },
                      {
                        "text": " coordinate in st image space maps to the ",
                        "type": "text"
                      },
                      {
                        "code": "(0,0)",
                        "type": "codeVoice"
                      },
                      {
                        "text": " coordinate in the ",
                        "type": "text"
                      },
                      {
                        "code": "uv",
                        "type": "codeVoice"
                      },
                      {
                        "text": " space which represents the lower-left-hand corner. The ",
                        "type": "text"
                      },
                      {
                        "code": "(1,1)",
                        "type": "codeVoice"
                      },
                      {
                        "text": " coordinate in st image space maps to the ",
                        "type": "text"
                      },
                      {
                        "code": "(1,1)",
                        "type": "codeVoice"
                      },
                      {
                        "text": " coordinate in ",
                        "type": "text"
                      },
                      {
                        "code": "uv",
                        "type": "codeVoice"
                      },
                      {
                        "text": " space which represents the upper-right-hand-corner.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "St",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The way that the node will handle ",
                        "type": "text"
                      },
                      {
                        "inlineContent": [
                          {
                            "text": "S",
                            "type": "text"
                          }
                        ],
                        "type": "emphasis"
                      },
                      {
                        "text": " values outside of the range of ",
                        "type": "text"
                      },
                      {
                        "code": "0-1",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Wrap S",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The way that the node will handle ",
                        "type": "text"
                      },
                      {
                        "inlineContent": [
                          {
                            "text": "T",
                            "type": "text"
                          }
                        ],
                        "type": "emphasis"
                      },
                      {
                        "text": " values outside of the range of ",
                        "type": "text"
                      },
                      {
                        "code": "0-1",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Wrap T",
                    "type": "text"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Output-descriptions",
          "level": 2,
          "text": "Output descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The ",
                        "type": "text"
                      },
                      {
                        "code": "Color4",
                        "type": "codeVoice"
                      },
                      {
                        "text": " output of the texture that contains a red, green, blue, and alpha component.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "RGBA",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The standard ",
                        "type": "text"
                      },
                      {
                        "code": "Color3",
                        "type": "codeVoice"
                      },
                      {
                        "text": " output of the texture that contains a red, green, and blue component.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "RGB",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Only the red component of the texture.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Read",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Only the green component of the texture.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Green",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Only the blue component of the texture.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Blue",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Only the alpha component of the texture.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Alpha",
                    "type": "text"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The Wrap parameters for the node tell the node how to handle S and T values outside of the normal range of ",
              "type": "text"
            },
            {
              "code": "0-1",
              "type": "codeVoice"
            },
            {
              "text": ". These inputs take one of four values to determine there behavior.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "black: Texture coordinates outside the normal range return black.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "clamp: Texture coordinates outside the normal range are clamped to the normal range. Any values greater than ",
                      "type": "text"
                    },
                    {
                      "code": "1",
                      "type": "codeVoice"
                    },
                    {
                      "text": " will be set to ",
                      "type": "text"
                    },
                    {
                      "code": "1",
                      "type": "codeVoice"
                    },
                    {
                      "text": " and any values less than ",
                      "type": "text"
                    },
                    {
                      "code": "0",
                      "type": "codeVoice"
                    },
                    {
                      "text": " will be set to ",
                      "type": "text"
                    },
                    {
                      "code": "0",
                      "type": "codeVoice"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "periodic: Texture coordinates outside the normal range will “wrap around”. This is effectively equivalent to modulo 1 being applied to the coordinates.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        }
      ],
      "kind": "content"
    }
