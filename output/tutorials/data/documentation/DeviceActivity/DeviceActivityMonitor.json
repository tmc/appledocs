    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "code": "DeviceActivityMonitor",
              "type": "codeVoice"
            },
            {
              "text": " provides the entry point into a device activity monitor extension.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You should subclass ",
              "type": "text"
            },
            {
              "code": "DeviceActivityMonitor",
              "type": "codeVoice"
            },
            {
              "text": " and designate your subclass as the principal class of your app extension.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following code implements ",
              "type": "text"
            },
            {
              "code": "DeviceActivityMonitor",
              "type": "codeVoice"
            },
            {
              "text": " in an app:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "class MyMonitorExtension: DeviceActivityMonitor {",
            "  let store = ManagedSettingsStore()",
            "",
            "  // You can use the `store` property to shield apps when an interval starts, ends, or meets a threshold.",
            "  override func intervalDidStart(for activity: DeviceActivityName) {",
            "      super.intervalDidStart(for: activity)",
            "",
            "      // Shield selected applications.",
            "      let model = MyModel()",
            "      let applications = model.selectionToShield.applications",
            "      store.shield.applications = applications.isEmpty ? nil : applications",
            "   }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Shielding an app dims the app’s icon on the homescreen and applies an hourglass symbol.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "When the app launches, the system covers it with a view that your app can configure.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
  ],
