{
  "abstract": [
    {
      "text": "Creates an object encapsulating locale and text-break information, for the purpose of finding boundaries in Unicode text.",
      "type": "text"
    }
  ],
  "deprecationSummary": [
    {
      "inlineContent": [
        {
          "text": "Use CFStringTokenizer (for locale-sensitive word, line, paragraph, and sentence breaks) and CFStringGetRangeOfComposedCharactersAtIndex (for cluster breaks) instead.",
          "type": "text"
        }
      ],
      "type": "paragraph"
    }
  ],
