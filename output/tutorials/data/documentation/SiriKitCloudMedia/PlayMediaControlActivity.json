    {
      "items": [
        {
          "attributes": [
            {
              "kind": "minimum",
              "value": "5"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of seconds the client plays a piece of content before sending a ",
                  "type": "text"
                },
                {
                  "code": "local.playing.elapsed",
                  "type": "codeVoice"
                },
                {
                  "text": " event.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "playElapsed",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "uint32"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "minimum",
              "value": "5"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of seconds the client waits before sending a subsequent ",
                  "type": "text"
                },
                {
                  "code": "local.playing.elapsed",
                  "type": "codeVoice"
                },
                {
                  "text": " event.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "playElapsedInterval",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "uint32"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "5"
            },
            {
              "kind": "minimum",
              "value": "5"
            },
            {
              "kind": "maximum",
              "value": "60"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The minimum pause duration, in seconds, that the client reports.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "playPaused",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "uint32"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Provide these values in a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.sirikitcloudmedia/documentation/SiriKitCloudMedia/Queue",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to configure when the client sends requests to your ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.sirikitcloudmedia/documentation/SiriKitCloudMedia/updateActivity",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " endpoint.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "If you specify both ",
              "type": "text"
            },
            {
              "code": "playElapsedInterval",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "playElapsed",
              "type": "codeVoice"
            },
            {
              "text": ", the client sends the first report after it plays ",
              "type": "text"
            },
            {
              "code": "playElapsed",
              "type": "codeVoice"
            },
            {
              "text": " seconds of content. Then it sends additional reports according to the ",
              "type": "text"
            },
            {
              "code": "playElapsedInterval",
              "type": "codeVoice"
            },
            {
              "text": ", counting from the beginning of the content. For example, if you specify ",
              "type": "text"
            },
            {
              "code": "45",
              "type": "codeVoice"
            },
            {
              "text": " for ",
              "type": "text"
            },
            {
              "code": "playElapsed",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "30",
              "type": "codeVoice"
            },
            {
              "text": " for ",
              "type": "text"
            },
            {
              "code": "playElapsedInterval",
              "type": "codeVoice"
            },
            {
              "text": ", the client sends reports after 45, 60, 90, and 120 seconds of playback.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "If you specify ",
              "type": "text"
            },
            {
              "code": "playElapsedInterval",
              "type": "codeVoice"
            },
            {
              "text": ", but not ",
              "type": "text"
            },
            {
              "code": "playElapsed",
              "type": "codeVoice"
            },
            {
              "text": ", the client uses the ",
              "type": "text"
            },
            {
              "code": "playElapsedInterval",
              "type": "codeVoice"
            },
            {
              "text": " for both.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
