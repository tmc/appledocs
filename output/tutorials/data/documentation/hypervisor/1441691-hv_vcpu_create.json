      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An argument that the hypervisor populates with the instance of a vCPU on a successful return. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "vcpu"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The pointer to the vCPU exit information. The function ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/hypervisor/1441231-hv_vcpu_run",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " updates this structure on return.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Apple silicon only.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "exit"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The configuration of the vCPU or ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": " for a default configuration.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Apple silicon only.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "config"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The vCPU creation flag. The available flags are ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/hypervisor/hv_vcpu_accel_rdpmc",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ", ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/hypervisor/hv_vcpu_tsc_relative",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ", and ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/hypervisor/hv_vcpu_default",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ". The default is ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/hypervisor/hv_vcpu_default",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Using the ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.documentation/documentation/hypervisor/hv_vcpu_tsc_relative",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " flag enables use of the Time-Stamp Counter (TSC) relative offset capabilities, but disables the default TSC for vCPUs that you create with this flag.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "name": "Note",
              "style": "note",
              "type": "aside"
            },
            {
              "inlineContent": [],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Intel-based Mac only.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "flags"
        }
      ]
    },
