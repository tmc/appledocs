      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this class to check and see whether the framework supports the language or language pairing",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "you want to offer as a translation. For example, to check if someoneâ€™s device supports a translation",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "you can do the following:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "func translationIsSupported(from source: Locale.Language, to target: Locale.Language) async -> Bool {",
            "    let availability = LanguageAvailability()",
            "    let status = await availability.status(from: source, to: target)",
            "    switch status {",
            "    case .installed, .supported:",
            "        return true",
            "    case .unsupported",
            "        return false",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
