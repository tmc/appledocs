      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This initializer traps if ",
              "type": "text"
            },
            {
              "code": "name",
              "type": "codeVoice"
            },
            {
              "text": " is ",
              "type": "text"
            },
            {
              "code": "MACH_PORT_NULL",
              "type": "codeVoice"
            },
            {
              "text": ", or if ",
              "type": "text"
            },
            {
              "code": "name",
              "type": "codeVoice"
            },
            {
              "text": " is",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "MACH_PORT_DEAD",
              "type": "codeVoice"
            },
            {
              "text": " and the ",
              "type": "text"
            },
            {
              "code": "RightType",
              "type": "codeVoice"
            },
            {
              "text": " is ",
              "type": "text"
            },
            {
              "code": "Mach.ReceiveRight",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "If the type of the right does not match the ",
              "type": "text"
            },
            {
              "code": "RightType",
              "type": "codeVoice"
            },
            {
              "text": " of the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "Mach.Port",
              "type": "codeVoice"
            },
            {
              "text": " being constructed, behavior is undefined.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The underlying port right will be automatically deallocated at the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "end of the ",
              "type": "text"
            },
            {
              "code": "Mach.Port",
              "type": "codeVoice"
            },
            {
              "text": " instanceâ€™s lifetime.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This initializer makes a syscall to guard the right.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
