    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The length in bytes to resize the file to.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "newSize"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Whether to retry the write operation",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "if it throws ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftSystem/documentation/System/Errno/interrupted",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ". The default is ",
                  "type": "text"
                },
                {
                  "code": "true",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "Pass ",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": " to try only once and throw an error upon interruption.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "retryOnInterrupt"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The file referenced by this file descriptor will by truncated (or extended) to ",
              "type": "text"
            },
            {
              "code": "newSize",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "If the current size of the file exceeds ",
              "type": "text"
            },
            {
              "code": "newSize",
              "type": "codeVoice"
            },
            {
              "text": ", any extra data is discarded. If the current",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "size of the file is smaller than ",
              "type": "text"
            },
            {
              "code": "newSize",
              "type": "codeVoice"
            },
            {
              "text": ", the file is extended and filled with zeros to the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "provided size.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This function requires that the file has been opened for writing.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "This function does not modify the current offset for any open file descriptors",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "associated with the file.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "inlineContent": [
            {
              "text": "The corresponding C function is ",
              "type": "text"
            },
            {
              "code": "ftruncate",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
