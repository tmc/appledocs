  "primaryContentSections": [
    {
      "declarations": [
        {
          "languages": [
            "data"
          ],
          "platforms": [
            "App Store Receipts"
          ],
          "tokens": [
            {
              "kind": "text",
              "text": "string is_in_billing_retry_period"
            }
          ]
        }
      ],
      "kind": "declarations"
    },
    {
      "kind": "possibleValues",
      "values": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The App Store is attempting to renew the subscription.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "1"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The App Store has stopped attempting to renew the subscription.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "0"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This field is returned in the JSON response, in the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/appstorereceipts/responsebody/pending_renewal_info",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " array.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This field indicates whether Apple is attempting to renew an expired subscription automatically. If the customer’s subscription failed to renew because the App Store was unable to complete the transaction, this value reflects whether the App Store is still trying to renew the subscription. ",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The subscription retry flag is solely indicative of whether a subscription is in a billing retry state. Use this value in conjunction with ",
              "type": "text"
            },
            {
              "code": "expiration_intent",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "expires_date",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "transaction_id",
              "type": "codeVoice"
            },
            {
              "text": " for more insight.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can use this field to:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Determine that the user has been billed successfully, if this field has been removed and there is a new transaction with a future ",
                      "type": "text"
                    },
                    {
                      "code": "expires_date",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Inform the user that there may be an issue with their billing information, if the value is ",
                      "type": "text"
                    },
                    {
                      "code": "“1”",
                      "type": "codeVoice"
                    },
                    {
                      "text": ". For example, an expired credit card or insufficient balance could prevent this customer's account from being billed. ",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Implement a grace period to improve recovery, if the value is ",
                      "type": "text"
                    },
                    {
                      "code": "“1”",
                      "type": "codeVoice"
                    },
                    {
                      "text": " and the ",
                      "type": "text"
                    },
                    {
                      "code": "expires_date",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is in the past. A grace period is free or limited subscription access while a subscriber is in a billing retry state. See ",
                      "type": "text"
                    },
                    {
                      "identifier": "link-3230757",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " from WWDC 2018 for more information.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
