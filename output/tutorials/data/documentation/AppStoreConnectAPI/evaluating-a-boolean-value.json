            },
            {
              "text": "0.0",
              "type": "text"
            },
            {
              "code": ", ",
              "type": "codeVoice"
            },
            {
              "text": "1.0",
              "type": "text"
            },
            {
              "code": ")",
              "type": "codeVoice"
            },
            {
              "text": " returns ",
              "type": "text"
            },
            {
              "code": "0.0",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "if (false, ",
              "type": "codeVoice"
            },
            {
              "text": "0.0",
              "type": "text"
            },
            {
              "code": ", ",
              "type": "codeVoice"
            },
