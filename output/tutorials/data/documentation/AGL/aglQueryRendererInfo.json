      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A pointer to a list of graphics devices to which you want to restrict the query. Pass ",
                  "type": "text"
                },
                {
                  "code": "NULL",
                  "type": "codeVoice"
                },
                {
                  "text": " to obtain information for all graphics devices on the system.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "gdevs"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of graphics devices in ",
                  "type": "text"
                },
                {
                  "code": "gdev",
                  "type": "codeVoice"
                },
                {
                  "text": ". Pass ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " if ",
                  "type": "text"
                },
