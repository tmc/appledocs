      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A rendering context returned by the function ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.agl/documentation/AGL/AGL-collection",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "ctx"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The width, in pixels, of the offscreen memory area.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "width"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The height, in pixels, of the offscreen memory area.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "height"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of bytes in each row of the offscreen memory area.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "rowbytes"
        },
        {
          "content": [
            {
