{
  "abstract": [
    {
      "text": "Use the Apple Pay JS API to check whether Apple Pay is available, to check whether a device has a payment credential provisioned in Wallet, and to determine when to display an Apple Pay button.",
      "type": "text"
    }
  ],
  "documentVersion": 0,
