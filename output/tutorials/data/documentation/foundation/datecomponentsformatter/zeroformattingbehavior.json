    "doc://com.apple.documentation/documentation/foundation/datecomponentsformatter/zeroformattingbehavior/1407414-droptrailing": {
      "abstract": [
        {
          "text": "The drop trailing zero units behavior. Units whose value is 0 are dropped starting at the end of the sequence. For example, when days, hours, minutes, and seconds are allowed, the abbreviated version of one hour is displayed as “0d 1h”. ",
          "type": "text"
        }
      ],
