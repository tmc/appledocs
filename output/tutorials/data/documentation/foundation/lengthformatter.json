          "content": [
            {
              "inlineContent": [
                {
                  "text": "As of iOS 10, macOS 10.12, tvOS 10, and watchOS 3, Foundation provides the ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/foundation/measurementformatter",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " class, which can be used to represent quantities of ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/foundation/unitlength",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " to provide equivalent functionality to ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/foundation/lengthformatter",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": ". You are encouraged to transition to these new Foundation Units and Measurements APIs whenever possible.",
                  "type": "text"
                }
              ],
