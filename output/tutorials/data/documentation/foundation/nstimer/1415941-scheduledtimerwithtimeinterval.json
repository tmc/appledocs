      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of seconds between firings of the timer. If ",
                  "type": "text"
                },
                {
                  "code": "ti",
                  "type": "codeVoice"
                },
                {
                  "text": " is less than or equal to ",
                  "type": "text"
                },
                {
                  "code": "0.0",
                  "type": "codeVoice"
                },
                {
                  "text": ", this method chooses the nonnegative value of ",
                  "type": "text"
                },
                {
                  "code": "0.0001",
                  "type": "codeVoice"
                },
                {
                  "text": " seconds instead.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "ti"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The invocation to use when the timer fires. The invocation object maintains a strong reference to its arguments until the timer is invalidated.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "invocation"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "If ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/yes",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": ", the timer will repeatedly reschedule itself until invalidated. If ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/objectivec/no",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": ", the timer will be invalidated after it fires.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "repeats"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A new ",
              "type": "text"
            },
            {
              "code": "NSTimer",
              "type": "codeVoice"
            },
            {
              "text": " object, configured according to the specified parameters.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "After ",
              "type": "text"
            },
            {
              "code": "ti",
              "type": "codeVoice"
            },
            {
              "text": " seconds have elapsed, the timer fires, invoking ",
              "type": "text"
            },
            {
              "code": "invocation",
              "type": "codeVoice"
            },
            {
              "text": ". ",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
