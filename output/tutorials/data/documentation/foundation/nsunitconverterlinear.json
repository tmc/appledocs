    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A linear equation for unit conversion takes the form ",
              "type": "text"
            },
            {
              "code": "y = mx + b",
              "type": "codeVoice"
            },
            {
              "text": ", such that the following is true:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "y",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is the value in terms of the base unit of the dimension.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "m",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is the known coefficient to use for this unit's conversion.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "x",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is the value in terms of the unit on which you call this method.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "b",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is the known constant to use for this unit's conversion.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "baseUnitValueFromValue:",
              "type": "codeVoice"
            },
            {
              "text": " method performs the conversion in the form of ",
              "type": "text"
            },
            {
              "code": "y = mx + b",
              "type": "codeVoice"
            },
            {
              "text": ", where ",
              "type": "text"
            },
            {
              "code": "x",
              "type": "codeVoice"
            },
            {
              "text": " represents the value passed in and ",
              "type": "text"
            },
            {
              "code": "y",
              "type": "codeVoice"
            },
            {
              "text": " represents the value returned. The ",
              "type": "text"
            },
            {
              "code": "valueFromBaseUnitValue:",
              "type": "codeVoice"
            },
            {
              "text": " method performs the inverse conversion in the form of ",
              "type": "text"
            },
            {
              "code": "x = (y - b) / m",
              "type": "codeVoice"
            },
            {
              "text": ", where ",
              "type": "text"
            },
            {
              "code": "y",
              "type": "codeVoice"
            },
            {
              "text": " represents the value passed in and ",
              "type": "text"
            },
            {
              "code": "x",
              "type": "codeVoice"
            },
            {
              "text": " represents the value returned.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, consider the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690842-fahrenheit",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " unit that ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " defines. The ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverter/1823668-baseunitvaluefromvalue",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " method calculates the value in the base unit, ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690766-kelvin",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", using the formula ",
              "type": "text"
            },
            {
              "code": "K = (0.55555555555556) × °F + 255.37222222222427",
              "type": "codeVoice"
            },
            {
              "text": ". The ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverter/1823657-valuefrombaseunitvalue",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " method calculates the value in ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunittemperature/1690842-fahrenheit",
              "isActive": false,
              "type": "reference"
            },
            {
              "text": " using the formula ",
              "type": "text"
            },
            {
              "code": "°F = (K — 255.37222222222427) / (0.55555555555556)",
              "type": "codeVoice"
            },
            {
              "text": ", where the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823683-coefficient",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " is ",
              "type": "text"
            },
            {
              "code": "(0.55555555555556)",
              "type": "codeVoice"
            },
            {
              "text": " and the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823598-constant",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " is ",
              "type": "text"
            },
            {
              "code": "255.37222222222427",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "NSUnitConverter *kelvinToFahrenheit = [[NSUnitConverterLinear alloc] initWithCoefficient:0.55555555555556 constant:255.37222222222427];"
          ],
          "metadata": {
            "anchor": "2557055",
            "title": "Listing 1"
          },
          "syntax": "occ",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Units that perform conversion using only a scale factor have a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823683-coefficient",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " equal to the scale factor and a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverterlinear/1823598-constant",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " equal to ",
              "type": "text"
            },
            {
              "code": "0",
              "type": "codeVoice"
            },
            {
              "text": ". For example, consider the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitlength/1856106-kilometers",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " unit ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitlength",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " defines. The ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverter/1823668-baseunitvaluefromvalue",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " method calculates the value in meters using the formula ",
              "type": "text"
            },
            {
              "code": "valueInMeters = 1000 * valueInKilometers + 0",
              "type": "codeVoice"
            },
            {
              "text": ". The ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsunitconverter/1823657-valuefrombaseunitvalue",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " calculates the value in kilometers using the formula ",
              "type": "text"
            },
            {
              "code": "valueInKilometers = (valueInMeters - 0) / 1000",
              "type": "codeVoice"
            },
            {
              "text": ", where the coefficient is ",
              "type": "text"
            },
            {
              "code": "1000",
              "type": "codeVoice"
            },
            {
              "text": " and the constant is ",
              "type": "text"
            },
            {
              "code": "0",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "NSUnitConverterLinear *kilometersToMeters = [[NSUnitConverterLinear alloc] initWithCoefficient:1000.0 constant:0.0];"
          ],
          "metadata": {
            "anchor": "2557059",
            "title": "Listing 2"
          },
          "syntax": "occ",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
