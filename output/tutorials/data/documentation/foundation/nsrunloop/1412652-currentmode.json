          "inlineContent": [
            {
              "text": "The receiver's current input mode. This method returns the current input mode ",
              "type": "text"
            },
            {
              "inlineContent": [
                {
                  "text": "only",
                  "type": "text"
                }
              ],
              "type": "emphasis"
            },
            {
              "text": " while the receiver is running; otherwise, it returns ",
              "type": "text"
            },
