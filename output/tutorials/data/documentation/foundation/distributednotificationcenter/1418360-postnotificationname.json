      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Name of the notification to post. Must not be ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "notificationName"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Sender of the notification. May be ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "notificationSender"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Dictionary containing additional information. May be ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Sandboxed apps can send notifications only if they do not contain a dictionary. If the sending application is in an App Sandbox, ",
                      "type": "text"
                    },
                    {
                      "code": "userInfo",
                      "type": "codeVoice"
                    },
                    {
                      "inlineContent": [
                        {
                          "text": " must",
                          "type": "text"
                        }
                      ],
                      "type": "emphasis"
                    },
                    {
                      "text": " be ",
                      "type": "text"
                    },
                    {
                      "code": "nil",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ],
              "style": "important",
              "type": "aside"
            }
          ],
          "name": "userInfo"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Specifies when to deliver the notification. When ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/swift/false",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": ", the receiver delivers notifications to their observers according to the suspended-notification behavior specified in the corresponding dispatch table entry. When ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/swift/true",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": ", the receiver delivers the notification immediately to its observers.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "deliverImmediately"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This is the preferred method for posting notifications.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "notificationInfo",
              "type": "codeVoice"
            },
            {
              "text": " dictionary is serialized as a property list, so it can be passed to another task. In the receiving task, it is deserialized back into a dictionary. This serialization imposes some restrictions on the objects that can be placed in the ",
              "type": "text"
            },
            {
              "code": "notificationInfo",
              "type": "codeVoice"
            },
            {
              "text": " dictionary. See XML Property Lists for details.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
