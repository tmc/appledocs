          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "stackTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <stackTemplate>",
            "        <banner>",
            "            <title>Available Action Movies</title>",
            "        </banner>",
            "        <collectionList>",
            "            <shelf>",
            "                <section>",
            "                    <lockup>",
            "                        <img src=\"path to images on your server/Car_Movie_250x375_A.png\" width=\"182\" height=\"274\" />",
            "                        <title>Movie 1</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img src=\"path to images on your server/Car_Movie_250x375_B.png\" width=\"182\" height=\"274\" />",
            "                        <title>Movie 2</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img src=\"path to images on your server/Car_Movie_250x375_C.png\" width=\"182\" height=\"274\" />",
            "                        <title>Movie 3</title>",
            "                    </lockup>",
            "                </section>",
            "            </shelf>",
            "            <shelf>",
            "                <section>",
            "                    <lockup>",
            "                        <img src=\"path to images on your servers/Space_Movie/Space_Movie_250x375_B.png\" width=\"182\" height=\"274\"></img>",
            "                        <title>Movie 4</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img src=\"path to images on your server/Space_Movie/Space_Movie_250x375_A.png\" width=\"182\" height=\"274\"></img>",
            "                        <title>Movie 5</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img src=\"path to images on your server/Space_Movie/Space_Movie_250x375_C.png\" width=\"182\" height=\"274\"></img>",
            "                        <title>Movie 6</title>",
            "                    </lockup>",
            "                </section>",
            "            </shelf>",
            "        </collectionList>",
            "    </stackTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "stacktemplate-2",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can also customize the stack template’s background content. To do so, embed a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "mediaContent ",
              "type": "codeVoice"
            },
            {
              "text": "element in a ",
              "type": "text"
            },
            {
              "code": "background ",
              "type": "codeVoice"
            },
            {
              "text": "element, as shown in this example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<background>",
            "    <mediaContent playbackMode=\"always\">",
            "        <img src=\"path to images on your server/Car_Movie.png\"/>",
            "    </mediaContent>",
            "</background>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "When you add a video in the background, playback starts 5 seconds after the page",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "is loaded. The video does not repeat.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
