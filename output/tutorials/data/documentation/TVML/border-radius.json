  },
  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "border-radius",
              "type": "codeVoice"
            },
            {
              "text": " style to apply rounded corners to elements. Here’s an example",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "that changes the border radius of an ",
              "type": "text"
            },
            {
              "code": "img",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<lockup>",
            "   <img style=\"border-radius:12\" src=\"path to image\" width=\"250\" height=\"376\" />",
            "   <title>Movie 1</title>",
            "</lockup>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Values-for-border-radius",
          "level": 3,
          "text": "Values for border-radius",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image whose corners are cropped to the specified radius.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "4-tuple",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image that is cropped to fit inside of a circle.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "circle",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image whose corners are cropped to create rounded corners with a large radius.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "large",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An images whose corners are cropped to create rounded corners with a medium radius.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "medium",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An images whose corners are cropped to create rounded corners with a small radius.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "small",
                    "type": "codeVoice"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "inlineContent": [
            {
              "text": "There are four ways to designate the border-radius style as a 4-tuple:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "border-radius: X1 X2 X3 X4",
                      "type": "codeVoice"
                    },
                    {
                      "text": "—Where X1 is applied to the top-left corner, X2 is",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "applied to the top-right corner, X3 is applied to the bottom-right corner, and X4",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "is applied to the bottom-left corner.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "border-radius: X1 X2 X3",
                      "type": "codeVoice"
                    },
                    {
                      "text": "—Where X1 is applied to the top-left corner, X2 is applied",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "to the top-right and bottom-left corners, and X3 is applied to the bottom-right corner.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "border-radius: X1 X2",
                      "type": "codeVoice"
                    },
                    {
                      "text": "—Where X1 is applied to the top-left and bottom-right corners,",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "and X2 is applied to the top-right and bottom-left corners.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "border-radius: X1",
                      "type": "codeVoice"
                    },
                    {
                      "text": "—Where X1 is applied to each corner.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
