      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Users can navigate left and right to move between ",
              "type": "text"
            },
            {
              "code": "menuBar",
              "type": "codeVoice"
            },
            {
              "text": " elements. Hereâ€™s an example",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of a menu bar with two items inside of a ",
              "type": "text"
            },
            {
              "code": "menuBarTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<menuBarTemplate>",
            "    <menuBar>",
            "        <menuItem id=\"navigation_top_movies\" data-identifier=\"list\">",
            "            <title>Top Movies</title>",
            "        </menuItem>",
            "        <menuItem id=\"navigation_genres\" data-identifier=\"index\">",
            "            <title>Genres</title>",
            "        </menuItem>",
            "    </menuBar>",
            "</menuBarTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can also add view elements to the left and right sides of the menu bar. The left",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "leadingAccessoryView",
              "type": "codeVoice"
            },
            {
              "text": " and right ",
              "type": "text"
            },
            {
              "code": "trailingAccessoryView",
              "type": "codeVoice"
            },
            {
              "text": " can be any simple element,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "including ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TVML/documentation/TVML/display-elements",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TVML/documentation/TVML/multimedia-elements",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TVML/documentation/TVML/text-elements",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Accessory views can also be row elements.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "To add the equivalent of a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/UIKit/UITabBar/leadingAccessoryView",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ",",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "add any supported element before the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TVML/documentation/TVML/menubar",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " opening tag, as shown here:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<menuBarTemplate>",
            "    <img src=\"path to images on your server/leading_icon.png\"/>",
            "    <menuBar>",
            "        <menuItem id=\"navigation_top_movies\" data-identifier=\"list\">",
            "            <title>Top Movies</title>",
            "        </menuItem>",
            "    </menuBar>",
            "</menuBarTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "To add the equivalent of a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/UIKit/UITabBar/trailingAccessoryView",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ",",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "add any supported element after the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.TVML/documentation/TVML/menubar",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " closing tag, as shown here:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<menuBarTemplate>",
            "    <menuBar>",
            "        <menuItem id=\"navigation_top_movies\" data-identifier=\"list\">",
            "            <title>Top Movies</title>",
            "        </menuItem>",
            "    </menuBar>",
            "    <img src=\"path to images on your server/trailing_icon.png\"/>",
            "</menuBarTemplate>"
