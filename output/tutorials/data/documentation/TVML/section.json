      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "section",
              "type": "codeVoice"
            },
            {
              "text": " element groups elements together so they can be treated as a single",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element for layout purposes. Hereâ€™s an example that uses a section to hold two movie",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "lockup",
              "type": "codeVoice"
            },
            {
              "text": " elements and places them in a ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "    <header>",
            "        <title>Viewers Also Watched</title>",
            "    </header>",
            "    <section>",
            "        <lockup>",
            "            <img src=\"path to images on your server/Car_Movie_250x375_A.png\" width=\"150\" height=\"226\" />",
            "            <title>Turn</title>",
            "        </lockup>",
            "        <lockup>",
            "            <img src=\"path to images on your server/Car_Movie_250x375_B.png\" width=\"150\" height=\"226\" />",
            "            <title>Road</title>",
            "        </lockup>",
            "    </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
