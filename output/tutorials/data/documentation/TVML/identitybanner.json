      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "identityBanner",
              "type": "codeVoice"
            },
            {
              "text": " element displays information directly above the ",
              "type": "text"
            },
            {
              "code": "collectionList",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element and is used to briefly describe its contents. Here’s an example that displays",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "available action movies that emphasize cars.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<stackTemplate>",
            "    <identityBanner>",
            "        <title>Available Action Movies</title>",
            "        <subtitle>Cars</subtitle>",
            "    </identityBanner>",
            "    <collectionList>",
            "        <shelf>",
            "            <section>",
            "                <lockup>",
            "                    <img src=\"http://localhost:9001/images/Car_Movie_250x375_A.png\" width=\"182\" height=\"274\" />",
            "                    <title>Movie 1</title>",
            "                </lockup>",
            "                <lockup>",
            "                    <img src=\"http://localhost:9001/images/Car_Movie_250x375_B.png\" width=\"182\" height=\"274\" />",
            "                    <title>Movie 2</title>",
            "                </lockup>",
            "            </section>",
            "        </shelf>",
            "    </collectionList>",
            "</stackTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
