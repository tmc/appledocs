  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "menuBarTemplate",
              "type": "codeVoice"
            },
            {
              "text": " to display a list of selectable items across the top of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the screen. Users can move between menu bar items to change the information displayed",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "below the menu bar. The following figure shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "menuBarTemplate",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "page. The theme for the menu bar template defaults to the system preference.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "menubartemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "You can display up to seven items in the menu bar.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "anchor": "Main-Elements",
          "level": 3,
          "text": "Main Elements",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the main elements of the ",
              "type": "text"
            },
            {
              "code": "menuBarTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element in",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "TVML format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <menuBarTemplate>",
            "        <menuBar>",
            "            <menuItem>",
            "                <title>…</title>",
            "            </menuItem>",
            "        </menuBar>",
            "    </menuBarTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Menu items associated with the menu bar.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/menubar",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Information about a single menu item.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/menuitem",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The text that describes the menu item.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/title",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "menuBarTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example. The example",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "shows the menu bar along the top of the screen. Expand the controlling JavaScript",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "file in order to show content for each item in the menu bar. For more information,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/tvmljs",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <menuBarTemplate>",
            "        <menuBar>",
            "            <menuItem id=\"navigation_top_movies\" data-identifier=\"list\">",
            "                <title>Top Movies</title>",
            "            </menuItem>",
            "            <menuItem id=\"navigation_genres\" data-identifier=\"index\">",
            "                <title>Genres</title>",
            "            </menuItem>",
            "            <menuItem id=\"navigation_search\" data-identifier=\"search\">",
            "                <title>Search</title>",
            "            </menuItem>",
            "            <menuItem id=\"navigation_edit\" data-identifier=\"edit\">",
            "                <title>Edit</title>",
            "            </menuItem>",
            "            <menuItem id=\"navigation_settings_add\" data-identifier=\"add_settings\">",
            "                <title>Add Settings</title>",
            "            </menuItem>",
            "        </menuBar>",
            "    </menuBarTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "menubartemplate-2",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
