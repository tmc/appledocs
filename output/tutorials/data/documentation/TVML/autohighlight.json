      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "autoHighlight",
              "type": "codeVoice"
            },
            {
              "text": " attribute to denote the element that is initially in focus.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Both the containing element and one child element must be set to ",
              "type": "text"
            },
            {
              "code": "true",
              "type": "codeVoice"
            },
            {
              "text": ". Remove the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "autoHighlight",
              "type": "codeVoice"
            },
            {
              "text": " attribute from your element to disable initial focus.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Values-for-autoHighlight",
          "level": 3,
          "text": "Values for autoHighlight",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The initial focusable state for an element. Set to ",
                        "type": "text"
                      },
                      {
                        "code": "true",
                        "type": "codeVoice"
                      },
                      {
                        "text": " to have the element initially be in focus.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Boolean",
                    "type": "text"
                  }
                ]
              }
            }
