  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " subelements are arranged using the ",
              "type": "text"
            },
            {
              "code": "tv-align",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "tv-position",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "styles. Containing elements are centered by default.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "listitemlockup-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Elements contained in the same position are arranged from the top of the cell to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the bottom, in the same order in which they are specified in the ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element. You can specify a ",
              "type": "text"
            },
            {
              "code": "<background><img /></background>",
              "type": "codeVoice"
            },
            {
              "text": " that displays a background",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "image inside of the ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": ". The background image is top-aligned and is",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "fitted to the size of the ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " while keeping the imageâ€™s original aspect",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "ratio. Text wrapping inside of the ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " only occurs in the ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ",",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "center",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "footer",
              "type": "codeVoice"
            },
            {
              "text": " positions. Here is an example of a two ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " elements",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside a ",
              "type": "text"
            },
            {
              "code": "section",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<section>",
            "    <listItemLockup>",
            "        <ordinal minLength=\"2\">1</ordinal>",
            "        <title>Opening sequence</title>",
            "        <decorationLabel>11:14</decorationLabel>",
            "    </listItemLockup>",
            "    <listItemLockup>",
            "        <ordinal minLength=\"2\">2</ordinal>",
            "        <title>Fight song</title>",
            "        <decorationLabel>3:47</decorationLabel>",
            "    </listItemLockup>",
            "</section>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
