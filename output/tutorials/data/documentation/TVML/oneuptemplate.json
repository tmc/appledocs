  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "oneupTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element to display a single, full-screen image. Users can",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "navigate left or right on the remote to select another image. Activating an up action",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "on the remote will shrink the image and allow a description to be displayed. The",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "following figure shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "oneupTemplate",
              "type": "codeVoice"
            },
            {
              "text": " page. The default theme",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "for a oneup template is ",
              "type": "text"
            },
            {
              "code": "dark",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "oneuptemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Main-Elements",
          "level": 3,
          "text": "Main Elements",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the main elements of the ",
              "type": "text"
            },
            {
              "code": "oneupTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element in TVML",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<oneupTemplate>",
            "    <section>",
            "        <lockup>",
            "            <img />",
            "            <title>…</title>",
            "            <row>",
            "                …",
            "            </row>",
            "        </lockup>",
            "        <lockup>",
            "            …",
            "        </lockup>",
            "    </section>",
            "</oneupTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The image to be displayed on screen.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/img",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A single image and related text.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/lockup",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Subtitle information relating to the selected image.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/row",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Multiple ",
                        "type": "text"
                      },
                      {
                        "code": "lockup",
                        "type": "codeVoice"
                      },
                      {
                        "text": " elements, each of which contains an item to be displayed.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/section",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The title to be displayed when a user selects an image.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/title",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "oneupTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example. The example shows",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a full screen image, with information about the image displayed along the bottom",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of the screen when the user zooms into the image.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <oneupTemplate mode=\"oneup caption\" handlesOverflow=\"true\">",
            "        <section>",
            "            <lockup>",
            "                <img src=\"path to images on your server/Car_Movie_1920x1080.png\" />",
            "                <title>WWDC Roadtrip</title>",
            "                <row>",
            "                    <subtitle>San Francisco</subtitle>",
            "                    <subtitle>June 8, 2015</subtitle>",
            "                </row>",
            "            </lockup>",
            "            <lockup>",
            "                <img src=\"path to images on your server/Beach_Movie_1920x1080.png\" />",
            "                <title>Beach time</title>",
            "                <row>",
            "                    <subtitle>Santa Cruz</subtitle>",
            "                    <subtitle>May 1, 2015</subtitle>",
            "                </row>",
            "            </lockup>",
            "            <lockup>",
            "                <img src=\"path to images on your server/Space_Movie_1920x1080.png\" />",
            "                <title>Spaced out</title>",
            "                <row>",
            "                    <subtitle>Space station</subtitle>",
            "                    <subtitle>July 15, 2015</subtitle>",
            "                </row>",
            "            </lockup>",
            "        </section>",
            "    </oneupTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
