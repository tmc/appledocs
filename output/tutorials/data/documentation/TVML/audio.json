            {
              "code": "audio",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "If the same URL is used between pages, audio will continue to play when the new page",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "is displayed. The ",
              "type": "text"
            },
            {
              "code": "audio",
              "type": "codeVoice"
            },
            {
              "text": " element only supports unencrypted audio.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
