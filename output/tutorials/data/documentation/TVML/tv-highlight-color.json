      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Here’s an example of how to change a button’s text color when the button comes into",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "focus.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<button>",
            "   <text style=\"tv-highlight-color:rgb(0,0,255,0.3)\">Push me</text>",
            "</button>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Values-for-tv-highlight-color",
          "level": 3,
          "text": "Values for tv-highlight-color",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The background color of an element, where ",
                        "type": "text"
                      },
                      {
                        "code": "r,g,b",
                        "type": "codeVoice"
                      },
                      {
                        "text": " are the red, green, and blue color components, and have a value range from ",
                        "type": "text"
                      },
                      {
                        "code": "0-255",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "rgb(r,g,b)",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The background color of an element, where ",
                        "type": "text"
                      },
                      {
                        "code": "r,g,b",
                        "type": "codeVoice"
                      },
                      {
                        "text": " are the red, green, and blue color components, and have a value range from ",
                        "type": "text"
                      },
                      {
                        "code": "0-255",
                        "type": "codeVoice"
                      },
                      {
                        "text": ", and ",
                        "type": "text"
                      },
                      {
                        "code": "a",
                        "type": "codeVoice"
                      },
                      {
                        "text": " is the alpha applied to the color, ranging from ",
                        "type": "text"
                      },
                      {
                        "code": "0.0-1.0",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "rgba(r,g,b,a)",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The background color of the element, which is transparent.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "transparent",
