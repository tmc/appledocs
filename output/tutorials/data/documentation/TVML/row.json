      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "row",
              "type": "codeVoice"
            },
            {
              "text": " element provides the ability to place elements next to other elements horizontally.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Elements are displayed left to right in the order they are listed inside of the ",
              "type": "text"
            },
            {
              "code": "row",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element. Here’s an example that places two buttons inside of a ",
              "type": "text"
            },
            {
              "code": "row",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<row>",
            "    <buttonLockup>",
            "        <badge src=\"resource://button-preview\" />",
            "        <title>Preview</title>",
            "    </buttonLockup>",
            "    <buttonLockup type=\"buy\">",
            "        <text>$9.99</text>",
            "        <title>Buy</title>",
            "    </buttonLockup>",
            "</row>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
