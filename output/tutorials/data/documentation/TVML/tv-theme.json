  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the tv-theme query to change the appearance of a template based on the theme",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "specified in UIUserInterfaceStyle in the info.plist or by a theme set by the theme",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "attribute. Here’s an example that sets styles for light and dark themes.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<style>",
            "   @media tv-template and (tv-theme:light) {",
            "      .foo { color:rgb(0, 0, 0); }",
            "   }",
            "   @media tv-template and (tv-theme:dark) {",
            "      .foo { color:rgb(255, 255, 255); }",
            "   }",
            "</style>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Values-for-tv-theme",
          "level": 3,
          "text": "Values for tv-theme",
