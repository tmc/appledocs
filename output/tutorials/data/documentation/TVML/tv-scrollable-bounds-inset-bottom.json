      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "tv-scrollable-bounds-inset-bottom",
              "type": "codeVoice"
            },
            {
              "text": " style creates an unscrollable region of a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "specified number of points up from the bottom of the ",
              "type": "text"
            },
            {
              "code": "stackTemplate.",
              "type": "codeVoice"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "tv-scrollable-bounds-inset-bottom",
              "type": "codeVoice"
            },
            {
              "text": " style to create an inset only at the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "bottom, without creating an inset at the top.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Here’s an example that sets the inset at the bottom to 100 points.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<stackTemplate style=\"tv-scrollable-bounds-inset-bottom: 100.0\">",
            "    <banner>",
            "        …",
            "    </banner>",
            "    <collectionList>",
            "        <shelf>",
            "            <section>",
            "                <lockup>…</lockup>",
            "            </section>",
            "        </shelf>",
            "    </collectionList>",
            "</stackTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Elements-That-Use-tv-scrollable-bounds-inset-bottom",
