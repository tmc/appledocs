      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " element provides the ability to place elements on top of images contained",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "within a ",
              "type": "text"
            },
            {
              "code": "lockup",
              "type": "codeVoice"
            },
            {
              "text": " element. The ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " element superimposes the elements it contains",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "over an image. The ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " element creates a view where the elements it contains",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "are arranged using the ",
              "type": "text"
            },
            {
              "code": "tv-align",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "tv-position",
              "type": "codeVoice"
            },
            {
              "text": " styles. Containing elements are",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "centered by default.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "overlay-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Elements contained in the same position are arranged from the top of the cell to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the bottom, in the same order in which they are specified in the ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can specify a ",
              "type": "text"
            },
            {
              "code": "<background><img /></background>",
              "type": "codeVoice"
            },
            {
              "text": " that displays a background image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside of the ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": ". The background image is top-aligned and is fitted to the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "size of the ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " while keeping the imageâ€™s original aspect ratio. Text wrapping",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside of the ",
              "type": "text"
            },
            {
              "code": "overlay",
              "type": "codeVoice"
            },
            {
              "text": " only occurs in the ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "center",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "footer",
              "type": "codeVoice"
            },
            {
              "text": " positions.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
