            {
              "code": "segmentBar",
              "type": "codeVoice"
            },
            {
              "text": " element contains a list of ",
              "type": "text"
            },
            {
              "code": "segmentBarItem",
              "type": "codeVoice"
            },
            {
              "text": " elements that are displayed",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "horizontally. Use the remote to move the cursor between the contained ",
              "type": "text"
            },
            {
              "code": "segmentBarItem",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "elements. Here’s an example that has a title and subtitle above a segment bar that",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "contains one item.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<segmentBarHeader>",
            "   <title>Title</title>",
            "   <subtitle>Subtitle</subtitle>",
            "   <segmentBar>",
            "      <segmentBarItem>",
            "         <title>Title</title>",
            "      </segmentBarItem>",
            "   </segmentBar>",
            "</segmentBarHeader>"
