  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element is a horizontal row consisting of one or more elements. The user",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "navigates along the items on a shelf by clicking left or right on the remote, and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "chooses an element by clicking the Select button on the remote. The generic shelf",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element structure is displayed first, followed by several standard shelf configurations.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Here’s an example showing the basic layout of a ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "    <header>",
            "        <title>Viewers Also Watched</title>",
            "    </header>",
            "    <section>",
            "        <lockup onselect=\"…\"> //add link to other prodcut on your server here",
            "            <imageStack>",
            "                <img src=\"…\" /> //add link to preview image for other product",
            "            </imageStack>",
            "            <title>Also Watched One</title>",
            "        </lockup>",
            "    </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "There are several standard shelf configurations that are used to display related",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "content.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Also-Watched-Shelf",
          "level": 3,
          "text": "Also-Watched Shelf",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element can display information about other products that have been watched",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "by people who have also watched the selected product. The shelf displays the image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "you associate with the also-watched product, and the title is only displayed when",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the also-watched product is in focus. Here’s an example of a ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element that",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "contains three other products.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "    <header>",
            "        <title>Viewers Also Watched</title>",
            "    </header>",
            "    <section>",
            "        <lockup>",
            "            <img src=\"path to images on your server/Car_Movie_250x375_A.png\" width=\"150\" height=\"226\" />",
            "            <title>Turn</title>",
            "        </lockup>",
            "        <lockup>",
            "            <img src=\"path to images on your server/Car_Movie_250x375_B.png\" width=\"150\" height=\"226\" />",
            "            <title>Road</title>",
            "        </lockup>",
            "        <lockup>",
            "            <img src=\"path to images on your server/Car_Movie_250x375_C.png\" width=\"150\" height=\"226\" />",
            "            <title>Helicopter</title>",
            "        </lockup>",
            "    </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Cast-and-Crew-Shelf",
          "level": 3,
          "text": "Cast-and-Crew Shelf",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element can display information about the cast and crew associated with",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the product. Each person is represented by a large circle that contains the individual’s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "initials. Below the circle is the individual’s name and the name of the character",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "they play. Here’s an example of a ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element that contains three cast members.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "    <header>",
            "        <title>Cast and Crew</title>",
            "    </header>",
            "    <section>",
            "        <monogramLockup>",
            "            <monogram firstName=\"Anne\" lastName=\"Johnson\"/>",
            "            <title>Anne Johnson</title>",
            "            <subtitle>Actor</subtitle>",
            "        </monogramLockup>",
            "        <monogramLockup>",
            "            <monogram firstName=\"Tom\" lastName=\"Clark\"/>",
            "            <title>Tom Clark</title>",
            "            <subtitle>Actor</subtitle>",
            "        </monogramLockup>",
            "        <monogramLockup>",
            "            <monogram firstName=\"Maria\" lastName=\"Ruiz\"/>",
            "            <title>Maria Ruiz</title>",
            "            <subtitle>Actor</subtitle>",
            "        </monogramLockup>",
            "    </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Extras-Shelf",
          "level": 3,
          "text": "Extras Shelf",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element can display information about additional items included with",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the product. Common additional items include deleted scenes, extended scenes, and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "trailers. The listing below shows an example of a ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element that contains a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "link to the online extras, a brief description of the extras, and a product trailer.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The extras shelf typically contains two sections. The first section contains an image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of the additional items and a description of the items. Users can click the image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to access the additional items. The second section contains a preview image of a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "trailer for the original product that users can click to view the trailer. Additional",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "trailers require additional sections.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "    <section>",
            "        <header>",
            "            <title>Product Extras</title>",
            "        </header>",
            "        <descriptionLockup>",
            "            <img src=\"…\"/> //add link to preview image for extras",
            "            <text>Extras</text>",
            "            <description>Enter text describing the item here</description>",
            "            <text>Add text that talks about anything special included with this item or special requirements needed</text>",
            "        </descriptionLockup",
            "    </section>",
            "    <section>",
            "        <header>",
            "            <title>Trailers</title>",
            "        </header>",
            "        <lockup onselect=\"…\"> //add link to trailer on your server here",
            "            <imageStack>",
            "                <img src=\"…\" /> //add link to preview image for trailer",
            "            </imageStack>",
            "            <title>Theatrical Trailer 2m</title>",
            "        </lockup>",
            "    </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Review-and-Ratings-Shelf",
          "level": 3,
          "text": "Review-and-Ratings Shelf",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "shelf",
              "type": "codeVoice"
            },
            {
              "text": " element can display a list of ratings and reviews of the item it is associated",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with. Typically, a ",
              "type": "text"
            },
            {
              "code": "lockup",
              "type": "codeVoice"
            },
            {
              "text": " element is displayed, followed by one or more ",
              "type": "text"
            },
            {
              "code": "buttonLockup",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "elements. Common rating lockups contain information from iTunes or Rotten Tomatoes.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<shelf>",
            "   <header>",
            "      <title>Reviews and Ratings</title>",
            "   </header>",
            "   <section>",
            "      <ratingCard>",
            "         <title>4.1 / 5</title>",
            "         <ratingBadge value=\"0.7\"></ratingBadge>",
            "         <description>Average of 2,241 iTunes user ratings and reviews.</description>",
            "      </ratingCard>",
            "      <ratingCard>",
            "         <title><badge src=\"resource://tomato-fresh\" /> 99%</title>",
            "         <text>Tomatometer</text>",
            "         <infoTable>",
            "            <info>",
            "               <header>",
            "                  <title>175</title>",
            "               </header>",
            "               <text>Reviews</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>173</title>",
            "               </header>",
            "               <text>Fresh</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>2</title>",
            "               </header>",
            "               <text>Rotten</text>",
            "            </info>",
            "         </infoTable>",
            "      </ratingCard>",
            "      <reviewCard>",
            "         <badge src=\"resource://tomato-fresh-m\" />",
            "         <title>WWDC Review</title>",
            "         <description>Brief review here</description>",
            "         <text>Ravi Patel June, 8 2015</text>",
            "      </reviewCard>",
            "   </section>",
            "</shelf>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
