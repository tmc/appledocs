  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "There is no built-in layout for contained elements. The ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element creates",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a view where the elements it contains are arranged using the ",
              "type": "text"
            },
            {
              "code": "tv-align",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "tv-position",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "styles. Containing elements are centered by default. The following figure shows the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "positions inside of the ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element. The ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element should only",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "be used when you can’t use another template to achieve the look you want. The theme",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "for the div template defaults to the system preference.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "divtemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Elements contained in the same position are arranged from the top of the cell to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the bottom, in the same order in which they are specified in the ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can specify a ",
              "type": "text"
            },
            {
              "code": "<background><img /></background>",
              "type": "codeVoice"
            },
            {
              "text": " that displays a background image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside of the ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": ". The background image is top-aligned and is fitted to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the size of the ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " while keeping the image’s original aspect ratio. Text",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "wrapping inside of the ",
              "type": "text"
            },
            {
              "code": "divTemplate",
              "type": "codeVoice"
            },
            {
              "text": " only occurs in the ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "center",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "footer",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "positions.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
