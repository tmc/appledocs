{
  "abstract": [
    {
      "text": "Displays detailed information about a single product.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
        "doc://com.apple.TVML/documentation/TVML"
      ]
    ]
  },
