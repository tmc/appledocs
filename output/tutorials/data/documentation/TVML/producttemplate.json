  "metadata": {
    "role": "collectionGroup",
    "title": "productTemplate"
  },
  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "productTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element to display, for example, a page that describes",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a movie, including information about the actors, ratings, and like movies. The page",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "displays general information about the product in the top two-thirds of the screen",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with a row of related products directly below. A user can scroll down and access",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "detailed information about the product, including critical reviews, actor biographies,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and information about any included extras.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "productTemplate",
              "type": "codeVoice"
            },
            {
              "text": " page. The default",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "theme for a product template is ",
              "type": "text"
            },
            {
              "code": "dark",
              "type": "codeVoice"
            },
            {
              "text": " when a background image is specified; otherwise,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the product template defaults to the system preference.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "producttemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Main-Elements",
          "level": 3,
          "text": "Main Elements",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the main elements of the productTemplate element in TVML",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<productTemplate>",
            "    <banner>",
            "        <infoList>",
            "        </infoList>",
            "        <stack>",
            "            <title>…</title>",
            "            <subtitle>…</subtitle>",
            "            <row>",
            "            </row>",
            "            <description>…</description>",
            "            <buttonLockup>",
            "            </buttonLockup>",
            "        </stack>",
            "        <heroImage src=\"…\" />",
            "    </banner>",
            "    <shelf>",
            "    </shelf>",
            "    <!—- Everything following is under the fold —->",
            "        <shelf>",
            "        </shelf>",
            "        <productInfo>",
            "        </productInfo>",
            "    </productTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "You can change the look of a ",
                  "type": "text"
                },
                {
                  "code": "productTemplate",
                  "type": "codeVoice"
                },
                {
                  "text": " page by removing ",
                  "type": "text"
                },
                {
                  "code": "heroImage",
                  "type": "codeVoice"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "from the ",
                  "type": "text"
                },
                {
                  "code": "stack",
                  "type": "codeVoice"
                },
                {
                  "text": " element and replacing it with an ",
                  "type": "text"
                },
                {
                  "code": "img",
                  "type": "codeVoice"
                },
                {
                  "text": " element that covers the entire",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "screen.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Element containing subelements that provide primary information about a product, such as a movie title, description, credits, and purchase information.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/banner",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A type of button that can contain an image (the ",
                        "type": "text"
                      },
                      {
                        "code": "badge",
                        "type": "codeVoice"
                      },
                      {
                        "text": " element) as well as text.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/buttonlockup",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Text that describes the product in detail; for example, a movie synopsis.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/description",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image of the product.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/heroimg",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Product information such as actors, directors, and producers.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/infolist",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Technical information about the product such as runtime, language availability, and accessibility information.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/productinfo",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A group of information elements.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/row",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An element containing row elements. Several shelves are used to display information like shows other users have watched and extra features provided by this product.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/shelf",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Basic information about the product, including the title, rating, and a description.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/stack",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Text that provides additional information about its containing element.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/subtitle",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The title describing its containing element.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/title",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "productTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "   <productTemplate>",
            "      <background>",
            "      </background>",
            "      <banner>",
            "         <infoList>",
            "            <info>",
            "               <header>",
            "                  <title>Director</title>",
            "               </header>",
            "               <text>John Appleseed</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>Actors</title>",
            "               </header>",
            "               <text>Anne Johnson</text>",
            "               <text>Tom Clark</text>",
            "               <text>Maria Ruiz</text>",
            "            </info>",
            "         </infoList>",
            "         <stack>",
            "            <title>WWDC Road Trip</title>",
            "            <row>",
            "               <text><badge src=\"resource://tomato-fresh\"/> 99%</text>",
            "               <text>1hr 54min</text>",
            "               <text>Comedy</text>",
            "               <text>2015</text>",
            "               <badge src=\"resource://mpaa-pg\" class=\"badge\" />",
            "               <badge src=\"resource://cc\" class=\"badge\" />",
            "            </row>",
            "            <description handlesOverflow =\"true\">An aspiring developer gets a ticket to WWDC at the last minute. Now they need to get across country in time for the keynote, and the only person who can help is their quirky roommate.</description>",
            "            <text>Language information can go here</text>",
            "            <row>",
            "               <buttonLockup>",
            "                  <badge src=\"resource://button-preview\" />",
            "                  <title>Preview</title>",
            "               </buttonLockup>",
            "               <buttonLockup type=\"buy\">",
            "                  <text>$9.99</text>",
            "                  <title>Buy</title>",
            "               </buttonLockup>",
            "            </row>",
            "         </stack>",
            "         <heroImg src=\"path to images on your server/Car_Movie_720x1080.png\" />",
            "      </banner>",
            "      <shelf>",
            "         <header>",
            "            <title>Viewers Also Watched</title>",
            "         </header>",
            "         <section>",
            "            <lockup>",
            "               <img src=\"path to images on your server/Car_Movie_250x375_A.png\" width=\"150\" height=\"226\" />",
            "               <title>Turn</title>",
            "            </lockup>",
            "            <lockup>",
            "               <img src=\"path to images on your server/Car_Movie_250x375_B.png\" width=\"150\" height=\"226\" />",
            "               <title>Road</title>",
            "            </lockup>",
            "            <lockup>",
            "               <img src=\"path to images on your server/Car_Movie_250x375_C.png\" width=\"150\" height=\"226\" />",
            "               <title>Helicopter</title>",
            "            </lockup>",
            "         </section>",
            "      </shelf>",
            "<!—- Everything past this is below the fold —->",
            "      <shelf>",
            "         <header>",
            "            <title>Reviews and Ratings</title>",
            "         </header>",
            "         <section>",
            "            <ratingCard>",
            "               <title>4.1 / 5</title>",
            "               <ratingBadge value=\"0.7\"></ratingBadge>",
            "               <description>Average of 2,241 iTunes user ratings and reviews.</description>",
            "            </ratingCard>",
            "            <ratingCard>",
            "               <title><badge src=\"resource://tomato-fresh\" /> 99%</title>",
            "               <text>Tomatometer</text>",
            "               <infoTable>",
            "                  <info>",
            "                     <header>",
            "                        <title>175</title>",
            "                     </header>",
            "                     <text>Reviews</text>",
            "                  </info>",
            "                  <info>",
            "                     <header>",
            "                        <title>173</title>",
            "                     </header>",
            "                     <text>Fresh</text>",
            "                  </info>",
            "                  <info>",
            "                     <header>",
            "                        <title>2</title>",
            "                     </header>",
            "                     <text>Rotten</text>",
            "                  </info>",
            "               </infoTable>",
            "            </ratingCard>",
            "            <reviewCard>",
            "               <badge src=\"resource://tomato-fresh-m\" />",
            "               <title>WWDC Review</title>",
            "               <description>Brief review here</description>",
            "               <text>Ravi Patel June, 8 2015</text>",
            "            </reviewCard>",
            "         </section>",
            "      </shelf>",
            "      <shelf>",
            "         <header>",
            "            <title>Cast and Crew</title>",
            "         </header>",
            "         <section>",
            "            <monogramLockup>",
            "               <monogram firstName=\"Anne\" lastName=\"Johnson\"/>",
            "               <title>Anne Johnson</title>",
            "               <subtitle>Actor</subtitle>",
            "            </monogramLockup>",
            "            <monogramLockup>",
            "               <monogram firstName=\"Tom\" lastName=\"Clark\"/>",
            "               <title>Tom Clark</title>",
            "               <subtitle>Actor</subtitle>",
            "            </monogramLockup>",
            "            <monogramLockup>",
            "               <monogram firstName=\"Maria\" lastName=\"Ruiz\"/>",
            "               <title>Maria Ruiz</title>",
            "               <subtitle>Actor</subtitle>",
            "            </monogramLockup>",
            "         </section>",
            "      </shelf>",
            "      <productInfo>",
            "         <infoTable>",
            "            <header>",
            "               <title>Information</title>",
            "            </header>",
            "            <info>",
            "               <header>",
            "                  <title>Studio</title>",
            "               </header>",
            "               <text>Apple</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>Runtime</title>",
            "               </header>",
            "               <text>1:54</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>Format</title>",
            "               </header>",
            "               <text>Widescreen</text>",
            "            </info>",
            "         </infoTable>",
            "         <infoTable>",
            "            <header>",
            "               <title>Languages</title>",
            "            </header>",
            "            <info>",
            "               <header>",
            "                  <title>Primary</title>",
            "               </header>",
            "               <text>English (Dolby 5.1), Subtitles, CC</text>",
            "            </info>",
            "            <info>",
            "               <header>",
            "                  <title>Additional</title>",
            "               </header>",
            "               <text>Cantonese (Subtitles)</text>",
            "            </info>",
            "         </infoTable>",
            "         <infoTable style=\"tv-line-spacing:10;\">",
            "            <header>",
            "               <title>Accessibility</title>",
            "            </header>",
            "            <info>",
            "               <header>",
            "                  <textBadge>SDH</textBadge>",
            "               </header>",
            "               <text>Subtitles for the deaf and Hard of Hearing (SDH) refer to subtitles in the original lanuage with the addition of relevant non-dialog information.</text>",
            "            </info>",
            "         </infoTable>",
            "      </productInfo>",
            "   </productTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figures show the ouput for the above example. The first figure shows",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the output for the example when it first appears on screen. The second figure shows",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the output below the fold as the user scrolls down the screen.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "producttemplate-2",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "producttemplate-3",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
