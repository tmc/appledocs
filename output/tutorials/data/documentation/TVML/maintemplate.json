  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "mainTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element to display options to the user; for example, the main",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "page for a movie with options to play the movie, see extra content, and jump to specific",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "scenes. The background area contains an image relating to the product, and the options",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "are contained in a menu bar along the bottom of the screen. The following figure",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "mainTemplate",
              "type": "codeVoice"
            },
            {
              "text": " page. The default theme for a main template",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "is ",
              "type": "text"
            },
            {
              "code": "dark",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "maintemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Main-Elements",
          "level": 3,
          "text": "Main Elements",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the elements of the mainTemplate element in TVML format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<mainTemplate>",
            "    <background>…</background>",
            "    <menuBar>",
            "        <section>",
            "            <menuItem>…</menuItem>",
            "            <menuItem>…</menuItem>",
            "        </section>",
            "    </menuBar>",
            "</mainTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The background elements used on the page, such as ",
                        "type": "text"
                      },
                      {
                        "code": "audio",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/background",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A list of displayed menu items.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
