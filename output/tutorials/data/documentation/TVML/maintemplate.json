          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "mainTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example. The example displays",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a full-screen image as the background. A menu bar contains three navigable options.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <mainTemplate>",
            "        <background>",
            "            <img src=\"path to images on your server/Car_Movie_1920x1080\" />",
            "        </background>",
            "        <menuBar>",
            "            <section>",
            "                <menuItem>",
            "                    <title>PLAY</title>",
            "                </menuItem>",
            "                <menuItem>",
            "                    <title>SCENES</title>",
            "                </menuItem>",
            "                <menuItem>",
            "                    <title>EXTRAS</title>",
            "                </menuItem>",
            "            </section>",
            "        </menuBar>",
            "    </mainTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
