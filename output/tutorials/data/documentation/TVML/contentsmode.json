  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "contentsMode",
              "type": "codeVoice"
            },
            {
              "text": " attribute to specify how the image is scaled within its bounding",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "box. Hereâ€™s an example that demonstrates the ",
              "type": "text"
            },
            {
              "code": "contentsMode",
              "type": "codeVoice"
            },
            {
              "text": " attribute in a ",
              "type": "text"
            },
            {
              "code": "stackTemplate",
              "type": "codeVoice"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <stackTemplate>",
            "        <banner>",
            "            <title>contentsMode</title>",
            "        </banner>",
            "        <collectionList>",
            "            <shelf>",
            "                <section>",
            "                    <lockup>",
            "                        <img contentsMode=\"aspectFit\" width=\"600\" height=\"300\" aspectRatio=\"1:1\" src=\"path to images on your server/Car_Movie_200x200.png\"/>",
            "                        <title>aspectFit</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img contentsMode=\"aspectFitBB\" width=\"600\" height=\"300\" src=\"path to images on your server/Car_Movie_200x200.png\"/>",
            "                        <title>aspectFitBB</title>",
            "                    </lockup>",
            "                    <lockup>",
            "                        <img contentsMode=\"aspectFill\" width=\"600\" height=\"300\" src=\"path to images on your server/Car_Movie_200x200.png\" contentsMode=\"aspectFill\"/>",
            "                        <title>aspectFill</title>",
            "                    </lockup>",
            "                </section>",
            "            </shelf>",
            "        </collectionList>",
            "    </stackTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "When using the ",
                  "type": "text"
                },
                {
                  "code": "aspectFit",
                  "type": "codeVoice"
                },
                {
                  "text": " value, you must also include the ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.TVML/documentation/TVML/aspectratio",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "attribute for the content to scale appropriately.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Important",
          "style": "important",
          "type": "aside"
        },
        {
          "anchor": "Values",
          "level": 3,
          "text": "Values",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The image scales to fit in the bounding box using fixed aspect ratio. The output bounding box has the same size as the scaled image, leaving no remaining area. The output bounding box may be smaller than its specified size.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "aspectFit",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The image scales to fit in the bounding box using fixed aspect ratio. The output bounding box keeps its specified size. Any unfilled area of the bounding box is white.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "aspectFitBB",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The image scales to fill in the bounding box using fixed aspect ratio. Portions of the image may be clipped.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "aspectFill",
                    "type": "text"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Elements-That-Use-contentsMode",
          "level": 3,
