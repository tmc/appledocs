  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This element is commonly used to provide additional information for a media item",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "or group of media items; for example, the running time for a movie. Here’s an example",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "where the decoration label displays the number of items contained in a ",
              "type": "text"
            },
            {
              "code": "listItemLockup",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<listItemLockup>",
            "    <title>Comedies</title>",
            "    <decorationLabel>4</decorationLabel>",
            "    <relatedContent>",
            "        <grid>",
            "            <section>",
            "                <lockup>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_B.png\" width=\"250\" height=\"376\" />",
            "                    <title>Movie 2</title>",
            "                </lockup>",
            "                <lockup>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_A.png\" width=\"250\" height=\"376\" />",
            "                    <title>Movie 1</title>",
            "                </lockup>",
            "                <lockup>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375.png\" width=\"250\" height=\"376\" />",
            "                    <title>Movie 4</title>",
            "                </lockup>",
            "                <lockup>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_C.png\" width=\"250\" height=\"376\" />",
            "                    <title>Movie 3</title>",
            "                </lockup>",
            "            </section>",
            "        </grid>",
            "    </relatedContent>",
            "</listItemLockup>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Contained-In",
          "level": 3,
          "text": "Contained In",
          "type": "heading"
