      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": " element provides the ability to manually arrange its containing elements.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": " element creates a view where the elements it contains are arranged",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "using the ",
              "type": "text"
            },
            {
              "code": "tv-align",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "tv-position",
              "type": "codeVoice"
            },
            {
              "text": " styles. Containing elements are centered by",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "default.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "organizer-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Elements contained in the same position are arranged from the top of the cell to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the bottom, in the same order in which they are specified in the ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can specify a ",
              "type": "text"
            },
            {
              "code": "<background><img /></background>",
              "type": "codeVoice"
            },
            {
              "text": " that displays a background image",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside of the ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": ". The background image is top-aligned and is fitted to the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "size of the ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": " while keeping the imageâ€™s original aspect ratio. Text wrapping",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "inside of the ",
              "type": "text"
            },
            {
              "code": "organizer",
              "type": "codeVoice"
            },
            {
              "text": " only occurs in the ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "center",
              "type": "codeVoice"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "code": "footer",
              "type": "codeVoice"
            },
            {
              "text": " positions.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
