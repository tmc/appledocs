{
  "abstract": [
    {
      "text": "Creates an unscrollable region of a specified size at the top and bottom of the stack",
      "type": "text"
    },
    {
      "text": " ",
      "type": "text"
    },
    {
      "text": "template.",
      "type": "text"
    }
  ],
