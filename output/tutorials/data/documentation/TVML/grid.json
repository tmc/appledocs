        {
          "inlineContent": [
            {
              "text": "Items inside of the ",
              "type": "text"
            },
            {
              "code": "grid",
              "type": "codeVoice"
            },
            {
              "text": " are displayed in a row that is bound by the size of the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "screen. Items are automatically moved to another row after a row is filled. Hereâ€™s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "an example of three ",
              "type": "text"
            },
            {
              "code": "lockup",
              "type": "codeVoice"
            },
            {
              "text": " elements inside of a ",
              "type": "text"
            },
            {
              "code": "grid",
              "type": "codeVoice"
            },
            {
              "text": " element.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<grid>",
            "    <section>",
            "        <lockup>",
