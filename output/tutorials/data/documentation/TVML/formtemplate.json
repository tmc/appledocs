  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "formTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element to gather information from the user; for example,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "requiring a password to access your app. The banner area can contain an image and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a description of your product. The user enters text in the text field directly below",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the banner using the automatically generated keyboard. Use the footer area to contain",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "any user interaction buttons. The following figure shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "formTemplate",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "page. The theme for the form template defaults to the system preference.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "formtemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Form-Template",
          "level": 3,
          "text": "Form Template",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the main elements of the ",
              "type": "text"
            },
            {
              "code": "formTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element in TVML",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<formTemplate>",
            "    <background>",
            "        …",
            "    </background>",
            "    <banner>",
            "        <img />",
            "        <description>…</description>",
            "    </banner>",
            "    <textField>…</textField>",
            "    <footer>…</footer>",
            "</formTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Only accepts ",
                        "type": "text"
                      },
                      {
                        "code": "img",
                        "type": "codeVoice"
                      },
                      {
                        "text": " and ",
                        "type": "text"
                      },
                      {
                        "code": "heroImg",
                        "type": "codeVoice"
                      },
                      {
                        "text": " elements in the background.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/background",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Information displayed along the top of the screen that is typically used to provide instructions to the user.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/banner",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The text used to describe what the user needs to enter.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/description",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Information displayed along the bottom of the screen, such as a Submit button for the user to commit the information entered in ",
                        "type": "text"
                      },
                      {
                        "code": "textField",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/footer",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image of the product.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/img",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "User input field.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/textfield",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "formTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example. The interactive",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "keyboard is automatically created. The footer area contains a button that can submit",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the user input. Modify your main JavaScript file to accept the user input from the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "button. For more information on available JavaScript functions, see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/tvmljs",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <formTemplate>",
            "        <banner>",
            "            <img src=\"path to images on your server/Car_Movie_800X400.png\" width=\"800\" height=\"400\"/>",
            "            <description>Enter email for access</description>",
            "        </banner>",
            "        <textField>tclark@example.com</textField>",
            "        <footer>",
            "            <button>",
            "                <text>Submit</text>",
            "            </button>",
            "        </footer>",
            "    </formTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "formtemplate-2",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
