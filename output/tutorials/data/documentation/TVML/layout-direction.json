      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "All base style sheets now use ",
              "type": "text"
            },
            {
              "code": "text-align:natural",
              "type": "codeVoice"
            },
            {
              "text": ". You must use the ",
              "type": "text"
            },
            {
              "code": "layout-direction",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "query to change the language layout. Here’s an example for specifying styles for",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "right-to-left languages.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<style>",
            "    .socialBadgeInLockup {",
            "        tv-position: bottom-trailing;",
            "        tv-align: trailing;",
            "        margin: 0 8 -8 0;",
            "    }",
            "    .socialBadgeInMonogramLockup {",
            "        tv-position: bottom-trailing;",
            "        tv-align: trailing;",
            "        margin: 0 18 10 0;",
            "    }",
            "",
            "    @media (layout-direction: rtl) {",
            "        .socialBadgeInLockup {",
            "            margin: 0 0 -8 8;",
            "        }",
            "        .socialBadgeInMonogramLockup {",
            "            margin: 0 0 10 18;",
            "        }",
            "    }",
            "</style>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Values-for-layout-direction",
          "level": 3,
          "text": "Values for layout-direction",
          "type": "heading"
        },
        {
          "items": [
