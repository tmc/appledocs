  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "paradeTemplate",
              "type": "codeVoice"
            },
            {
              "text": " element to display a list of automatically scrolling, static",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "images on the left that are associated with a selected image category on the right.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "For example, a user selects Action movies, and the associated images automatically",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "start scrolling. The following figure shows the basic layout for a ",
              "type": "text"
            },
            {
              "code": "paradeTemplate",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "page. The theme for the parade template defaults to the system preference.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "paradetemplate-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Main-Elements",
          "level": 3,
          "text": "Main Elements",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows main elements of the ",
              "type": "text"
            },
            {
              "code": "paradeTemplate",
              "type": "codeVoice"
            },
            {
              "text": " in TVML format.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<paradeTemplate>",
            "   <list>",
            "      <header>",
            "         <title>Title</title>",
            "      </header>",
            "      <section>",
            "         <listItemLockup>",
            "            <title>Title 1</title>",
            "         </listItemLockup>",
            "         <listItemLockup>",
            "            <title>Title 2</title>",
            "         </listItemLockup>",
            "      </section>",
            "      <relatedContent>",
            "         <imgDeck>",
            "            <img src=\"\" />",
            "            <img src=\"\" />",
            "         </imgDeck>",
            "      </relatedContent",
            "   </list>",
            "</paradeTemplate>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "anchor": "Element-Descriptions",
          "level": 4,
          "text": "Element Descriptions",
          "type": "heading"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Title information for the list of image categories on the right side of the screen.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/header",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A single image that scrolls across the left side of the screen.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/img",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "A group of images on the left side of the screen that scroll right-to-left.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/imgdeck",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Element containing all the elements that are displayed.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/list",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Information about an individual item in the list of image categories.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/listitemlockup",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Element containing the image deck that is associated with a particular item in the list.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/relatedcontent",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "The text used to provide a description for its containing element.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "identifier": "doc://com.apple.TVML/documentation/TVML/title",
                    "isActive": true,
                    "type": "reference"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following listing shows the TVML for a ",
              "type": "text"
            },
            {
              "code": "paradeTemplate",
              "type": "codeVoice"
            },
            {
              "text": " example.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "<document>",
            "    <paradeTemplate>",
            "        <list>",
            "            <header>",
            "                <title>Movie Genres</title>",
            "            </header>",
            "            <section>",
            "                <listItemLockup>",
            "                    <title>Action</title>",
            "                </listItemLockup>",
            "                <listItemLockup>",
            "                    <title>Comedy</title>",
            "                </listItemLockup>",
            "                <listItemLockup>",
            "                    <title>Horror</title>",
            "                </listItemLockup>",
            "                <listItemLockup>",
            "                    <title>Kids</title>",
            "                </listItemLockup>",
            "                <listItemLockup>",
            "                    <title>Drama</title>",
            "                </listItemLockup>",
            "            </section>",
            "            <relatedContent>",
            "                <imgDeck>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375.png \"/>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_A.png \"/>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_B.png \"/>",
            "                    <img src=\"path to images on your server/Car_Movie_250x375_C.png \"/>",
            "                </imgDeck>",
            "            </relatedContent>",
            "        </list>",
            "    </paradeTemplate>",
            "</document>"
          ],
          "syntax": "xml",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The following figure shows the output for the above example:",
              "type": "text"
            }
          ],
