{
  "abstract": [
    {
      "text": "Displays information for a group of related media items.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
        "doc://com.apple.TVML/documentation/TVML"
      ]
    ]
  },
  "identifier": {
    "interfaceLanguage": "swift",
