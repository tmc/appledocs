    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The recipient’s public key for encrypting the messages.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "recipientKey"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The cipher suite that defines the cryptographic algorithms to use.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "ciphersuite"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Data that the key derivation function uses to compute the symmetric key material. The sender and the recipient need to use the same ",
                  "type": "text"
                },
                {
                  "code": "info",
                  "type": "codeVoice"
                },
                {
                  "text": " data.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "info"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "Sender",
              "type": "codeVoice"
            },
            {
              "text": " encrypts messages in base mode with a symmetric encryption key it derives using a key derivation function (KDF).",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The KDF uses the key schedule data in ",
              "type": "text"
            },
            {
              "code": "info",
              "type": "codeVoice"
            },
            {
              "text": " as input to generate the key.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "Sender",
              "type": "codeVoice"
            },
            {
              "text": " encapsulates the derived key using the recipient’s public key.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You access the encapsulated key using ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.CryptoKit/documentation/CryptoKit/HPKE/Sender/encapsulatedKey",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The system throws errors from ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.CryptoKit/documentation/CryptoKit/HPKE/Errors",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " when it encounters them.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
