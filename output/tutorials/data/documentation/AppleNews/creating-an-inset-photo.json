            "        \"top\": 12",
            "      }",
            "    },",
            "    \"halfMarginBothContainedLayout\": {",
            "      \"margin\": {",
            "        \"top\": 12,",
            "        \"bottom\": 12",
            "      }",
            "    }",
            "  },",
            "  ...",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        },
        {
          "anchor": "Define-a-Bottom-Border",
          "level": 3,
          "text": "Define a Bottom Border",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Before you can add a bottom border to the inset photo, you must define a ",
              "type": "text"
            },
            {
              "code": "ComponentStyle",
              "type": "codeVoice"
            },
            {
              "text": " object that creates a bottom border only.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Copy the example code ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNews/creating-an-inset-photo#captionLockupStyle-Copy-This-Code",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Paste the code between the closing brace (",
                      "type": "text"
                    },
                    {
                      "code": "}",
                      "type": "codeVoice"
                    },
                    {
                      "text": ") of the last ",
                      "type": "text"
                    },
                    {
                      "code": "ComponentStyle",
                      "type": "codeVoice"
                    },
                    {
                      "text": " object and the closing brace for the whole ",
                      "type": "text"
                    },
                    {
                      "code": "componentStyles",
                      "type": "codeVoice"
                    },
                    {
                      "text": " property.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "inlineContent": [
            {
              "text": "Your code should look like the example code ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNews/creating-an-inset-photo#captionLockupStyle-Result",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "captionLockupStyle-Copy-This-Code",
          "level": 4,
          "text": "captionLockupStyle: Copy This Code",
          "type": "heading"
        },
        {
          "code": [
            ",",
            "    \"captionLockupStyle\": {",
            "      \"border\": {",
            "        \"all\": {",
            "          \"width\": 1,",
            "          \"color\": \"#D5B327\"",
            "        },",
            "        \"top\": false,",
            "        \"right\": false,",
            "        \"bottom\": true,",
            "        \"left\": false",
            "      }",
            "    }"
          ],
          "syntax": "json",
          "type": "codeListing"
        },
        {
