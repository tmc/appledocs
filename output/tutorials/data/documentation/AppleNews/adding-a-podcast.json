  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "By using the podcast component, you can add a link to a podcast without using external assets.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "inlineContent": [
                {
                  "text": "On this page, you’ll learn how to",
                  "type": "text"
                }
              ],
              "type": "strong"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create a podcast component.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Change the podcast orientation.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "identifier": "media-3966391",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Add-a-Podcast-in-Your-Article",
          "level": 3,
          "text": "Add a Podcast in Your Article",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "In ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNews/positioning-text-components",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", you created some ",
              "type": "text"
            },
            {
              "code": "ComponentLayout",
              "type": "codeVoice"
            },
            {
              "text": " objects. You’ll refer to those ",
              "type": "text"
            },
            {
              "code": "ComponentLayout",
              "type": "codeVoice"
            },
            {
              "text": " objects in this code.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Copy the example code from ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNews/adding-a-podcast#Podcast-Copy-This-Code",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Paste the code inside the components array of your article,  after the closing brace and comma (",
                      "type": "text"
                    },
                    {
                      "code": "},",
                      "type": "codeVoice"
                    },
                    {
                      "text": ") of the body component that begins with ",
                      "type": "text"
                    },
                    {
                      "code": "Consequatur",
                      "type": "codeVoice"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "code": "aut doloribus",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "inlineContent": [
            {
              "text": "Your code should look like the example code in ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNews/adding-a-podcast#Podcast-Result",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "After you make this change in your code, you can preview your working ",
              "type": "text"
            },
            {
              "code": "article.json",
              "type": "codeVoice"
            },
            {
              "text": " file in News Preview to see a podcast in your article.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Podcast-Copy-This-Code",
          "level": 4,
          "text": "Podcast: Copy This Code",
          "type": "heading"
        },
        {
          "code": [
            "    {",
            "      \"role\": \"heading2\",",
            "      \"layout\": \"fullMarginAboveHalfBelowLayout\",",
            "      \"text\": \"PODCAST HEADING\"",
            "    },",
            "    {",
            "      \"role\": \"podcast\",",
            "      \"layout\": \"noMarginLayout\",",
            "      \"URL\": \"https://podcasts.apple.com/us/podcast/apple-news-today/id1473872585\"",
            "    },"
          ],
          "syntax": "json",
          "type": "codeListing"
        },
        {
          "anchor": "Podcast-Result",
          "level": 4,
          "text": "Podcast: Result",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Ellipses (…) indicate lines of code that have been omitted from this example.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "{",
            "  ...",
            "  \"components\": [",
            "    ...",
            "    {",
            "      \"role\": \"heading2\",",
            "      \"layout\": \"fullMarginAboveHalfBelowLayout\",",
            "      \"text\": \"PODCAST HEADING\"",
            "    },",
            "    {",
            "      \"role\": \"podcast\",",
            "      \"layout\": \"noMarginLayout\",",
            "      \"URL\": \"https://podcasts.apple.com/us/podcast/apple-news-today/id1473872585\"",
            "    },",
            "    ...",
            "  ],",
            "  ...",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        },
        {
          "anchor": "Adjust-the-Podcast-Orientation",
          "level": 3,
          "text": "Adjust the Podcast Orientation",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The podcast you added to your article shows the default podcast orientation that changes automatically based on screen size. On larger tablet screens, the podcast art displays on the left and the podcast information and link button appear on the right. On smaller mobile screens, the artwork, podcast information, and link button appear stacked.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Instead of using the orientation that automatically changes based on screen size, you can set the default orientation to ",
              "type": "text"
            },
            {
              "code": "lanndscape",
              "type": "codeVoice"
            },
            {
              "text": ". The ",
              "type": "text"
            },
            {
              "code": "landscape",
              "type": "codeVoice"
            },
            {
              "text": " orientation saves screen space on mobile devices.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Copy the line ",
                      "type": "text"
                    },
                    {
                      "code": "\"orientation\": \"landscape\"",
                      "type": "codeVoice"
                    },
                    {
                      "text": ",",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Paste the line inside your ",
                      "type": "text"
                    },
                    {
                      "code": "podcast",
                      "type": "codeVoice"
                    },
                    {
                      "text": " component, after the line that begins with ",
                      "type": "text"
                    },
                    {
                      "code": "\"layout\"",
                      "type": "codeVoice"
                    },
                    {
                      "text": ":",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        },
        {
          "inlineContent": [
            {
              "text": "After you make this change in your code, you can preview your working ",
              "type": "text"
            },
            {
              "code": "article.json",
              "type": "codeVoice"
            },
            {
              "text": " file in News Preview to see a podcast set to ",
              "type": "text"
            },
            {
              "code": "landscape",
              "type": "codeVoice"
            },
            {
              "text": " orientation.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Podcast-Orientation-Result",
          "level": 4,
          "text": "Podcast Orientation: Result",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Ellipses (…) indicate lines of code that have been omitted from this example.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "{",
            "  ...",
            "  \"components\": [",
            "    ...",
            "    {",
            "      \"role\": \"heading2\",",
            "      \"layout\": \"fullMarginAboveHalfBelowLayout\",",
            "      \"text\": \"PODCAST HEADING\"",
            "    },",
            "    {",
            "      \"role\": \"podcast\",",
            "      \"layout\": \"noMarginLayout\",",
            "      \"orientation\": \"landscape\",",
            "      \"URL\": \"https://podcasts.apple.com/us/podcast/apple-news-today/id1473872585\"",
            "    },",
            "    ...",
            "  ],",
            "  ...",
            "}"
          ],
