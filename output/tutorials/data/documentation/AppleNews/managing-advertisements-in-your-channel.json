  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Apple News places ads in any of the following locations:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Between two ",
                      "type": "text"
                    },
                    {
                      "code": "body",
                      "type": "codeVoice"
                    },
                    {
                      "text": " components",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Between two paragraphs inside a ",
                      "type": "text"
                    },
                    {
                      "code": "body",
                      "type": "codeVoice"
                    },
                    {
                      "text": " component",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Between containers",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "After the last component — even if the article is shorter than one screen",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "Ads can’t appear in these locations:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Between anchored components",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "In the first screen of an article",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "In addition to the location requirements, Apple News makes decisions about ad placement for your articles:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Both the size of your article and the arrangement of the components affect ad placement.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Two ads can’t appear in the same viewport, which is the section of the article that’s currently visible within a person’s device frame.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "anchor": "Adjust-Your-Ads-Settings",
          "level": 3,
          "text": "Adjust Your Ads Settings",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "To control the placement of ads in your channel, use News Publisher. For more information, see ",
              "type": "text"
            },
            {
              "identifier": "https://support.apple.com/guide/adguide/apple-news-and-ads-apd070650e01/icloud",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " in the Ads on Apple News User Guide.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
