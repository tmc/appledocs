  },
  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "These features were added in the latest Apple News API release:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/POST-channels-_channelId_-articles",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 400 error if you attempt to publish an article with a publication date before 1970, and a warning if the publication date is before 2015.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/POST-articles-_articleId_",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 400 error if you attempt to update an article with a publication date before 1970, and a warning if the publication date is before 2015.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "These features were added in a previous Apple News API release:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/GET-channels-_channelId_-articles",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 429 error if you exceed the number of articles that you can search for in a channel within a specific time window.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/GET-sections-_sectionId_-articles",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 429 error if you exceed the number of articles that you can search for in a section within a specific time window.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/POST-articles-_articleId_",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 429 error if you exceed the number of articles that you can update within a specific time window.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/GET-articles-_articleId_",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a warning message for an optimized article.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/POST-articles-_articleId_",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 202 error if you attempt to update an optimized article.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "The ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/DELETE-articles-_articleId_",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " endpoint throws a 400 error if you attempt to delete an optimized article.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "This field is no longer supported in Apple News API:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "code": "accessoryText",
                      "type": "codeVoice"
                    },
                    {
                      "text": " is deprecated in ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/Create-Article-Metadata-Fields",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " and ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsAPI/Update-Article-Metadata-Fields",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": ". Use the ",
                      "type": "text"
                    },
                    {
                      "code": "authors",
                      "type": "codeVoice"
                    },
                    {
                      "text": " property in the Apple News Format ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Metadata",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " object instead.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        }
      ],
      "kind": "content"
    }
  ],
