          "type": "heading"
        },
        {
          "code": [
            "          \"animation\": {",
            "            \"type\": \"move_in\",",
            "            \"preferredStartingPosition\": \"right\"",
            "          },"
          ],
          "syntax": "json",
          "type": "codeListing"
