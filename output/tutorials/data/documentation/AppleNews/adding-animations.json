        {
          "anchor": "Scale-Fade-Animation-Copy-This-Code",
          "level": 4,
          "text": "Scale Fade Animation: Copy This Code",
          "type": "heading"
        },
        {
          "code": [
            ",",
            "              \"animation\": {",
            "                \"type\": \"scale_fade\",",
            "                \"userControllable\": true,",
            "                \"initialAlpha\": 0.5,",
            "                \"initialScale\": 0.75",
            "              }"
          ],
          "syntax": "json",
          "type": "codeListing"
        },
