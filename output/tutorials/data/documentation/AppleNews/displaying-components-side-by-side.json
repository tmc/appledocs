            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Aside",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", side by side and horizontally by using the ",
              "type": "text"
            },
            {
              "code": "contentDisplay",
              "type": "codeVoice"
            },
            {
              "text": " type ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/HorizontalStackDisplay",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ". The child components are sized to match the ",
              "type": "text"
            },
            {
              "code": "minimumWidth",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "maximumWidth",
              "type": "codeVoice"
            },
            {
              "text": " values defined in the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/ComponentLayout",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " object of these components. To redistribute the empty space inside a horizontal stack collection, use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/FlexibleSpacer",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " object. This object provides flexible space between components in a container only when its ",
              "type": "text"
            },
            {
              "code": "contentDisplay",
              "type": "codeVoice"
            },
            {
              "text": " value is set to ",
              "type": "text"
            },
            {
              "code": "horizontal_stack",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
