            "      \"layout\": \"fullBleedLayout\",",
            "      \"caption\": \"A caption for the photo.\",",
            "      \"URL\": \"bundle://header.jpg\"",
            "    },",
            "    {",
            "      \"role\": \"caption\",",
            "      \"layout\": \"halfMarginBothLayout\",",
            "      \"text\": \"ABOVE: A caption for the photo. (Attribution)\"",
            "    },",
            "    {",
            "      \"role\": \"divider\",",
            "      \"layout\": \"fullMarginBelowLayout\",",
            "      \"stroke\": {",
