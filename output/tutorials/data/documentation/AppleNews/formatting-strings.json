  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "When using command-line utilities to pass a string to the API client, enclose the string in single quotation marks to treat the text literally. When you enclose a string in double quotation marks, you need to escape certain ASCII characters (for example, the $ character).",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This example uses single quotation marks:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "alert-body='Big Company is acquiring Smaller Company for $2.5 billion.'"
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example shows the result of using single quotation marks:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "\"alertBody\": \"Big Company is acquiring Smaller Company for $2.5 billion.\""
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example uses double quotation marks incorrectly:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "alert-body=\"Big Company is acquiring Smaller Company for $2.5 billion.\""
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example shows the result of using double quotation marks incorrectly. A string in double quotation marks with the $ sign should include an escape character:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "\"alertBody\": \"Big Company is acquiring Smaller Company for .5 billion.\""
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example correctly uses double quotation marks with an escape character:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "alert-body=\"Big Company is acquiring Smaller Company for \\$2.5 billion.\""
          ],
          "syntax": "other",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This example shows the result of using double quotation marks with an escape character:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "\"alertBody\": \"Big Company is acquiring Smaller Company for $2.5 billion.\""
          ],
          "syntax": "other",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
