            {
              "inlineContent": [
                {
                  "text": "An async closure that the system runs for the specified task",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "type.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
