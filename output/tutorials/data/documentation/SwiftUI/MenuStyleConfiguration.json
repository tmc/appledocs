      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Menu/init(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " initializer of ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Menu",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to create an",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "instance using the current menu style, which you can modify to create a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "custom style.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, the following code creates a new, custom style that adds a red",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "border to the current menu style:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct RedBorderMenuStyle: MenuStyle {",
            "    func makeBody(configuration: Configuration) -> some View {",
            "        Menu(configuration)",
            "            .border(Color.red)",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
