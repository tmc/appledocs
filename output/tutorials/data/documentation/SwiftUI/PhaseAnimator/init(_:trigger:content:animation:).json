    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The sequence of phases to cycle through. Ensure that the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "sequence isnâ€™t empty. If it is, SwiftUI logs a runtime warning and",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "also returns a visual warning as the output view.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "phases"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A value whose changes cause the animator to use the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "next phase.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "trigger"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A view builder closure that takes the current phase as an",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "input. Return a view thatâ€™s based on the phase input.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "content"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A closure that takes the current phase as input. Return",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "the animation to use when transitioning to the next phase. If you",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "return ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": ", the transition doesnâ€™t animate. If you donâ€™t set this",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "parameter, SwiftUI uses a default animation.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "animation"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "When the phase animator first appears, this initializer renders the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "content",
              "type": "codeVoice"
            },
            {
              "text": " closure using the first phase as input to the closure.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "When the value of the ",
              "type": "text"
            },
            {
              "code": "trigger",
              "type": "codeVoice"
            },
            {
              "text": " input changes, the animator",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "reevaluates the ",
              "type": "text"
            },
            {
              "code": "content",
              "type": "codeVoice"
            },
            {
              "text": " closure using the value from the second phase",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and animates the change. This procedure repeats with each",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "successive phase until reaching the last phase, at which point",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the animator loops back to the first phase.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
