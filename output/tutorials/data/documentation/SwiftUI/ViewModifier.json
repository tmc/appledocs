    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Adopt the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ViewModifier",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " protocol when you want to create a reusable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "modifier that you can apply to any view. The example below combines several",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "modifiers to create a new modifier that you can use to create blue caption",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "text surrounded by a rounded rectangle:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct BorderedCaption: ViewModifier {",
            "    func body(content: Content) -> some View {",
            "        content",
            "            .font(.caption2)",
            "            .padding(10)",
            "            .overlay(",
            "                RoundedRectangle(cornerRadius: 15)",
            "                    .stroke(lineWidth: 1)",
            "            )",
            "            .foregroundColor(Color.blue)",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can apply ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/modifier(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " directly to a view, but a more common",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and idiomatic approach uses ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/modifier(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to define an extension to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " itself that incorporates the view modifier:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "extension View {",
            "    func borderedCaption() -> some View {",
            "        modifier(BorderedCaption())",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can then apply the bordered caption to any view, similar to this:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "Image(systemName: \"bus\")",
            "    .resizable()",
            "    .frame(width:50, height:50)",
            "Text(\"Downtown Bus\")",
            "    .borderedCaption()"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "identifier": "SwiftUI-View-ViewModifier.png",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "A type conforming to this protocol inherits ",
              "type": "text"
            },
            {
              "code": "@preconcurrency @MainActor",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "isolation from the protocol if the conformance is included in the type’s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "base declaration:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct MyCustomType: Transition {",
            "    // `@preconcurrency @MainActor` isolation by default",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Isolation to the main actor is the default, but it’s not required. Declare",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the conformance in an extension to opt out of main actor isolation:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "extension MyCustomType: Transition {",
            "    // `nonisolated` by default",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
