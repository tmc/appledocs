      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use a settings scene to have SwiftUI manage views with controls for your",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "app’s settings when you declare your app using the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/App",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " protocol.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "When you use an ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/App",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " declaration for multiple platforms, compile the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "settings scene only in macOS:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@main",
            "struct MyApp: App {",
            "    var body: some Scene {",
            "        WindowGroup {",
            "            ContentView()",
            "        }",
            "        #if os(macOS)",
            "        Settings {",
            "            SettingsView()",
            "        }",
            "        #endif",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Passing a view as the argument to a settings scene in the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/App",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "declaration causes SwiftUI to enable the app’s Settings menu item.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "SwiftUI manages displaying and removing the settings view when the user",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "selects the Settings item from the application menu or the equivalent",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "keyboard shortcut:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "SwiftUI-AppBehavior-Settings-AppMenu.png",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The contents of your settings view are controls that modify bindings",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/userdefaults",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "values that SwiftUI manages using the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/AppStorage",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " property wrapper:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct GeneralSettingsView: View {",
            "    @AppStorage(\"showPreview\") private var showPreview = true",
            "    @AppStorage(\"fontSize\") private var fontSize = 12.0",
            "",
            "    var body: some View {",
            "        Form {",
            "            Toggle(\"Show Previews\", isOn: $showPreview)",
            "            Slider(value: $fontSize, in: 9...96) {",
            "                Text(\"Font Size (\\(fontSize, specifier: \"%.0f\") pts)\")",
            "            }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can define your settings in a single view, or you can use a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/TabView",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to group settings into different collections:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct SettingsView: View {",
            "    var body: some View {",
            "        TabView {",
            "            Tab(\"General\", systemImage: \"gear\") {",
            "                GeneralSettingsView()",
            "            }",
            "            Tab(\"Advanced\", systemImage: \"star\") {",
            "                AdvancedSettingsView()",
            "            }",
            "        }",
            "        .scenePadding()",
            "        .frame(maxWidth: 350, minHeight: 100)",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "identifier": "SwiftUI-AppBehavior-Settings.png",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
