    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A ",
              "type": "text"
            },
            {
              "code": "SectionConfiguration",
              "type": "codeVoice"
            },
            {
              "text": " includes the content of the section, as well as",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "its header and footer.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "A ",
              "type": "text"
            },
            {
              "code": "SectionConfiguration",
              "type": "codeVoice"
            },
            {
              "text": " can represent either an explicit section,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "or groups of sibling views that are not explicitly wrapped in a section.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Notably, the ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "footer",
              "type": "codeVoice"
            },
            {
              "text": " and ",
              "type": "text"
            },
            {
              "code": "content",
              "type": "codeVoice"
            },
            {
              "text": " properties of a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "SectionConfiguration",
              "type": "codeVoice"
            },
            {
              "text": " are all ",
              "type": "text"
            },
            {
              "code": "SubviewsCollection",
              "type": "codeVoice"
            },
            {
              "text": "s as they can be made up",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of multiple subviews. That means in most cases, the subviews collection",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "should be treated as a collection (either indexed into, or used with a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "ForEach",
              "type": "codeVoice"
            },
            {
              "text": "), or the subviews collection should be wrapped in a container",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "view, like a layout, or other custom container:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "PinboardSectionsLayout {",
            "    ForEach(sections: content) { section in",
            "        VStack {",
            "            HStack { section.header }",
            "            section.content",
            "            HStack { section.footer }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Here, we want to create one view for ",
              "type": "text"
            },
            {
              "code": "PinboardSectionsLayout",
              "type": "codeVoice"
            },
            {
              "text": " to place per",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "section in content. To do that, we surround the ",
              "type": "text"
            },
            {
              "code": "ForEach",
              "type": "codeVoice"
            },
            {
              "text": " body in another",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "container, a ",
              "type": "text"
            },
            {
              "code": "VStack",
              "type": "codeVoice"
            },
            {
              "text": " layout, ensuring the different subviews of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "section.content are treated as a single view by the surrounding layout.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Additionally, surrounding the header and footer in an ",
              "type": "text"
            },
            {
              "code": "HStack",
              "type": "codeVoice"
            },
            {
              "text": " layout",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "avoids vertically stacking subviews of the header and footer",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "which we want visually grouped together.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
