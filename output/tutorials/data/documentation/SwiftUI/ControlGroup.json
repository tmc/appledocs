    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You can provide an optional label to this view that describes its children.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "This view may be used in different ways depending on the surrounding",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "context. For example, when you place the control group in a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "toolbar item, SwiftUI uses the label when the group is moved to the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "toolbar’s overflow menu.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ContentView()",
            "    .toolbar(id: \"items\") {",
            "        ToolbarItem(id: \"media\") {",
            "            ControlGroup {",
            "                MediaButton()",
            "                ChartButton()",
            "                GraphButton()",
            "            } label: {",
            "                Label(\"Plus\", systemImage: \"plus\")",
            "            }",
            "        }",
            "    }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
