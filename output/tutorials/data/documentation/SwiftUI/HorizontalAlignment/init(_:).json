          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this initializer to create a custom horizontal alignment. Define",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "an ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/AlignmentID",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " type, and then use that type to create a new",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "static property on ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/HorizontalAlignment",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "private struct OneQuarterAlignment: AlignmentID {",
            "    static func defaultValue(in context: ViewDimensions) -> CGFloat {",
            "        context.width / 4",
            "    }",
            "}",
            "",
            "extension HorizontalAlignment {",
            "    static let oneQuarter = HorizontalAlignment(OneQuarterAlignment.self)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Every horizontal alignment instance that you create needs a unique",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "identifier. For more information, see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/AlignmentID",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
