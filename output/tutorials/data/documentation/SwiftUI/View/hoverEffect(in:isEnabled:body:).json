      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An optional ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/HoverEffectGroup",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " to add this effect to.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "group"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Whether the effect is enabled or not. If ",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": ", the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "effect’s inactive state will be applied, and it will not apply the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "active state when hovered.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "isEnabled"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The closure that constructs a ",
                  "type": "text"
                },
                {
                  "code": "HoverEffectContent",
                  "type": "codeVoice"
                },
                {
                  "text": " for",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
