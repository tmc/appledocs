          "content": [
            {
              "inlineContent": [
                {
                  "text": "The chart scroll target behavior.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "behavior"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this method to control how the chart scrolls and aligns when the user finishes scrolling.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The example below sets the scroll target behavior to align to the values in the chart.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "When the user finishes scrolling, the chart will settle to align with the values in the chart.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "Chart(data) {",
            "    BarMark(",
            "        x: .value(\"x\", $0.x),",
            "        y: .value(\"y\", $0.y)",
            "    )",
            "}",
            ".chartScrollableAxes(.vertical)",
            ".chartYVisibleDomain(length: 10)",
            ".chartScrollTargetBehavior(.valueAligned(unit: 1))"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
