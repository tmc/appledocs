    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The content is pinned at the bottom of the sidebar, so it’s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "always visible when the sidebar is visible and doesn’t",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "scroll with the content.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example adds an account button to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the bottom of the sidebar:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "TabView {",
            "    Tab(\"Home\", systemImage: \"house\") {",
            "        HomeView()",
            "    }",
            "",
            "    Tab(\"Alerts\", systemImage: \"bell\") {",
            "        AlertsView()",
            "    }",
            "",
            "    Tab(\"Browse\", systemImage: \"list.bullet\") {",
            "        MyBrowseView()",
            "    }",
            "}",
            ".tabViewStyle(.sidebarAdaptable)",
            ".tabViewSidebarBottomBar {",
            "    AccountButton()",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
