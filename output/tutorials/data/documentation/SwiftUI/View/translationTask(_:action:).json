    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A configuration for a ",
                  "type": "text"
                },
                {
                  "code": "TranslationSession",
                  "type": "codeVoice"
                },
                {
                  "text": ". When this configuration is non-nil and changes.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "the ",
                  "type": "text"
                },
                {
                  "code": "action",
                  "type": "codeVoice"
                },
                {
                  "text": " runs providing an instance of",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "code": "TranslationSession",
                  "type": "codeVoice"
                },
                {
                  "text": " to perform translations.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "configuration"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A closure that runs when the",
                  "type": "text"
                },
                {
                  "code": "configuration",
                  "type": "codeVoice"
                },
                {
                  "text": " is non-nil and changes.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "This closure runs when the view appears if ",
                  "type": "text"
                },
                {
                  "code": "configuration",
                  "type": "codeVoice"
                },
                {
                  "text": " is initially non-nil. It provides a",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "code": "TranslationSession",
                  "type": "codeVoice"
                },
                {
                  "text": " instance to perform one or multiple translations.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "action"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This task provides an instance of ",
              "type": "text"
            },
            {
              "code": "TranslationSession",
              "type": "codeVoice"
            },
            {
              "text": " to use in translations.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Whenever ",
              "type": "text"
            },
            {
              "code": "TranslationSession/Configuration",
              "type": "codeVoice"
            },
            {
              "text": " changes and isn’t ",
              "type": "text"
            },
            {
              "code": "nil",
              "type": "codeVoice"
            },
            {
              "text": ", the closure ",
              "type": "text"
            },
            {
              "code": "action",
              "type": "codeVoice"
            },
            {
              "text": " runs,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "providing a ",
              "type": "text"
            },
            {
              "code": "TranslationSession",
              "type": "codeVoice"
            },
            {
              "text": " instance to perform one or more translations.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, you can create a ",
              "type": "text"
            },
            {
              "code": "TranslationSession/Configuration",
              "type": "codeVoice"
            },
            {
              "text": " in response to a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "button press to trigger translation:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct ContentView: View {",
            "    @State private var sourceText = \"Hallo, Welt!\"",
            "    var sourceLanguage: Locale.Language?",
            "    var targetLanguage: Locale.Language?",
            "",
            "    @State private var targetText: String?",
            "    @State private var configuration: TranslationSession.Configuration?",
            "",
            "    var body: some View {",
            "        VStack {",
            "            Text(targetText ?? sourceText)",
            "            Button(\"Translate\") {",
            "                guard configuration == nil else {",
            "                    configuration?.invalidate()",
            "                    return",
            "                }",
            "",
            "                 configuration = TranslationSession.Configuration(",
            "                    source: sourceLanguage,",
            "                    target: targetLanguage)",
            "            }",
            "            .translationTask(configuration) { session in",
            "                Task { @MainActor in",
            "                    do {",
            "                        let response = try await session.translate(sourceText)",
            "                        targetText = response.targetText",
            "                    } catch {",
            "                        // code to handle error",
            "                    }",
            "                }",
            "            }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The system throws a ",
              "type": "text"
            },
            {
              "code": "fatalError",
              "type": "codeVoice"
            },
            {
              "text": " if you use a ",
              "type": "text"
            },
            {
              "code": "TranslationSession",
              "type": "codeVoice"
            },
            {
              "text": " instance after the view it attaches to disappears, or if you use it after",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "changing the ",
              "type": "text"
            },
            {
              "code": "configuration",
              "type": "codeVoice"
            },
            {
              "text": ", causing the ",
              "type": "text"
            },
            {
              "code": "action",
              "type": "codeVoice"
            },
            {
              "text": " closure to provide a new ",
              "type": "text"
            },
            {
              "code": "TranslationSession",
              "type": "codeVoice"
            },
            {
              "text": " instance.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
