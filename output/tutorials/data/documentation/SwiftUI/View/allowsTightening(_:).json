    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "code": "allowsTightening(_:)",
              "type": "codeVoice"
            },
            {
              "text": " to enable the compression of inter-character",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "spacing of text in a view to try to fit the text in the view’s bounds.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "In the example below, two identically configured text views show the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "effects of ",
              "type": "text"
            },
            {
              "code": "allowsTightening(_:)",
              "type": "codeVoice"
            },
            {
              "text": " on the compression of the spacing",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "between characters:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "VStack {",
            "    Text(\"This is a wide text element\")",
            "        .font(.body)",
            "        .frame(width: 200, height: 50, alignment: .leading)",
            "        .lineLimit(1)",
            "        .allowsTightening(true)",
            "",
            "    Text(\"This is a wide text element\")",
            "        .font(.body)",
            "        .frame(width: 200, height: 50, alignment: .leading)",
            "        .lineLimit(1)",
            "        .allowsTightening(false)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
