      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You use this modifier to customize how scrollable content interacts",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with the software keyboard. For example, you can specify a value of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ScrollDismissesKeyboardMode/immediately",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to indicate that you",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "would like scrollable content to immediately dismiss the keyboard if",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "present when a scroll drag gesture begins.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@State private var text = \"\"",
            "",
            "ScrollView {",
            "    TextField(\"Prompt\", text: $text)",
            "    ForEach(0 ..< 50) { index in",
            "        Text(\"\\(index)\")",
            "            .padding()",
            "    }",
            "}",
            ".scrollDismissesKeyboard(.immediately)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "You can also use this modifier to customize the keyboard dismissal",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "behavior for other kinds of scrollable views, like a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/List",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " or a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/TextEditor",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "By default, a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/TextEditor",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " is interactive while other kinds",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of scrollable content always dismiss the keyboard on a scroll",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "when linked against iOS 16 or later. Pass a value of",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ScrollDismissesKeyboardMode/never",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to indicate that scrollable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "content should never automatically dismiss the keyboard.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
