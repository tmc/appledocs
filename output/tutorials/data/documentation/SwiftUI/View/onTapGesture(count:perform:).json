    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this method to perform the specified ",
              "type": "text"
            },
            {
              "code": "action",
              "type": "codeVoice"
            },
            {
              "text": " when the user clicks",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "or taps on the view or container ",
              "type": "text"
            },
            {
              "code": "count",
              "type": "codeVoice"
            },
            {
              "text": " times.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "If you create a control that’s functionally equivalent",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "to a ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Button",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ", use ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ButtonStyle",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " to create a customized button",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "instead.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "inlineContent": [
            {
              "text": "In the example below, the color of the heart images changes to a random",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "color from the ",
              "type": "text"
            },
            {
              "code": "colors",
              "type": "codeVoice"
            },
            {
              "text": " array whenever the user clicks or taps on the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "view twice:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct TapGestureExample: View {",
            "    let colors: [Color] = [.gray, .red, .orange, .yellow,",
            "                           .green, .blue, .purple, .pink]",
            "    @State private var fgColor: Color = .gray",
            "",
            "    var body: some View {",
            "        Image(systemName: \"heart.fill\")",
            "            .resizable()",
            "            .frame(width: 200, height: 200)",
            "            .foregroundColor(fgColor)",
            "            .onTapGesture(count: 2) {",
            "                fgColor = colors.randomElement()!",
            "            }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
