        {
          "inlineContent": [
            {
              "text": "Use this modifier to control whether the scroll indicators of a scroll",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "view briefly flash when the view first appears. For example, you can",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "make the indicators flash by setting the ",
              "type": "text"
            },
            {
              "code": "onAppear",
              "type": "codeVoice"
            },
            {
              "text": " parameter to ",
              "type": "text"
            },
            {
              "code": "true",
              "type": "codeVoice"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ScrollView {",
            "    // ...",
            "}",
            ".scrollIndicatorsFlash(onAppear: true)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Only scroll indicators that you configure to be visible flash.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "To flash scroll indicators when a value changes, use",
              "type": "text"
