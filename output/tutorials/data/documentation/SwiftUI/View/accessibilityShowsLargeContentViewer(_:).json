    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Rely on the large content viewer only in situations",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "where items must remain small due to unavoidable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "design constraints. For example, buttons in a tab bar",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "remain small to leave more room for the main app content.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example shows how to add a custom large",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "content view:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "var body: some View {",
            "    Button(action: newMessage) {",
            "        Image(systemName: \"plus\")",
            "    }",
            "    .accessibilityShowsLargeContentViewer {",
            "        Label(\"New Message\", systemImage: \"plus\")",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Don’t use the large content viewer as a replacement for proper",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Dynamic Type support. For example, Dynamic Type allows items",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "in a list to grow or shrink vertically to accommodate the user’s preferred",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "font size. Rely on the large content viewer only in situations where",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "items must remain small due to unavoidable design constraints.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, views that have their Dynamic Type size constrained",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/dynamicTypeSize(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " may require a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "large content view.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
