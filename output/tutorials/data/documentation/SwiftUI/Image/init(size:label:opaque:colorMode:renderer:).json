    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The size of the newly-created image.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "size"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The label associated with the image. SwiftUI uses the label",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "for accessibility.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "label"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A Boolean value that indicates whether the image is fully",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "opaque. This may improve performance when ",
                  "type": "text"
                },
                {
                  "code": "true",
                  "type": "codeVoice"
                },
                {
                  "text": ". Don’t render",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "non-opaque pixels to an image declared as opaque. Defaults to ",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "opaque"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The working color space and storage format of the image.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "Defaults to ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ColorRenderingMode/nonLinear",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "colorMode"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A closure to draw the contents of the image. The closure",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "receives a ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/GraphicsContext",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " as its parameter.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "renderer"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this initializer to create an image by calling drawing commands on a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/GraphicsContext",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " provided to the ",
              "type": "text"
            },
            {
              "code": "renderer",
              "type": "codeVoice"
            },
            {
              "text": " closure.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example shows a custom image created by passing a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "GraphicContext",
              "type": "codeVoice"
            },
            {
              "text": " to draw an ellipse and fill it with a gradient:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "let mySize = CGSize(width: 300, height: 200)",
            "let image = Image(size: mySize) { context in",
            "    context.fill(",
            "        Path(",
            "            ellipseIn: CGRect(origin: .zero, size: mySize)),",
            "            with: .linearGradient(",
            "                Gradient(colors: [.yellow, .orange]),",
            "                startPoint: .zero,",
            "                endPoint: CGPoint(x: mySize.width, y:mySize.height))",
            "    )",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "identifier": "Image-2",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
