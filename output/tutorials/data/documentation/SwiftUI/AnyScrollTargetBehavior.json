    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Provide this to the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/scrollTargetBehavior(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " modifier. When the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "underlying behavior changes, the scroll view to which this behavior applies",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "will be updated.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Use this to dynamically control the scroll target behavior at runtime.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "For example, you could provide a paging behavior in compact size classes",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and a view aligned behavior otherwise.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@Environment(\\.horizontalSizeClass) var sizeClass",
            "",
            "var body: some View {",
            "    ScrollView { ... }",
            "        .scrollTargetBehavior(scrollTargetBehavior)",
            "}",
            "",
            " var scrollTargetBehavior: some ScrollTargetBehavior {",
            "    sizeClass == .compact",
            "        ? AnyScrollTargetBehavior(.paging)",
            "        : AnyScrollTargetBehavior(.viewAligned)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
