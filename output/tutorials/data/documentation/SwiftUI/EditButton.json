    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "An edit button toggles the environment’s ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/EnvironmentValues/editMode",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "value for content within a container that supports edit mode.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "In the following example, an edit button placed inside a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/NavigationView",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "supports editing of a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/List",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@State private var fruits = [",
            "    \"Apple\",",
            "    \"Banana\",",
            "    \"Papaya\",",
            "    \"Mango\"",
            "]",
            "",
            "var body: some View {",
            "    NavigationView {",
            "        List {",
            "            ForEach(fruits, id: \\.self) { fruit in",
            "                Text(fruit)",
            "            }",
            "            .onDelete { fruits.remove(atOffsets: $0) }",
            "            .onMove { fruits.move(fromOffsets: $0, toOffset: $1) }",
            "        }",
            "        .navigationTitle(\"Fruits\")",
            "        .toolbar {",
            "            EditButton()",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Because the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ForEach",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " in the above example defines behaviors for",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/DynamicViewContent/onDelete(perform:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/DynamicViewContent/onMove(perform:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", the editable list displays the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "delete and move UI when the user taps Edit. Notice that the Edit button",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "displays the title “Done” while edit mode is active:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "identifier": "EditButton-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can also create custom views that react to changes in the edit mode",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "state, as described in ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/EditMode",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
