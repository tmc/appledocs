    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Conforming types can define shared contexts that will be cached by the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "preview system, then reused across participating previews. For example,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "you might create a model container here and populate it with sample data;",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "in your ",
              "type": "text"
            },
            {
              "code": "body",
              "type": "codeVoice"
            },
            {
              "text": " method you would then apply it to the preview using the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": ".modelContainer",
              "type": "codeVoice"
            },
            {
              "text": " view modifier.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct SampleData: PreviewModifier {",
            "    static func makeSharedContext() throws -> ModelContainer {",
            "        let container = try ModelContainer(for: Snack.self)",
            "        container.mainContext.insert(Snack.potatoChips)",
            "        return container",
            "    }",
            "",
            "    func body(content: Content, context: ModelContainer) -> some View {",
            "        content.modelContainer(context)",
            "    }",
            " }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": ".modifier",
              "type": "codeVoice"
            },
            {
              "text": " preview trait to attach modifiers to a preview.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "#Preview(traits: .modifier(SampleData())) {",
            "    @Previewable @Query var snacks: [Snack]",
            "    return SnackView(snack: snacks.first!)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
