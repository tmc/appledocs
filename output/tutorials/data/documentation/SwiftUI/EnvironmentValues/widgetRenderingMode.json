    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You can read the rendering mode from the environment values using this",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "key.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@Environment(\\.widgetRenderingMode) var widgetRenderingMode"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Then modify the widget’s appearance based on the mode.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "var body: some View {",
            "    ZStack {",
            "       switch renderingMode {",
            "        case .fullColor:",
            "           Text(\"Full color\")",
            "        case .accented:",
            "           ZStack {",
            "               Circle(...)",
            "               VStack {",
            "                   Text(\"Accented\")",
            "                       .widgetAccentable()",
            "                   Text(\"Normal\")",
            "               }",
            "           }",
            "        case .vibrant:",
            "           Text(\"Full color\")",
            "        default:",
            "           ...",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
