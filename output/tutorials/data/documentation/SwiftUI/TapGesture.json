      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "To recognize a tap gesture on a view, create and configure the gesture, and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "then add it to the view using the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/gesture(_:including:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " modifier.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "The following code adds a tap gesture to a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Circle",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " that toggles the color",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of the circle:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct TapGestureView: View {",
            "    @State private var tapped = false",
            "",
            "    var tap: some Gesture {",
            "        TapGesture(count: 1)",
            "            .onEnded { _ in self.tapped = !self.tapped }",
            "    }",
            "",
            "    var body: some View {",
            "        Circle()",
            "            .fill(self.tapped ? Color.blue : Color.red)",
            "            .frame(width: 100, height: 100, alignment: .center)",
            "            .gesture(tap)",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
