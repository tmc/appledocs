    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The shader to apply as a layer effect.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "shader"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "If the shader function samples from",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "the layer at locations not equal to the destination",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "position, this value must specify the maximum sampling",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "distance in each axis, for all source pixels.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "maxSampleOffset"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A filter applies the shader as a layer effect.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "For a shader function to act as a layer effect it must",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "have a function signature matching:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "[[ stitchable ]] half4 name(float2 position,",
            "  SwiftUI::Layer layer, args...)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "where ",
              "type": "text"
            },
            {
              "code": "position",
              "type": "codeVoice"
            },
            {
              "text": " is the user-space coordinates of the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "destination pixel applied to the shader, and ",
              "type": "text"
            },
            {
              "code": "layer",
              "type": "codeVoice"
            },
            {
              "text": " is a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "rasterized subregion of the source layer. ",
              "type": "text"
            },
            {
              "code": "args...",
              "type": "codeVoice"
            },
            {
              "text": " should",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "be compatible with the uniform arguments bound to ",
              "type": "text"
            },
            {
              "code": "shader",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The ",
              "type": "text"
            },
            {
              "code": "SwiftUI::Layer",
              "type": "codeVoice"
            },
            {
              "text": " type is defined in the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "<SwiftUI/SwiftUI.h>",
              "type": "codeVoice"
            },
            {
              "text": " header file. It exports a single",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "sample()",
              "type": "codeVoice"
            },
            {
              "text": " function that returns a linearly-filtered pixel",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "value from a position in the source content, as a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "premultiplied RGBA pixel value:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "namespace SwiftUI {",
            "  struct Layer {",
            "    half4 sample(float2 position) const;",
            "  };",
            "};"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "The function should return the color mapping to the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "destination pixel, typically by sampling one or more pixels",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "from ",
              "type": "text"
            },
            {
              "code": "layer",
              "type": "codeVoice"
            },
            {
              "text": " at location(s) derived from ",
              "type": "text"
            },
            {
              "code": "position",
              "type": "codeVoice"
            },
            {
              "text": " and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "them applying some kind of transformation to produce a new",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "color.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
