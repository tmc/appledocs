    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this modifier to conditionally display a toolbar item in its",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "toolbar. On macOS and iOS, hidden items will be displayed during user",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "customization.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example hides a downloads button when there are no",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "downloads, but it is displayed during customization.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct ContentView {",
            "    @State private var showDownloads = false",
            "",
            "    var body: some View {",
            "        BrowserView()",
            "            .toolbar(id: \"browserToolbar\") {",
            "                ToolbarItem(id: \"downloads\") {",
            "                    DownloadsButton()",
            "                }",
            "                .hidden(!showDownloads)",
            "            }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
