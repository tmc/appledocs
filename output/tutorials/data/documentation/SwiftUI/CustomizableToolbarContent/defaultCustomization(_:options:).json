          "content": [
            {
              "inlineContent": [
                {
                  "text": "The default visibility of toolbar content",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "with the default customization behavior.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
