          "inlineContent": [
            {
              "text": "By default, scroll views in macOS show indicators when a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "mouse is connected. Use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ScrollIndicatorVisibility/never",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to indicate",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a stronger preference that can override this behavior.",
              "type": "text"
            }
          ],
