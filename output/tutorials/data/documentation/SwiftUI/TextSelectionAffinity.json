    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This type also determines whether, for example, the insertion point appears",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "after the last character on a line or before the first character on the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "following line in cases where text wraps across line boundaries.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Given the scenario ",
              "type": "text"
            },
            {
              "code": "hello|مرحبا",
              "type": "codeVoice"
            },
            {
              "text": ", where ",
              "type": "text"
            },
            {
              "code": "|",
              "type": "codeVoice"
            },
            {
              "text": " represents the cursor & ",
              "type": "text"
            },
            {
              "code": "مرحبا",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "represents “hello” in Arabic, the ambiguity arises because:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "If the cursor is associated with the end of the English word, it would be",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "as if you’re continuing to type in English (LTR).",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "If the cursor is associated with the beginning of the Arabic word, it would",
                      "type": "text"
                    },
                    {
                      "text": " ",
                      "type": "text"
                    },
                    {
                      "text": "also be as if you’re continuing to type in Arabic (RTL).",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "code": "TextSelectionAffinity",
              "type": "codeVoice"
            },
            {
              "text": " helps resolve this ambiguity by determining the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "direction or association of the cursor relative to the surrounding text.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can configure the selection affinity on a given hierarchy by using the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/View/textSelectionAffinity(_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " modifier:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct SuggestionTextEditor: View {",
            "    @State var text: String = \"\"",
            "    @State var selection: TextSelection? = nil",
            "",
            "    var body: some View {",
            "        VStack {",
            "            TextEditor(text: $text, selection: $selection)",
            "            // A helper view that offers live suggestions based on selection.",
            "            SuggestionsView(",
            "                substrings: getSubstrings(text: text, indices: selection?.indices))",
            "        }",
            "        .textSelectionAffinity(.upstream)",
            "    }",
            "",
            "    private func getSubstrings(",
            "        text: String, indices: TextSelection.Indices?",
            "    ) -> [Substring] {",
            "        // Resolve substrings representing the current selection...",
            "    }",
            "}",
            "",
            "struct SuggestionsView: View { ... }"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
