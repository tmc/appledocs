    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "On iOS, the actions are displayed after the other tabs",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "in the section. On macOS, the actions are displayed",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "when a user hovers over the section.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Applying this modifier to a single ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Tab",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " has no effect.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example adds an ‘Add’ button to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the ‘Categories’ section.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "TabView {",
            "    Tab(\"Home\", systemImage: \"house\") {",
            "        HomeView()",
            "    }",
            "",
            "    Tab(\"Alerts\", systemImage: \"bell\") {",
            "        AlertsView()",
            "    }",
            "",
            "    TabSection(\"Categories\") {",
            "        Tab(\"Climate\", systemImage: \"fan\") {",
            "            ClimateView()",
            "        }",
            "",
            "        Tab(\"Lights\", systemImage: \"lightbulb\") {",
            "            LightsView()",
            "        }",
            "    }",
            "    .sectionActions {",
            "        Button(\"Add Category\", systemImage: \"plus\") { }",
            "    }",
            "}",
            ".tabViewStyle(.sidebarAdaptable)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
