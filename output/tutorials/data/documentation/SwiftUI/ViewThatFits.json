    {
      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "code": "ViewThatFits",
              "type": "codeVoice"
            },
            {
              "text": " evaluates its child views in the order you provide them",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to the initializer. It selects the first child whose ideal size on the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "constrained axes fits within the proposed size. This means that you",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "provide views in order of preference. Usually this order is largest to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "smallest, but since a view might fit along one constrained axis but not the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "other, this isn’t always the case. By default, ",
              "type": "text"
            },
            {
              "code": "ViewThatFits",
              "type": "codeVoice"
            },
            {
              "text": " constrains",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "in both the horizontal and vertical axes.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example shows an ",
              "type": "text"
            },
            {
              "code": "UploadProgressView",
              "type": "codeVoice"
            },
            {
              "text": " that uses ",
              "type": "text"
            },
            {
              "code": "ViewThatFits",
              "type": "codeVoice"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to display the upload progress in one of three ways. In order, it attempts",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "to display:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "An ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/HStack",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " that contains a ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/Text",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": " view and a ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/ProgressView",
                      "isActive": true,
                      "type": "reference"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Only the ",
                      "type": "text"
                    },
                    {
                      "code": "ProgressView",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Only the ",
                      "type": "text"
                    },
                    {
                      "code": "Text",
                      "type": "codeVoice"
                    },
                    {
                      "text": " view.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        },
        {
          "inlineContent": [
            {
              "text": "The progress views are fixed to a 100-point width.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct UploadProgressView: View {",
            "    var uploadProgress: Double",
            "",
            "    var body: some View {",
            "        ViewThatFits(in: .horizontal) {",
            "            HStack {",
            "                Text(\"\\(uploadProgress.formatted(.percent))\")",
            "                ProgressView(value: uploadProgress)",
            "                    .frame(width: 100)",
            "            }",
            "            ProgressView(value: uploadProgress)",
            "                .frame(width: 100)",
            "            Text(\"\\(uploadProgress.formatted(.percent))\")",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This use of ",
              "type": "text"
            },
            {
              "code": "ViewThatFits",
              "type": "codeVoice"
            },
            {
              "text": " evaluates sizes only on the horizontal axis. The",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "following code fits the ",
              "type": "text"
            },
            {
              "code": "UploadProgressView",
              "type": "codeVoice"
            },
            {
              "text": " to several fixed widths:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "VStack {",
            "    UploadProgressView(uploadProgress: 0.75)",
            "        .frame(maxWidth: 200)",
            "    UploadProgressView(uploadProgress: 0.75)",
            "        .frame(maxWidth: 100)",
            "    UploadProgressView(uploadProgress: 0.75)",
            "        .frame(maxWidth: 50)",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "identifier": "ViewThatFits-1",
              "type": "image"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
