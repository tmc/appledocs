      "content": [
        {
          "anchor": "overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "In the following example, every view in the lazy stack is flexible",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "in both directions and the scroll view settles to container-aligned",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "boundaries.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ScrollView {",
            "    LazyVStack(spacing: 0.0) {",
            "        ForEach(items) { item in",
            "            FullScreenItem(item)",
            "        }",
            "    }",
            "}",
            ".scrollTargetBehavior(.paging)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
