    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The view to extract the sections of.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "view"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Sections are constructed lazily, on demand, so access only as much",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "of this collection as is necessary to create the resulting content.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "struct SectionedStack<Content: View>: View {",
            "    var content: Content",
            "",
            "    init(@ViewBuilder content: () -> Content) {",
            "        self.content = content()",
            "    }",
            "",
            "    var body: some View {",
            "        VStack {",
            "            Group(sections: content) { sections in",
            "                ForEach(sections) { section in",
            "                    SectionChrome {",
            "                        section.content",
            "                    } header: {",
            "                        section.header",
            "                    } footer: {",
            "                        section.footer",
            "                    }",
            "                }",
            "            }",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "This can then be used by creating a ",
              "type": "text"
            },
            {
              "code": "SectionedStack",
              "type": "codeVoice"
            },
            {
              "text": " with it’s",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "view builder-based initializer.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "SectionedStack {",
            "    Section(\"Header A\") {",
            "        Text(\"Hello\")",
            "        Text(\"World\")",
            "    } footer: {",
            "        Text(\"Footer A\")",
            "    }",
            "    Section(\"Header B\") {",
            "        Text(\"Foo\")",
            "        Text(\"Bar\")",
            "    } footer: {",
            "        Text(\"Footer B\")",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "Any content of the given view which is not explicitly specified as a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "section is grouped with its sibling content to form implicit sections,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "meaning the minimum number of sections in a ",
              "type": "text"
            },
            {
              "code": "SectionCollection",
              "type": "codeVoice"
            },
            {
              "text": " is one.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "For example in the following ",
              "type": "text"
            },
            {
              "code": "SectionedStack",
              "type": "codeVoice"
            },
            {
              "text": ", there is one explicit",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "section, and two implicit sections containing the content before,",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "and after the explicit section:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "SectionedStack {",
            "    Text(\"First implicit section\")",
            "    Section(\"Explicit section\") {",
            "        Text(\"Content\")",
            "    }",
            "    Text(\"Second implicit section\")",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
