      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The hand activation behavior to use for the gesture.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "behavior"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A new gesture with a preference to activate with the provided behavior.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/HandActivationBehavior/automatic",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to allow a gesture to activate",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "with default system behaviors. Use ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/HandActivationBehavior/pinch",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " when",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "a gesture should only trigger when the hand is pinched.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "For example, in a 3D chess application, a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.SwiftUI/documentation/SwiftUI/DragGesture",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " that enables",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "movement of the pieces could use the pinch behavior to ensure that piece",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "movement is only possible when a hand is pinched in order to avoid",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "pushing the piece around by only touching it:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "Model3D(named: \"Pawn\")",
            "    .gesture(",
            "        DragGesture()",
            "            .handActivationBehavior(.pinch)",
            "            .updating($chessDragState) { value, state, _ in",
            "                // ...",
            "            }",
            "    )"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
