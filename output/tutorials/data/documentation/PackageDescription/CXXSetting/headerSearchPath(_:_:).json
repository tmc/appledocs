      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The path of the directory that contains the headers. The path is",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "relative to the target’s directory.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "path"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A condition that restricts the application of the build setting.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "condition"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use this setting to add a search path for headers within your target.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "You can’t use absolute paths and you can’t use this setting to provide",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "headers that are visible to other targets.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The path must be a directory inside the package.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "First available in PackageDescription 5.0.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Since",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
