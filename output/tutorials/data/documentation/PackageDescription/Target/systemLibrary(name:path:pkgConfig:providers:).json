    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The name of the target.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "name"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The custom path for the target. By default, a targets sources",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "are expected to be located in the predefined search paths, such as",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "code": "[PackageRoot]/Sources/[TargetName]",
                  "type": "codeVoice"
                },
                {
                  "text": ". Do not escape the package root;",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "that is, values like ",
                  "type": "text"
                },
                {
                  "code": "../Foo",
                  "type": "codeVoice"
                },
                {
                  "text": " or ",
                  "type": "text"
                },
                {
                  "code": "/Foo",
                  "type": "codeVoice"
                },
                {
                  "text": " are invalid.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "path"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The name of the ",
                  "type": "text"
                },
                {
                  "code": "pkg-config",
                  "type": "codeVoice"
                },
                {
                  "text": " file for this system library.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "pkgConfig"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The providers for this system library.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "providers"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use system library targets to adapt a library installed on the system to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "work with Swift packages. Such libraries are generally installed by",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "system package managers (such as Homebrew and apt-get) and exposed to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Swift packages by providing a ",
              "type": "text"
            },
            {
              "code": "modulemap",
              "type": "codeVoice"
            },
            {
              "text": " file along with other metadata",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "such as the library’s ",
              "type": "text"
            },
            {
              "code": "pkgConfig",
              "type": "codeVoice"
            },
            {
              "text": " name.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
