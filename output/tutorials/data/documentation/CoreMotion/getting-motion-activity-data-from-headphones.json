  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This sample app demonstrates how to use ",
              "type": "text"
            },
            {
              "code": "CMHeadphoneActivityManager",
              "type": "codeVoice"
            },
            {
              "text": " to request updates when the current type of motion changes. When a change occurs, the app receives update information as a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/CoreMotion/CMMotionActivity",
              "isActive": true,
              "overridingTitle": "CMMotionActivity",
              "overridingTitleInlineContent": [
                {
                  "code": "CMMotionActivity",
                  "type": "codeVoice"
                }
              ],
              "type": "reference"
            },
            {
              "text": " object, which it uses to show a text description of the motion change.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Configure-the-sample-code-project",
          "level": 3,
          "text": "Configure the sample code project",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Because this sample app uses headphone motion updates, it needs to run on a device, not in Simulator.  To run this sample, youâ€™ll need the following:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "An iOS device with iOS 18 or later",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Headphones that support motion updates, such as AirPods Pro 2 or AirPods 4",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        }
      ],
      "kind": "content"
    }
