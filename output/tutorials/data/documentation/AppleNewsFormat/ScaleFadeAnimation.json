      "items": [
        {
          "attributes": [
            {
              "kind": "allowedValues",
              "values": [
                "scale_fade"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "This animation always has the type ",
                  "type": "text"
                },
                {
                  "code": "scale_fade",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "type",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "0.3"
            },
            {
              "kind": "minimum",
              "value": "0"
            },
            {
              "kind": "maximum",
              "value": "1"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The initial transparency of the component (and the animation). Set ",
                  "type": "text"
                },
                {
                  "code": "initialAlpha",
                  "type": "codeVoice"
                },
                {
                  "text": " to a value between ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " (completely transparent) and ",
                  "type": "text"
                },
                {
                  "code": "1",
                  "type": "codeVoice"
                },
                {
                  "text": " (completely visible).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "initialAlpha",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "number"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "0.75"
            },
            {
              "kind": "minimum",
              "value": "0"
            },
            {
              "kind": "maximum",
              "value": "1"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The initial scale of the component (and the animation). Set ",
                  "type": "text"
                },
                {
                  "code": "initialScale",
                  "type": "codeVoice"
                },
                {
                  "text": " to a value between ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " (completely scaled down) and ",
                  "type": "text"
                },
                {
                  "code": "1",
                  "type": "codeVoice"
                },
                {
                  "text": " (the component’s original size).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "initialScale",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "number"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "false"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Indicates whether the animation happens in response to user action ",
                  "type": "text"
                },
                {
                  "code": "(true",
                  "type": "codeVoice"
                },
                {
                  "text": ") or happens automatically (",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": ").",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "userControllable",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "boolean"
            }
          ]
        }
