          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"components\": [",
            "    {",
            "      \"role\": \"datatable\",",
            "      \"showDescriptorLabels\": true,",
            "      \"sortBy\": [",
            "        {",
            "          \"descriptor\": \"id-name\",",
            "          \"direction\": \"descending\"",
            "        }",
            "      ],",
            "      \"data\": {",
            "        \"descriptors\": [",
            "          {",
            "            \"identifier\": \"id-name\",",
            "            \"key\": \"name\",",
            "            \"label\": {",
            "              \"type\": \"formatted_text\",",
            "              \"text\": \"Name\",",
            "              \"textStyle\": {",
            "                \"textColor\": \"black\"",
            "              }",
            "            },",
            "            \"dataType\": \"string\"",
            "          },",
