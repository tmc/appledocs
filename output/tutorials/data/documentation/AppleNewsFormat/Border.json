          "content": [
            {
              "inlineContent": [
                {
                  "text": "Defines the stroke properties of the border. You can’t set stroke properties for each side; you can only disable or enable the border for each side.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "all",
          "required": false,
          "type": [
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/StrokeStyle",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:StrokeStyle",
              "text": "StrokeStyle"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "true"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Indicates whether Apple News applies the border to the bottom.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "bottom",
          "required": false,
          "type": [
