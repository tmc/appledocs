          "content": [
            {
              "inlineContent": [
                {
                  "text": "A component text style, with a name you define that components within this document can use.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Any Key",
          "required": false,
          "type": [
            {
