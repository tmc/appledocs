  "primaryContentSections": [
    {
      "declarations": [
        {
          "languages": [
            "data"
          ],
          "platforms": [
            "Unsupported OS: Apple News Format"
          ],
          "tokens": [
            {
              "kind": "text",
              "text": "object "
            },
            {
              "kind": "identifier",
              "text": "LinearGradientFill"
            }
          ]
        }
      ],
      "kind": "declarations"
    },
    {
      "items": [
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An array of color stops. Each stop sets a color and percentage.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Provide at least 2 ",
                  "type": "text"
                },
                {
                  "code": "colorStop",
                  "type": "codeVoice"
                },
                {
                  "text": " items.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "colorStops",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "["
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/ColorStop",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:ColorStop",
              "text": "ColorStop"
            },
            {
              "kind": "text",
              "text": "]"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "allowedValues",
              "values": [
                "linear_gradient"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Always ",
                  "type": "text"
                },
                {
                  "code": "linear_gradient",
                  "type": "codeVoice"
                },
                {
                  "text": " for this object.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "type",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "180"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The angle of the gradient fill, in degrees. Use the angle to set the direction of the gradient. For example, a value of ",
                  "type": "text"
                },
                {
                  "code": "180",
                  "type": "codeVoice"
                },
                {
                  "text": " defines a gradient that changes color from top to bottom. An angle of ",
                  "type": "text"
                },
                {
                  "code": "90",
                  "type": "codeVoice"
                },
                {
                  "text": " defines a gradient that changes color from left to right.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "If you omit ",
                  "type": "text"
                },
                {
                  "code": "angle",
                  "type": "codeVoice"
                },
                {
                  "text": ", Apple News uses an angle of ",
                  "type": "text"
                },
                {
                  "code": "180",
                  "type": "codeVoice"
                },
                {
                  "text": " (top to bottom).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "angle",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "number"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "kind": "mentions",
      "mentions": [
        "doc://com.apple.applenews/documentation/AppleNews/applying-a-background-to-a-component"
      ]
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "LinearGradientFill",
              "type": "codeVoice"
            },
            {
              "text": " object to cause the background for a component to be a linear gradient between two (or more) colors. Specify the colors you want to use and a percentage for each color along with an angle for the gradient and the behavior of the background when the person scrolls.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can use this object in ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/ComponentStyle",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"components\": [",
            "    {",
            "      \"role\": \"container\",",
            "      \"style\": \"exampleStyle\",",
            "      \"layout\": {",
            "        \"ignoreDocumentMargin\": true,",
            "        \"minimumHeight\": 150",
            "      },",
            "      \"components\": [",
            "        {",
            "          \"role\": \"title\",",
            "          \"text\": \"Season Preview: Nobody Saw This Coming\",",
            "          \"anchor\": {",
            "            \"targetAnchorPosition\": \"center\"",
            "          }",
            "        }",
            "      ]",
            "    }",
            "  ],",
            "  \"componentStyles\": {",
            "    \"exampleStyle\": {",
            "      \"fill\": {",
            "        \"type\": \"linear_gradient\",",
            "        \"angle\": 180,",
            "        \"colorStops\": [",
            "          {",
            "            \"color\": \"#00000000\"",
            "          },",
            "          {",
            "            \"color\": \"#FFFFFF\"",
            "          }",
            "        ]",
            "      }",
            "    }",
            "  }",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
