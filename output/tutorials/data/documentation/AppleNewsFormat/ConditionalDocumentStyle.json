          "content": [
            {
              "inlineContent": [
                {
                  "text": "An instance or array of conditions that, when met, cause the conditional document style properties to take effect.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "1.10.0",
          "name": "conditions",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "("
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Condition",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:Condition",
              "text": "Condition"
            },
            {
              "kind": "text",
              "text": " | ["
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Condition",
              "kind": "typeIdentifier",
