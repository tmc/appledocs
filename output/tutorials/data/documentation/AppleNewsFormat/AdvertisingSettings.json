  "primaryContentSections": [
    {
      "declarations": [
        {
          "languages": [
            "data"
          ],
          "platforms": [
            "Unsupported OS: Apple News Format"
          ],
          "tokens": [
            {
              "kind": "text",
              "text": "object "
            },
            {
              "kind": "identifier",
              "text": "AdvertisingSettings"
            }
          ]
        }
      ],
      "kind": "declarations"
    },
    {
      "items": [
        {
          "attributes": [
            {
              "kind": "default",
              "value": "any"
            },
            {
              "kind": "allowedValues",
              "values": [
                "any",
                "standard",
                "double_height",
                "large"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The banner type that should be shown.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "1.1.0",
          "name": "bannerType",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "0"
            },
            {
              "kind": "allowedTypes",
              "values": [
                [
                  {
                    "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/SupportedUnits",
                    "kind": "typeIdentifier",
                    "preciseIdentifier": "data:news_format:SupportedUnits",
                    "text": "SupportedUnits"
                  }
                ],
                [
                  {
                    "kind": "text",
                    "text": "integer"
                  }
                ]
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Either a number in points or a string referring to a supported unit of measure that describes the minimum required distance between automatically inserted advertisement components and media, such as video, images, and embeds.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "For example, you can enter a value such as ",
                  "type": "text"
                },
                {
                  "code": "10vh",
                  "type": "codeVoice"
                },
                {
                  "text": " to keep automatically inserted advertisements at 50% of the viewport height from your media content.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Version 1.1",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "1.5.0",
          "name": "distanceFromMedia",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "("
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/SupportedUnits",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:SupportedUnits",
              "text": "SupportedUnits"
            },
            {
              "kind": "text",
              "text": " | integer)"
            }
          ],
          "typeDetails": [
            {
              "baseType": "integer"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "default",
              "value": "0"
            },
            {
              "kind": "minimum",
              "value": "0"
            },
            {
              "kind": "maximum",
              "value": "10"
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A number between ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " and ",
                  "type": "text"
                },
                {
                  "code": "10",
                  "type": "codeVoice"
                },
                {
                  "text": " defining the frequency for automatically inserting advertising components into articles.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Setting this value to ",
                  "type": "text"
                },
                {
                  "code": "1",
                  "type": "codeVoice"
                },
                {
                  "text": " will automatically insert a banner advertisement in the first possible location below the screen bounds. Setting this value to ",
                  "type": "text"
                },
                {
                  "code": "2",
                  "type": "codeVoice"
                },
                {
                  "text": " inserts a banner advertisement in the first possible location below the screen bounds, and a second banner advertisement is inserted between the first banner advertisement and the end of the article. Increasing the frequency increases the frequency of banner advertisements below the first screen bounds.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "To increase the likelihood of a banner advertisement getting inserted on every screen, set the frequency to ",
                  "type": "text"
                },
                {
                  "code": "10",
                  "type": "codeVoice"
                },
                {
                  "text": ". To achieve the likelihood of every other screen, set the frequency to 5.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Leaving this property out, or providing a value of ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " means that no advertisement will be inserted.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "1.1.0",
          "name": "frequency",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "integer"
            }
          ]
        },
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Layout object that currently supports margin only. An automatically inserted advertising component uses the surrounding margins to make sure it positions itself nicely in between components. If needed, the margins that will be created around these advertisements can be defined using this layout property.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "deprecated": true,
          "name": "layout",
          "required": false,
          "type": [
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/AdvertisingLayout",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:AdvertisingLayout",
              "text": "AdvertisingLayout"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "AdvertisingSettings",
              "type": "codeVoice"
            },
            {
              "text": " object to insert dynamic advertisements between ",
              "type": "text"
            },
            {
              "code": "Body",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "Chapter",
              "type": "codeVoice"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "code": "Section",
              "type": "codeVoice"
            },
            {
              "text": ", or ",
              "type": "text"
            },
            {
              "code": "Container",
              "type": "codeVoice"
            },
            {
              "text": " components in an article.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"advertisingSettings\": {",
            "    \"frequency\": 10,",
            "    \"layout\": {",
            "      \"margin\": {",
            "        \"top\": 15,",
            "        \"bottom\": 20",
            "      }",
            "    }",
            "  }",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
