    },
    {
      "items": [
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of text characters to highlight as the link.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "rangeLength",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "integer"
            }
          ]
        },
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The starting character index for the link addition. A range starts at ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " for the first character.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "If you specify ",
                  "type": "text"
                },
                {
                  "code": "rangeStart",
                  "type": "codeVoice"
                },
                {
                  "text": ", you must also specify ",
                  "type": "text"
                },
                {
                  "code": "rangeLength",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "rangeStart",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "integer"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "allowedValues",
              "values": [
                "link"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The type of addition. Use ",
                  "type": "text"
                },
                {
                  "code": "link",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "type",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        },
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The URL to open when a person interacts with the range of text specified in the addition.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "URL",
          "required": true,
          "type": [
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/SupportedURLs",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:SupportedURLs",
              "text": "SupportedURLs"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use a ",
              "type": "text"
            },
            {
              "code": "Link",
              "type": "codeVoice"
            },
            {
              "text": " addition to add a link in a text component. You can link to an anchor in the same document, to another document in News, or to an external site.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"components\": [",
            "    {",
            "      \"role\": \"body\",",
            "      \"text\": \"This is an example of a link addition\",",
            "      \"additions\": [",
            "        {",
            "          \"type\": \"link\",",
            "          \"URL\": \"http://www.apple.com\",",
            "          \"rangeStart\": 0,",
            "          \"rangeLength\": 20",
            "        }",
            "      ]",
            "    }",
            "  ]",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
