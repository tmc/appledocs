    {
      "items": [
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The color the header background fades to, defined as a 3- to 8-character hexadecimal string or a color name string.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Default value: ",
                  "type": "text"
                },
                {
                  "code": "#000000",
                  "type": "codeVoice"
                },
                {
                  "text": " (black)",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeColor",
          "required": false,
          "type": [
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Color",
              "kind": "typeIdentifier",
              "preciseIdentifier": "data:news_format:Color",
              "text": "Color"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "allowedValues",
              "values": [
                "fading_sticky_header"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Always ",
                  "type": "text"
                },
                {
                  "code": "fading_sticky_header",
                  "type": "codeVoice"
                },
                {
                  "text": " for this scene type.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "type",
          "required": true,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "kind": "mentions",
      "mentions": [
        "doc://com.apple.applenews/documentation/AppleNews/adding-a-scene-to-a-chapter-or-a-section-header"
      ]
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "In the ",
              "type": "text"
            },
            {
              "code": "FadingStickyHeader",
              "type": "codeVoice"
            },
            {
              "text": " scene, the header briefly “sticks” to the top of the screen as the person scrolls down through the article (away from the header) as shown in ",
              "type": "text"
            },
            {
              "identifier": "https://developer.apple.com/apple-news/videos/fading-sticky-header.mp4",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can use a ",
              "type": "text"
            },
            {
              "code": "fading_sticky_header",
              "type": "codeVoice"
            },
            {
              "text": " with a ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Section",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " or ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/Chapter",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " component that has a child ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": " component. (The ",
              "type": "text"
            },
            {
              "code": "section",
              "type": "codeVoice"
            },
            {
              "text": " or ",
              "type": "text"
            },
            {
              "code": "chapter",
              "type": "codeVoice"
            },
            {
              "text": " component must contain a component with a ",
              "type": "text"
            },
            {
              "code": "role",
              "type": "codeVoice"
            },
            {
              "text": " of ",
              "type": "text"
            },
            {
              "code": "header",
              "type": "codeVoice"
            },
            {
              "text": ".) The header fades to the color you define in the ",
              "type": "text"
            },
            {
              "code": "fadeColor",
              "type": "codeVoice"
            },
            {
              "text": " property of the ",
              "type": "text"
            },
            {
              "code": "fading_sticky_header",
              "type": "codeVoice"
            },
            {
              "text": " scene.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"components\": [",
            "    {",
            "      \"role\": \"section\",",
            "      \"scene\": {",
            "        \"type\": \"fading_sticky_header\",",
            "        \"fadeColor\": \"#FFFFFF\"",
            "      },",
            "      \"components\": [",
            "        {",
            "          \"role\": \"header\",",
            "          \"style\": {",
            "            \"fill\": {",
            "              \"type\": \"image\",",
            "              \"URL\": \"bundle://header.jpg\",",
            "              \"fillMode\": \"cover\",",
            "              \"verticalAlignment\": \"top\",",
            "              \"horizontalAlignment\": \"center\"",
            "            }",
            "          },",
            "          \"layout\": {",
            "            \"minimumHeight\": \"75cw\"",
            "          },",
            "          \"components\": [",
            "            {",
            "              \"role\": \"title\",",
            "              \"text\": \"Article Title\",",
            "              \"textStyle\": {",
            "                \"textAlignment\": \"center\"",
            "              }",
            "            }",
            "          ]",
            "        }",
            "      ]",
            "    }",
            "  ]",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
