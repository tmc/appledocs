      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "code": "ConditionalComponentStyle",
              "type": "codeVoice"
            },
            {
              "text": " object to define an array of conditional component style properties and the conditions under which to apply them. When a condition is met, the value of a property in ",
              "type": "text"
            },
            {
              "code": "ConditionalComponentStyle",
              "type": "codeVoice"
            },
            {
              "text": " overrides the value of the same property if you define it in the parent ",
              "type": "text"
            },
            {
              "code": "ComponentStyle",
              "type": "codeVoice"
            },
            {
              "text": " object. See ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.applenews/documentation/AppleNewsFormat/ComponentStyle",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "anchor": "Example",
          "level": 3,
          "text": "Example",
          "type": "heading"
        },
        {
          "code": [
            "{",
            "  \"components\": [",
            "    {",
            "      \"role\": \"body\",",
            "      \"text\": \"Lorem ipsum dolor sit amet, consectetur adipiscing elit.\",",
            "      \"style\": \"exampleStyle\"",
            "    }",
            "  ],",
            "  \"componentStyles\": {",
            "    \"exampleStyle\": {",
            "      \"backgroundColor\": \"#e3e3e3\",",
            "      \"conditional\": [",
            "        {",
            "          \"backgroundColor\": \"goldenrod\",",
            "          \"conditions\": [",
            "            {",
            "              \"verticalSizeClass\": \"compact\"",
            "            }",
            "          ]",
            "        }",
            "      ]",
            "    }",
            "  }",
            "}"
          ],
          "syntax": "json",
          "type": "codeListing"
        }
