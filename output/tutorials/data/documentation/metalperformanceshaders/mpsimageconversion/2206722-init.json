        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The device that the filter will run on.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "device"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The alpha encoding for the source texture.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "srcAlpha"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The alpha encoding for the destination texture.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "destAlpha"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An array of ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/corefoundation/cgfloat",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " values giving the background color to use when flattening an image.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "The color is in the source color space. The length of the array is the number of color channels in the source color space. If this parameter is not applicable to your desired conversion, use ",
                  "type": "text"
                },
                {
                  "code": "{0}",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "backgroundColor"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The color space conversion to use. This value may be ",
                  "type": "text"
                },
                {
                  "code": "NULL",
                  "type": "codeVoice"
                },
                {
                  "text": ", indicating that no color space conversions need to be done.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "conversionInfo"
        }
