      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The Metal device the filter will run on.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "device"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The standard deviation of the gaussian blur filter.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "Gaussian weight ",
                  "type": "text"
                },
                {
                  "code": "w",
                  "type": "codeVoice"
                },
                {
                  "text": ", centered at ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": ", at integer grid ",
                  "type": "text"
                },
                {
                  "code": "i",
                  "type": "codeVoice"
                },
                {
                  "text": ", is given as:",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "code": "w(i) = 1/sqrt(2*pi*sigma) * exp(-i^2/2*sigma^2)",
                  "type": "codeVoice"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "If we take cut off at 1% of ",
                  "type": "text"
                },
                {
                  "code": "w(0)",
                  "type": "codeVoice"
                },
                {
                  "text": " (max weight) beyond which weights are considered ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": ", we have ",
                  "type": "text"
                },
                {
                  "code": "ceil(sqrt(-log(0.01)*2)*sigma) ~ ceil(3.7*sigma)",
                  "type": "codeVoice"
                },
                {
                  "text": " as the rough estimate of the filter width.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "sigma"
        }
      ]
    },
    {
