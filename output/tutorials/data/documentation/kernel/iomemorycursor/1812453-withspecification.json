          "tokens": [
            {
              "kind": "text",
              "text": "static IOMemoryCursor * withSpecification("
            },
            {
              "kind": "text",
              "text": "\n"
            },
            {
              "kind": "text",
              "text": " SegmentFunction outSegFunc, "
            },
            {
              "kind": "text",
              "text": "\n"
            },
            {
              "kind": "text",
              "text": " IOPhysicalLength maxSegmentSize = 0, "
            },
            {
              "kind": "text",
              "text": "\n"
            },
            {
              "kind": "text",
              "text": " IOPhysicalLength maxTransferSize = 0, "
            },
            {
              "kind": "text",
              "text": "\n"
            },
            {
              "kind": "text",
              "text": " IOPhysicalLength alignment = 1); "
            }
          ]
        }
      ],
      "kind": "declarations"
    },
    {
      "kind": "parameters",
      "languages": [
        "occ"
      ],
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "SegmentFunction to call to output one physical segment.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "outSegFunc"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Maximum allowable size for one segment. Defaults to 0.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "maxSegmentSize"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Maximum size of an entire transfer. Defaults to 0 indicating no maximum.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "maxTransferSize"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Alignment restrictions on output physical addresses. Not currently implemented. Defaults to single byte alignment.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "alignment"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Returns a new memory cursor if successfully created and initialized, 0 otherwise.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
