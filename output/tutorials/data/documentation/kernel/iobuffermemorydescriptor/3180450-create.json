      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The direction in which buffer data moves, relative to your process. For example, specify ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/driverkit/3852596-anonymous/kiomemorydirectionin",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " if your driver only reads from the buffer. For a list of possible values, see ",
                  "type": "text"
                },
                {
                  "code": "Memory Buffer Options",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "options"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The maximum number of bytes to allocate for the memory buffer. The buffer's initial length is set to the value in this parameter. You can change the length later by calling the ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/kernel/iobuffermemorydescriptor/3180454-setlength",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " method.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "capacity"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The minimum required alignment of the buffer in bytes. For example, specify 256 to align the buffer on an address where bits 0 to 7 are ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": ". Specify ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " if you don't require a specific alignment. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "alignment"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A variable in which to store the newly created buffer memory descriptor. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "memory"
        }
      ]
    },
