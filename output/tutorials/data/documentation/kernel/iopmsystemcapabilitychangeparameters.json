    "doc://com.apple.documentation/documentation/kernel/iopmsystemcapabilitychangeparameters/1522218-notifyref": {
      "abstract": [
        {
          "text": "An identifier for this message notification. Clients with pending I/O can signal completion by calling ",
          "type": "text"
        },
        {
          "code": "allowPowerChange()",
          "type": "codeVoice"
        },
        {
          "text": " with this value as the argument. Clients that are able to process the notification synchronously should ignore this field.",
          "type": "text"
        }
      ],
      "identifier": "doc://com.apple.documentation/documentation/kernel/iopmsystemcapabilitychangeparameters/1522218-notifyref",
