{
  "abstract": [
    {
      "text": "Let users install your extension on one device and then use and manage the extension on all their other iOS and macOS devices.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
