{
  "abstract": [
    {
      "text": "Convert your existing extension to a Safari web extension using Xcodeâ€™s command-line tool.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
