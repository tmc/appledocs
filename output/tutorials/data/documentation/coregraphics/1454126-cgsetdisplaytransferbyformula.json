      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The identifier of the display to be accessed.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "display"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The minimum value of the red channel in the gamma table. The value should be a number in the interval [0, redMax).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "redMin"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The maximum value of the red channel in the gamma table. The value should be a number in the interval (redMin, 1]. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "redMax"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A positive value used to compute the red channel in the gamma table. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "redGamma"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The minimum value of the green channel in the gamma table. The value should be a number in the interval [0, greenMax).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "greenMin"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The maximum value of the green channel in the gamma table. The value should be a number in the interval (greenMin, 1]. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "greenMax"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A positive value used to compute the green channel in the gamma table. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "greenGamma"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The minimum value of the blue channel in the gamma table. The value should be a number in the interval [0, blueMax).",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "blueMin"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The maximum value of the blue channel in the gamma table. The value should be a number in the interval (blueMin, 1]. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "blueMax"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A positive value used to compute the blue channel in the gamma table. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "blueGamma"
        }
      ]
    },
    {
      "content": [
        {
