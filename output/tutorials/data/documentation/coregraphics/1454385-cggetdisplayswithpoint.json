      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The coordinates of a point in the global display coordinate space. The origin is the upper-left corner of the main display.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "point"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The size of the ",
                  "type": "text"
                },
                {
                  "code": "dspys",
                  "type": "codeVoice"
                },
                {
                  "text": " array. This value determines the maximum number of displays the list includes. ",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "maxDisplays"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A pointer to storage you provide for an array of display IDs. On return, the array contains a list of displays with bounds that include the point. If you pass ",
                  "type": "text"
                },
                {
                  "code": "NULL",
                  "type": "codeVoice"
                },
                {
                  "text": ", on return the display count contains the total number of displays with bounds that include the point.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "dspys"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A pointer to a display count variable you provide. On return, the display count contains the actual number of displays the list includes in the ",
                  "type": "text"
                },
                {
                  "code": "dspys",
                  "type": "codeVoice"
                },
                {
                  "text": " array. This value is at most ",
                  "type": "text"
                },
                {
                  "code": "maxDisplays",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "dspyCnt"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A result code. To interpret the result code, see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgerror",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "If the ",
              "type": "text"
            },
            {
              "code": "dspys",
              "type": "codeVoice"
            },
            {
              "text": " array is ",
              "type": "text"
            },
            {
              "code": "NULL",
              "type": "codeVoice"
            },
            {
              "text": ", this function ignores the ",
              "type": "text"
            },
            {
              "code": "maxDisplays",
              "type": "codeVoice"
            },
            {
              "text": " parameter. If the ",
              "type": "text"
            },
            {
              "code": "maxDisplays",
              "type": "codeVoice"
            },
            {
              "text": " parameter is ",
              "type": "text"
            },
            {
              "code": "0",
              "type": "codeVoice"
            },
            {
              "text": ", this function ignores the ",
              "type": "text"
            },
            {
              "code": "dspys",
              "type": "codeVoice"
            },
            {
              "text": " array. In any case, this function fills in the ",
              "type": "text"
            },
            {
              "code": "dspyCnt",
              "type": "codeVoice"
            },
            {
              "text": " pointer with the number of displays that contain the specified point.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
