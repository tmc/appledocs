        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A display configuration, acquired by calling ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/1455235-cgbegindisplayconfiguration",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "configRef"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The identifier of the display to add to a mirroring set.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "display"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A display in a mirroring set, or ",
                  "type": "text"
                },
                {
                  "code": "kCGNullDirectDisplay",
                  "type": "codeVoice"
                },
                {
                  "text": " to disable mirroring. To specify the main display, use ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/1455620-cgmaindisplayid",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "masterDisplay"
        }
      ]
    },
