      ],
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A reservation token for the fade hardware you acquire by calling ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/1456391-cgacquiredisplayfadereservation",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "myToken"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The desired number of seconds for the fade operation. You should use a value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, kCGMaxDisplayReservationInterval",
                  "type": "codeVoice"
                },
                {
                  "text": "]. If the value is ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": ", Quartz applies the ending blend color immediately.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "seconds"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, 1]",
                  "type": "codeVoice"
                },
                {
                  "text": " that specifies the alpha component of the desired blend color at the beginning of the fade operation. For more information, see ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/quartz_display_services/display_fade_blend_fractions",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "startBlend"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, 1]",
                  "type": "codeVoice"
                },
                {
                  "text": " that specifies the alpha component of the desired blend color at the end of the fade operation. For more information, see ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/quartz_display_services/display_fade_blend_fractions",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "endBlend"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, 1]",
                  "type": "codeVoice"
                },
                {
                  "text": " that specifies the red component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "redBlend"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, 1]",
                  "type": "codeVoice"
                },
                {
                  "text": " that specifies the green component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "greenBlend"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval ",
                  "type": "text"
                },
                {
                  "code": "[0, 1]",
                  "type": "codeVoice"
                },
                {
                  "text": " that specifies the blue component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "blueBlend"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Pass ",
                  "type": "text"
                },
                {
                  "code": "true",
                  "type": "codeVoice"
                },
                {
                  "text": " if you want the fade operation to be synchronous; otherwise, pass ",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": ". If a fade operation is synchronous, the function doesn’t return until the operation is complete.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "synchronous"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A result code. To interpret the result code, see ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgerror",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Over the fade operation time interval, Quartz interpolates a blending coefficient between the starting and ending values given, applying a nonlinear (sine-based) bias term. Using this coefficient, Quartz blends the video output with the specified color.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example shows how to perform a 2-second synchronous fade-out to black: ",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "CGDisplayFade (",
            "    myToken,",
            "    2.0,                        // 2 seconds",
            "    kCGDisplayBlendNormal,      // starting state",
            "    kCGDisplayBlendSolidColor,  // ending state",
            "    0.0, 0.0, 0.0,              // black",
            "    true                        // wait for completion",
            ");"
          ],
          "metadata": {
            "anchor": "1967888",
            "title": "Listing 1"
          },
          "syntax": "occ",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "To perform a 2-second asynchronous fade-in from black: ",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "CGDisplayFade (",
            "    myToken,",
            "    2.0,                        // 2 seconds",
            "    kCGDisplayBlendSolidColor,  // starting state",
            "    kCGDisplayBlendNormal,      // ending state",
            "    0.0, 0.0, 0.0,              // black",
            "    false                       // don't wait for completion",
            ");"
          ],
          "metadata": {
            "anchor": "1967894",
            "title": "Listing 2"
          },
          "syntax": "occ",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "If you specify an asynchronous fade operation, it’s safe to call ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/coregraphics/1455230-cgreleasedisplayfadereservation",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " immediately after this function returns.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
