      ],
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A display configuration, acquired by calling ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/1455235-cgbegindisplayconfiguration",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "configRef"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The time, in seconds, to fade from the normal display to the specified fade color. The fade out is completed before the display configuration is changed. If the interval is 0, Quartz applies the color immediately.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeOutSeconds"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The time, in seconds, to return from the specified fade color to the normal display. The fade-in is run asynchronously after the display configuration is changed.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeInSeconds"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval [0, 1] that represents the red component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeRed"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval [0, 1] that represents the green component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeGreen"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An intensity value in the interval [0, 1] that represents the blue component of the desired blend color.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "fadeBlue"
        }
      ]
    },
    {
      "content": [
        {
