      ],
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A constant that specifies the type of box. For possible values, see ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coregraphics/cgpdfbox",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "box"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A Quartz rectangle.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "rect"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An integer, that must be a multiple of ",
                  "type": "text"
                },
                {
                  "code": "90",
                  "type": "codeVoice"
                },
                {
                  "text": ", that specifies the angle by which the specified rectangle is rotated clockwise.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "rotate"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A Boolean value that specifies whether or not the aspect ratio should be preserved. A value of ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/swift/true",
                  "isActive": false,
                  "type": "reference"
                },
                {
                  "text": " specifies that the aspect ratio should be preserved.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "preserveAspectRatio"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return_value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "An affine transform that maps the box specified by the ",
              "type": "text"
            },
            {
              "code": "box",
              "type": "codeVoice"
            },
            {
              "text": " parameter to the rectangle specified by the ",
              "type": "text"
            },
            {
              "code": "rect",
              "type": "codeVoice"
            },
            {
              "text": " parameter.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Quartz constructs the affine transform as follows:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Computes the effective rectangle by intersecting the rectangle associated with ",
                      "type": "text"
                    },
                    {
                      "code": "box",
                      "type": "codeVoice"
                    },
                    {
                      "text": " and the ",
                      "type": "text"
                    },
                    {
                      "code": "/MediaBox",
                      "type": "codeVoice"
                    },
                    {
                      "text": " entry of the specified page.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Rotates the effective rectangle according to the page’s ",
                      "type": "text"
                    },
                    {
                      "code": "/Rotate",
                      "type": "codeVoice"
                    },
                    {
                      "text": " entry.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Centers the resulting rectangle on ",
                      "type": "text"
                    },
                    {
                      "code": "rect",
                      "type": "codeVoice"
                    },
                    {
                      "text": ".If the value of the ",
                      "type": "text"
                    },
                    {
                      "code": "rotate",
                      "type": "codeVoice"
                    },
                    {
                      "text": " parameter is non-zero, then the rectangle is rotated clockwise by rotate degrees. The value of ",
                      "type": "text"
                    },
                    {
                      "code": "rotate",
                      "type": "codeVoice"
                    },
                    {
                      "text": " must be a multiple of 90.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Scales the rectangle, if necessary, so that it coincides with the edges of ",
                      "type": "text"
                    },
                    {
                      "code": "rect",
                      "type": "codeVoice"
                    },
                    {
                      "text": ". If the value of ",
                      "type": "text"
                    },
                    {
                      "code": "preserveAspectRatio",
                      "type": "codeVoice"
                    },
                    {
                      "text": " parameter is ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.documentation/documentation/swift/true",
                      "isActive": false,
                      "type": "reference"
                    },
                    {
                      "text": ", then the final rectangle coincides with the edges of ",
                      "type": "text"
                    },
                    {
                      "code": "rect",
                      "type": "codeVoice"
                    },
                    {
                      "text": " only in the more restrictive dimension.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "unorderedList"
        }
      ],
      "kind": "content"
    }
