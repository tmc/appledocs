{
  "abstract": [
    {
      "text": "Enable the background mode for audio, location updates, remote notifications, or workouts.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
