          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The NTP server to connect to. In macOS 10.13 and earlier, use commas to separate multiple time servers.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "10.12.4",
          "name": "timeServer",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        },
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The time zone path location string in ",
                  "type": "text"
                },
                {
                  "code": "/usr/share/zoneinfo/",
                  "type": "codeVoice"
                },
                {
                  "text": "; for example, ",
                  "type": "text"
                },
                {
                  "code": "America/Denver",
                  "type": "codeVoice"
                },
                {
                  "text": " or ",
                  "type": "text"
                },
                {
                  "code": "Zulu",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "10.12.4",
          "name": "timeZone",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "string"
            }
          ]
        }
