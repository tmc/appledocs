                {
                  "code": "PayloadDisplayName",
                  "type": "codeVoice"
                },
                {
                  "text": " or ",
                  "type": "text"
                },
                {
                  "code": "PayloadDescription",
                  "type": "codeVoice"
                },
                {
                  "text": " is entered into this field before the rule is added to the System Policy database.",
                  "type": "text"
                }
