{
  "abstract": [
    {
      "text": "Maintain the bypass code parameters for disabling Activation Lock.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
