      "kind": "declarations"
    },
    {
      "items": [
        {
          "attributes": [],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of seconds before a device goes to sleep after being idle. The minimum value for this setting is ",
                  "type": "text"
                },
                {
                  "code": "120",
                  "type": "codeVoice"
                },
                {
                  "text": " seconds.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "5.0.0",
          "name": "AutoLockTime",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "integer"
            }
          ]
        },
        {
          "attributes": [
            {
              "kind": "allowedValues",
              "values": [
                "0",
                "60",
                "300",
                "900",
                "3600",
                "14400"
              ]
            }
          ],
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of seconds before a locked screen requires the user to enter the device passcode to unlock it. The minimum value is ",
                  "type": "text"
                },
                {
                  "code": "0",
                  "type": "codeVoice"
                },
                {
                  "text": " seconds and the maximum value is ",
                  "type": "text"
                },
                {
                  "code": "14400",
                  "type": "codeVoice"
                },
                {
                  "text": " seconds.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "If a device has a passcode, a change to a larger value doesn’t take effect until the user logs out or removes the passcode. For this reason, it’s better to set this value before the user sets a passcode.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            },
            {
              "inlineContent": [
                {
                  "text": "This setting won’t take effect if ",
                  "type": "text"
                },
                {
                  "code": "TemporarySessionOnly",
                  "type": "codeVoice"
                },
                {
                  "text": " is ",
                  "type": "text"
                },
                {
                  "code": "true",
                  "type": "codeVoice"
                },
                {
                  "text": " because there’s no passcode for a temporary session.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "introducedVersion": "5.0.0",
          "name": "PasscodeLockGracePeriod",
          "required": false,
          "type": [
            {
              "kind": "text",
              "text": "integer"
            }
          ]
        }
      ],
      "kind": "properties",
      "title": "Properties"
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This setting is only available on Shared iPad on iPadOS 17 and later.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
