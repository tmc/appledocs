{
  "abstract": [
    {
      "text": "Provide necessary customer communications to notify and gather applicable consent before you initiate a price change.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
        "doc://com.apple.advancedcommerceapi/documentation/AdvancedCommerceAPI"
      ]
    ]
  },
  "identifier": {
    "interfaceLanguage": "data",
    "url": "doc://com.apple.advancedcommerceapi/documentation/AdvancedCommerceAPI/handling-subscription-price-changes"
  },
  "kind": "article",
  "legalNotices": {
