    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Whether scrolling should be enabled or disabled for this",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "input.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "behavior"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The input for which to enable or disable scrolling.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "input"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "In contrast to ",
              "type": "text"
            },
            {
              "code": "View/scrollDisabled(_:)",
              "type": "codeVoice"
            },
            {
              "text": ", this modifier will enable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "or disable scrolling only for particular inputs. The following, for",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "instance, disables double-tap-to-scroll on watchOS while preserving",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "the ability to scroll via touch and the Digital Crown:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "ScrollView(...)",
            "    .scrollInputBehavior(.disabled, for: .handGestureShortcut)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "If ",
              "type": "text"
            },
            {
              "code": "scrollDisabled(true)",
              "type": "codeVoice"
            },
            {
              "text": " has been applied to this view, scrolling will",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "be disabled for all inputs and this modifier cannot be used to re-enable",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "scrolling.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
