      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The ratio of width to height to use for the resulting",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "view. Use ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": " to maintain the current aspect ratio in the",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "resulting view.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "aspectRatio"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A flag that indicates whether this view fits or fills",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "the parent context.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "contentMode"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A view that constrains this view’s dimensions to the aspect",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "ratio of the given size using ",
              "type": "text"
            },
            {
              "code": "contentMode",
              "type": "codeVoice"
            },
            {
              "text": " as its scaling algorithm.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Use ",
              "type": "text"
            },
            {
              "code": "aspectRatio(_:contentMode:)",
              "type": "codeVoice"
            },
            {
              "text": " to constrain a view’s dimensions to an",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "aspect ratio specified by a",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/corefoundation/cgfloat",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "using the specified content mode.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "If this view is resizable, the resulting view will have ",
              "type": "text"
            },
            {
              "code": "aspectRatio",
              "type": "codeVoice"
            },
            {
              "text": " as",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "its aspect ratio. In this example, the purple ellipse has a 3:4",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "width-to-height ratio, and scales to fit its frame:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "Ellipse()",
            "    .fill(Color.purple)",
            "    .aspectRatio(0.75, contentMode: .fit)",
            "    .frame(width: 200, height: 200)",
            "    .border(Color(white: 0.75))"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
