      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "When this view appears or disappears, the transition will be applied to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "it, allowing for animating it in and out.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following code will conditionally show MyView, and when it appears",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "or disappears, will use a custom RotatingFadeTransition transition to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "show it.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if isActive {",
            "    MyView()",
            "        .transition(RotatingFadeTransition())",
            "}",
            "Button(\"Toggle\") {",
            "    withAnimation {",
            "        isActive.toggle()",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
