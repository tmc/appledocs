      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "For example, this is how an adjustable action to navigate",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "through pages could be added to a view.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "var body: some View {",
            "    PageControl()",
            "        .accessibilityAdjustableAction { direction in",
            "            switch direction {",
            "            case .increment:",
            "                // Go to next page",
            "            case .decrement:",
            "                // Go to previous page",
            "            }",
            "        }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
