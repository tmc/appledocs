            {
              "inlineContent": [
                {
                  "text": "An optional ",
                  "type": "text"
                },
                {
                  "code": "Text",
                  "type": "codeVoice"
                },
                {
                  "text": " view to display as a badge.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "Set the value to ",
                  "type": "text"
                },
                {
                  "code": "nil",
                  "type": "codeVoice"
                },
                {
                  "text": " to hide the badge.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
