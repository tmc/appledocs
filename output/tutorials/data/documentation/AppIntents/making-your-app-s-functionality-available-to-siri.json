  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Using this sample app, people can keep track of photos and videos they capture with their device and can use Siri to access app functionality.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "To make its main functionality available to Siri, the app uses the App Intents framework.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Session 10133: ",
                  "type": "text"
                },
                {
                  "identifier": "https://developer.apple.com/wwdc24/10133/",
                  "isActive": true,
                  "type": "reference"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Related sessions from WWDC24",
          "style": "note",
          "type": "aside"
        },
        {
          "anchor": "Make-app-functionality-available-to-Siri",
          "level": 3,
          "text": "Make app functionality available to Siri",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This sample uses ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.AppIntents/documentation/AppIntents/app-intent-domains",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to make the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.AppIntents/documentation/AppIntents/AppEnum",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.AppIntents/documentation/AppIntents/AppEntity",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", and ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.AppIntents/documentation/AppIntents/AppIntent",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " implementations available to Siri as shown in the following example:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@AssistantEnum(schema: .photos.assetType)",
            "enum AssetType: String, AppEnum {",
            "    case photo",
            "    case video",
            "",
            "    static let caseDisplayRepresentations: [AssetType : DisplayRepresentation]  = [",
            "        .photo: \"Photo\",",
            "        .video: \"Video\"",
            "    ]",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "anchor": "Make-data-available-in-Spotlight",
          "level": 3,
          "text": "Make data available in Spotlight",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "People can use Spotlight to search for data the sample contains. To enable this functionality, the sample defines an app entity that conforms to ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/AppIntents/IndexedEntity",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ":",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "@AssistantEntity(schema: .photos.asset)",
            "struct AssetEntity: IndexedEntity {",
            "",
            "    // MARK: Static",
            "",
            "    static let defaultQuery = AssetQuery()",
            "",
            "    // MARK: Properties",
            "",
            "    let id: String",
            "    let asset: Asset",
            "",
            "    @Property(title: \"Title\")",
            "    var title: String?",
            "",
            "    var creationDate: Date?",
            "    var location: CLPlacemark?",
            "    var assetType: AssetType?",
            "    var isFavorite: Bool",
            "    var isHidden: Bool",
            "    var hasSuggestedEdits: Bool",
            "",
            "    var displayRepresentation: DisplayRepresentation {",
            "        DisplayRepresentation(",
            "            title: title.map { \"\\($0)\" } ?? \"Unknown\",",
            "            subtitle: assetType?.localizedStringResource ?? \"Photo\"",
            "        )",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "anchor": "Make-app-entities-shareable",
          "level": 3,
          "text": "Make app entities shareable",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "By adopting the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/CoreTransferable/Transferable",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " protocol, this sample makes the data it describes",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "as app entities more shareable and allows other apps to understand its data formats.",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "For example, the sample’s ",
              "type": "text"
            },
            {
              "code": "AssetEntity",
              "type": "codeVoice"
            },
            {
              "text": " implements ",
              "type": "text"
            },
            {
              "code": "Transferable",
              "type": "codeVoice"
            },
            {
              "text": " to make it easy to share a photo",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "as a PNG image with Siri or the share sheet:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "extension AssetEntity: Transferable {",
            "",
            "    struct AssetQuery: EntityQuery {",
            "        @Dependency",
            "        var library: MediaLibrary",
            "",
            "        @MainActor",
            "        func entities(for identifiers: [AssetEntity.ID]) async throws -> [AssetEntity] {",
            "            library.assets(for: identifiers).map(\\.entity)",
            "        }",
            "",
            "        @MainActor",
            "        func suggestedEntities() async throws -> [AssetEntity] {",
            "            // Suggest the first three assets in the photo library.",
            "            library.assets.prefix(3).map(\\.entity)",
            "        }",
            "    }",
            "",
            "    static var transferRepresentation: some TransferRepresentation {",
            "        DataRepresentation(exportedContentType: .png) { entity in",
            "            try await entity.asset.pngData()",
            "        }",
            "    }",
            "}"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "anchor": "Make-onscreen-content-available-to-Siri-and-Apple-Intelligence",
          "level": 3,
          "text": "Make onscreen content available to Siri and Apple Intelligence",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "When the user asks a question about onscreen content or wants to perform an action on it, Siri and Apple Intelligence can retrieve the content to respond to the question and perform the action. If the user explicitly requests it, Siri and Apple Intelligence can send content to supported third-party services. For example, someone could view a photo and use Siri to describe things a person can do with an identified object in the photo by saying or typing a phrase like “Hey Siri, what can I do with the object in this photo?”",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "To integrate onscreen content with current and upcoming personal intelligence features of Siri and Apple Intelligence, the sample’s ",
              "type": "text"
            },
            {
              "code": "AssetEntity",
              "type": "codeVoice"
            },
            {
              "text": " conforms to the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/CoreTransferable/Transferable",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " protocol and the ",
              "type": "text"
            },
            {
              "code": ".photos.asset",
              "type": "codeVoice"
            },
            {
              "text": " schema. When a person views a photo, the app associates the asset entity with an ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/foundation/nsuseractivity",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " to make the photo available to Siri and Apple Intelligence:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "var body: some View {",
            "    // ...",
            "    MediaView(",
            "        image: image,",
            "        duration: asset.duration,",
            "        isFavorite: asset.isFavorite,",
            "        proxy: proxy",
            "    )",
            "    .userActivity(",
            "        \"com.example.apple-samplecode.AssistantSchemasExample.ViewingPhoto\",",
            "        element: asset.entity",
            "    ) { asset, activity in",
            "        activity.title = \"Viewing a photo\"",
            "        activity.appEntityIdentifier = EntityIdentifier(for: asset)",
            "    }",
            "    // ..."
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "For more information about making onscreen content available to Siri and Apple Intelligence, refer to ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.documentation/documentation/AppIntents/Making-onscreen-content-available-to-siri-and-apple-intelligence",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
