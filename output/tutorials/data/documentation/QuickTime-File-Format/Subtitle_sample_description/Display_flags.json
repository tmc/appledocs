  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The following flags are defined:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Controls vertical placement of the subtitle text. If this flag is set, the subtitle media handler uses the top coordinate of the display bounds of the override ",
                        "type": "text"
                      },
                      {
                        "code": "'tbox'",
                        "type": "codeVoice"
                      },
                      {
                        "text": " text box to determine the subtitle’s vertical placement as described in ",
                        "type": "text"
                      },
                      {
                        "identifier": "doc://com.apple.qtff/documentation/QuickTime-File-Format/Subtitle_track_header_size_and_placement",
                        "isActive": true,
                        "type": "reference"
                      },
                      {
                        "text": ". Otherwise, the subtitle displays at the bottom of the video. This flag’s value is ",
                        "type": "text"
                      },
                      {
                        "code": "0x20000000",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Vertical placement",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "Indicates whether any subtitle samples contain forced atoms. If this flag is set, at least one sample contains a forced (",
                        "type": "text"
                      },
                      {
                        "code": "'frcd'",
                        "type": "codeVoice"
                      },
                      {
                        "text": ") atom as described in ",
                        "type": "text"
                      },
                      {
                        "identifier": "doc://com.apple.qtff/documentation/quicktime-file-format/Subtitle_sample_data",
                        "isActive": true,
                        "type": "reference"
                      },
                      {
                        "text": ". This flag’s value is ",
                        "type": "text"
                      },
                      {
                        "code": "0x40000000",
                        "type": "codeVoice"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "Some samples are forced",
                    "type": "text"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "If this flag is set, the subtitle media handler treats all samples as forced subtitles, regardless of the presence or absence of a ",
                        "type": "text"
                      },
                      {
                        "code": "'frcd'",
                        "type": "codeVoice"
                      },
                      {
                        "text": " atom. This flag’s value is ",
                        "type": "text"
                      },
                      {
                        "code": "0x80000000",
                        "type": "codeVoice"
                      },
                      {
                        "text": ". If this flag is set, the Some Samples Are Forced flag must also be set (making ",
                        "type": "text"
                      },
                      {
                        "code": "0xC0000000",
                        "type": "codeVoice"
                      },
                      {
                        "text": ").",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "text": "All samples are forced",
                    "type": "text"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        }
      ],
      "kind": "content"
    }
  ],
