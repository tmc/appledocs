  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The node location atom is the only child atom defined for the node ID atom. Its atom type is ",
              "type": "text"
            },
            {
              "code": "kQTVRNodeLocationAtomType",
              "type": "codeVoice"
            },
            {
              "text": " (",
              "type": "text"
            },
            {
              "code": "'nloc'",
              "type": "codeVoice"
            },
            {
              "text": "). A node location atom describes the type of a node and its location.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The structure of a node location atom is defined by the ",
              "type": "text"
            },
            {
              "code": "QTVRNodeLocationAtom",
              "type": "codeVoice"
            },
            {
              "text": " data type:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "typedef struct VRNodeLocationAtom {",
            "    UInt16                              majorVersion;",
            "    UInt16                              minorVersion;",
            "    OSType                              nodeType;",
            "    UInt32                              locationFlags;",
            "    UInt32                              locationData;",
            "    UInt32                              reserved1;",
            "    UInt32                              reserved2;",
            "} VRNodeLocationAtom, *QTVRNodeLocationAtomPtr;",
            "QT",
            "QT"
          ],
          "syntax": "c",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
