  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A closed caption media track contains text data used for closed captioning in QuickTime movies. It has a media type of ",
              "type": "text"
            },
            {
              "code": "'clcp'",
              "type": "codeVoice"
            },
            {
              "text": ". Closed captions are used to display the audio portions of a movie as text. They transcribe dialog and indicate other sounds.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Other tracks can identify this track as being a related closed captioning track by using the ",
              "type": "text"
            },
            {
              "code": "'clcp'",
              "type": "codeVoice"
            },
            {
              "text": " track reference to refer to this track.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Like other media data tracks, a closed caption track should include a language code and an extended language tag atom.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
