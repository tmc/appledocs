  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The subtitle sample description contains information that defines how to interpret subtitle media data. This sample description is based on the standard sample description header, as described in ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.qtff/documentation/quicktime-file-format/Sample_description_atom",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Only one sample description is permitted in a ",
                  "type": "text"
                },
                {
                  "code": "'sbtl'",
                  "type": "codeVoice"
                },
                {
                  "text": " track.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "inlineContent": [
            {
              "text": "The data format field in the sample description is currently always set to ",
              "type": "text"
            },
            {
              "code": "'tx3g'",
              "type": "codeVoice"
            },
            {
              "text": ". Unrecognized data formats should be ignored. The text media described here is based on the text box defined in the 3GPP Timed Text specification but provides a different track type and media handler designed specifically for subtitles.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The subtitle media handler adds some of its own fields to the sample description.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
