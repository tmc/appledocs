  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Before you can add atoms to an atom container, you must first create the container by calling ",
              "type": "text"
            },
            {
              "code": "QTNewAtomContainer",
              "type": "codeVoice"
            },
            {
              "text": ". The code sample shown in the following calls ",
              "type": "text"
            },
            {
              "code": "QTNewAtomContainer",
              "type": "codeVoice"
            },
            {
              "text": " to create an atom container.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "QTAtomContainer spriteData;",
            "OSErr err",
            "// Create an atom container to hold a sprite’s data.",
            "err=QTNewAtomContainer (&spriteData);"
          ],
          "syntax": "c",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "When you have finished using an atom container, dispose of it by calling the ",
              "type": "text"
            },
            {
              "code": "QTDisposeAtomContainer",
              "type": "codeVoice"
            },
            {
              "text": " function. The sample code shown in the following listing calls ",
              "type": "text"
            },
            {
              "code": "QTDisposeAtomContainer",
              "type": "codeVoice"
            },
            {
              "text": " to dispose of the ",
              "type": "text"
            },
            {
              "code": "spriteData",
              "type": "codeVoice"
            },
            {
              "text": " atom container.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "if (spriteData)",
            "    QTDisposeAtomContainer (spriteData);"
          ],
          "syntax": "c",
          "type": "codeListing"
        }
      ],
      "kind": "content"
    }
  ],
