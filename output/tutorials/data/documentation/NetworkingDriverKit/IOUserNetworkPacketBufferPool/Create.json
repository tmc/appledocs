    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The object that owns the packet buffer pool. Typically, you specify your custom ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.networkingdriverkit/documentation/NetworkingDriverKit/IOUserNetworkEthernet",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " object as the owner of a pool, but you may choose a different object.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "poolOwner"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The name to assign to the pool.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "name"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of packets to support in the pool.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "packetCount"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of buffers to create to store the packet data. Specify a value that is the same size or larger than the value in ",
                  "type": "text"
                },
                {
                  "code": "packetCount",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "bufferCount"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The number of bytes in each packet buffer.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "bufferSize"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "On return, the newly allocated packet buffer pool, or ",
                  "type": "text"
                },
                {
                  "code": "NULL",
                  "type": "codeVoice"
                },
                {
                  "text": " if an error occurred.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "pool"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
