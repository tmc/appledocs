    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The visibility of this sectionâ€™s separators.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "visibility"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "The set of row edges for which the preference applies.",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "The list style might already decide to not display separators for",
                  "type": "text"
                },
                {
                  "text": " ",
                  "type": "text"
                },
                {
                  "text": "some edges. The default is ",
                  "type": "text"
                },
                {
                  "code": "VerticalEdge/Set/all",
                  "type": "codeVoice"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "edges"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Separators can be presented above and below a section. You can specify to",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "which edge this preference should apply.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "This modifier expresses a preference to the containing ",
              "type": "text"
            },
            {
              "code": "List",
              "type": "codeVoice"
            },
            {
              "text": ". The list",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "style is the final arbiter of the separator visibility.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The following example shows a simple grouped list whose bottom",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "sections separator are hidden:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "List {",
            "    ForEach(garage) { garage in",
            "        Section(header: Text(garage.location)) {",
            "            ForEach(garage.cars) { car in",
            "                Text(car.model)",
            "                    .listRowSeparatorTint(car.brandColor)",
            "            }",
            "        }",
            "        .listSectionSeparator(.hidden, edges: .bottom)",
            "    }",
            "}",
            ".listStyle(.grouped)"
          ],
          "syntax": "swift",
          "type": "codeListing"
        },
        {
          "inlineContent": [
            {
              "text": "To change the visibility and tint color for a row separator, use",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "View/listRowSeparator(_:edges:)",
              "type": "codeVoice"
            },
            {
              "text": " and",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "View/listRowSeparatorTint(_:edges:)",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "To set the tint color for a section separator, use",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "code": "View/listSectionSeparatorTint(_:edges:)",
              "type": "codeVoice"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
