            {
              "inlineContent": [
                {
                  "text": "The index of the offline GPU with which to create the context; a number between zero and the value returned by the ",
                  "type": "text"
                },
                {
                  "identifier": "doc://com.apple.documentation/documentation/coreimage/cicontext/1437817-offlinegpucount",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": " method.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
