            {
              "inlineContent": [
                {
                  "text": "The size, in default user space units, of the layer relative to the graphics context.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "size"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A dictionary, which is passed to ",
                  "type": "text"
                },
                {
                  "code": "CGLayerCreateWithContext",
                  "type": "codeVoice"
                },
                {
                  "text": " as the ",
                  "type": "text"
                },
                {
                  "code": "auxiliaryInfo",
                  "type": "codeVoice"
                },
                {
                  "text": " parameter. Pass ",
                  "type": "text"
                },
                {
                  "code": "NULL",
                  "type": "codeVoice"
                },
                {
                  "text": " because this parameter is reserved for future use.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "d"
        }
