      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "This method applies the column average filter to an image. This effect calculates the average color for a vertical column over a region defined by ",
              "type": "text"
            },
            {
              "code": "extent",
              "type": "codeVoice"
            },
            {
              "text": ". The width of the resulting image is set by the width of the ",
              "type": "text"
            },
            {
              "code": "extent",
              "type": "codeVoice"
            },
            {
              "text": ". The height of the resulting image is always 1 pixel.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "The column average filter uses the following properties:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": "An image with the type ",
                        "type": "text"
                      },
                      {
                        "identifier": "doc://com.apple.documentation/documentation/coreimage/ciimage",
                        "isActive": true,
                        "type": "reference"
                      },
                      {
                        "text": ".",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "inputImage",
                    "type": "codeVoice"
                  }
                ]
              }
            },
            {
              "definition": {
                "content": [
                  {
                    "inlineContent": [
                      {
                        "text": " A ",
                        "type": "text"
                      },
                      {
                        "identifier": "doc://com.apple.documentation/documentation/corefoundation/cgrect",
                        "isActive": true,
                        "type": "reference"
                      },
                      {
                        "text": " that specifies the subregion of the image that you want to process.",
                        "type": "text"
                      }
                    ],
                    "type": "paragraph"
                  }
                ]
              },
              "term": {
                "inlineContent": [
                  {
                    "code": "extent",
                    "type": "codeVoice"
                  }
                ]
              }
            }
          ],
          "type": "termList"
        },
        {
          "inlineContent": [
            {
              "text": "The following code creates an image containing the average values in the columns from the middle of the image:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "code": [
            "func columnAverage(inputImage: CIImage) -> CIImage {",
            "    let filter = CIFilter.columnAverage()",
            "    filter.inputImage = inputImage",
            "    filter.extent = CGRect(x: 0, y: inputImage.extent.height/3, width: inputImage.extent.width, height: inputImage.extent.height/3)",
            "    return filter.outputImage!",
            "}"
          ],
          "metadata": {
            "anchor": "3625808",
            "title": "Listing 1"
          },
