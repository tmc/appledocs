{
  "abstract": [
    {
      "text": "Add an activity item to an activity to record additional information about a student’s attempt to complete a task.",
      "type": "text"
    }
  ],
  "hierarchy": {
    "paths": [
      [
        "doc://com.apple.documentation/documentation/technologies",
