{
  "abstract": [
    {
      "text": "Runs an executable tool with root privileges.",
      "type": "text"
    }
  ],
  "deprecationSummary": [
    {
      "inlineContent": [
        {
          "text": "Use a launchd-launched helper tool and/or the Service Management framework for this functionality.",
          "type": "text"
        }
      ],
      "type": "paragraph"
    }
  ],
