    {
      "kind": "parameters",
      "parameters": [
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "An SSL session context reference.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "context"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "A Boolean flag representing whether the certificate expiration times are ignored. The default for this flag is ",
                  "type": "text"
                },
                {
                  "code": "false",
                  "type": "codeVoice"
                },
                {
                  "text": ", meaning expired certificates result in an ",
                  "type": "text"
                },
                {
                  "code": "errSSLCertExpired",
                  "type": "codeVoice"
                },
                {
                  "text": " result code.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "allowsExpired"
        }
      ]
    },
    {
      "content": [
        {
          "anchor": "return-value",
          "level": 2,
          "text": "Return Value",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "A result code. See ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.security/documentation/Security/secure-transport-result-codes",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ".",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "You can use this function to allow the handshake to succeed even if one or more certificates in the certificate chain have expired. You can use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.security/documentation/Security/SSLGetAllowsExpiredCerts",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " function to determine the current setting of the ",
              "type": "text"
            },
            {
              "code": "allowsExpired",
              "type": "codeVoice"
            },
            {
              "text": " flag.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Use the ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.security/documentation/Security/SSLSetAllowsExpiredRoots",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": " function to set a flag specifying whether expired root certificates are allowed.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
  ],
