    },
    {
      "content": [
        {
          "anchor": "Discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The returned size includes all Datagram Transport Layer Security (DTLS) headers.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "You can specify a new size by calling ",
              "type": "text"
            },
            {
              "identifier": "doc://com.apple.security/documentation/Security/SSLSetMaxDatagramRecordSize(_:_:)",
              "isActive": true,
              "type": "reference"
            },
            {
              "text": ", up to the maximum size of a UDP packet (which, in turn, is based on the underlying IP protocol).",
              "type": "text"
            }
          ],
          "type": "paragraph"
        }
      ],
      "kind": "content"
    }
