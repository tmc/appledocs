      "content": [
        {
          "anchor": "discussion",
          "level": 2,
          "text": "Discussion",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "The tolerance is used by the ",
              "type": "text"
            },
            {
              "code": "fitted",
              "type": "codeVoice"
            },
            {
              "text": " method to decide when progress is no longer being made, in which case the",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "training process will stop before the specified maximum number of iterations (known as early stopping).",
              "type": "text"
            },
            {
              "text": " ",
              "type": "text"
            },
            {
              "text": "Significant progress happens when the validation loss decreases by at least the tolerance.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "inlineContent": [
            {
              "text": "Defaults to 0.01.",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "Early stopping only happens when using the ",
                  "type": "text"
                },
                {
                  "code": "fitted",
                  "type": "codeVoice"
                },
                {
                  "text": " method with validation data.",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        }
      ],
      "kind": "content"
    }
