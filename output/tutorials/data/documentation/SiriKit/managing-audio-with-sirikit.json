  "primaryContentSections": [
    {
      "content": [
        {
          "anchor": "Overview",
          "level": 2,
          "text": "Overview",
          "type": "heading"
        },
        {
          "content": [
            {
              "inlineContent": [
                {
                  "text": "This sample code project is associated with WWDC 2020 session ",
                  "type": "text"
                },
                {
                  "identifier": "https://developer.apple.com/videos/play/wwdc2020/10061/",
                  "isActive": true,
                  "type": "reference"
                },
                {
                  "text": ".",
                  "type": "text"
                }
              ],
              "type": "paragraph"
            }
          ],
          "name": "Note",
          "style": "note",
          "type": "aside"
        },
        {
          "anchor": "Configure-the-Sample-Code-Project",
          "level": 3,
          "text": "Configure the Sample Code Project",
          "type": "heading"
        },
        {
          "inlineContent": [
            {
              "text": "Before you run the sample code project in Xcode:",
              "type": "text"
            }
          ],
          "type": "paragraph"
        },
        {
          "items": [
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create an App Group for ",
                      "type": "text"
                    },
                    {
                      "code": "com.example.apple-samplecode.ControlAudio.Shared",
                      "type": "codeVoice"
                    },
                    {
                      "text": " in your developer portal.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create an App ID for ",
                      "type": "text"
                    },
                    {
                      "code": "com.example.apple-samplecode.ControlAudio",
                      "type": "codeVoice"
                    },
                    {
                      "text": " in your developer portal and enable it for App Groups, specifying the group you created in the previous step. Additionally, enable SiriKit.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create a Music ID for ",
                      "type": "text"
                    },
                    {
                      "code": "music.com.example.apple-samplecode.ControlAudio",
                      "type": "codeVoice"
                    },
                    {
                      "text": " in your developer portal.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create a Key for the MusicKit service and create a developer token. For more information on this process, see ",
                      "type": "text"
                    },
                    {
                      "identifier": "doc://com.apple.documentation/documentation/AppleMusicAPI/generating-developer-tokens",
                      "isActive": true,
                      "overridingTitle": "Generating Developer Tokens",
                      "overridingTitleInlineContent": [
                        {
                          "text": "Generating Developer Tokens",
                          "type": "text"
                        }
                      ],
                      "type": "reference"
                    },
                    {
                      "text": ".",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Copy the developer token to the ",
                      "type": "text"
                    },
                    {
                      "code": "developerToken",
                      "type": "codeVoice"
                    },
                    {
                      "text": " variable in the ",
                      "type": "text"
                    },
                    {
                      "code": "AppleMusicAPIController.swift",
                      "type": "codeVoice"
                    },
                    {
                      "text": " file.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Create a provisioning profile for ",
                      "type": "text"
                    },
                    {
                      "code": "com.example.apple-samplecode.ControlAudio",
                      "type": "codeVoice"
                    },
                    {
                      "text": " and ",
                      "type": "text"
                    },
                    {
                      "code": "com.example.apple-samplecode.ControlAudio.ControlAudioExtension",
                      "type": "codeVoice"
                    },
                    {
                      "text": " in your developer portal.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            },
            {
              "content": [
                {
                  "inlineContent": [
                    {
                      "text": "Associate the provisioning profiles with the project in Xcode signing settings.",
                      "type": "text"
                    }
                  ],
                  "type": "paragraph"
                }
              ]
            }
          ],
          "type": "orderedList"
        }
      ],
      "kind": "content"
    }
  ],
